<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/updateFareTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingTop="@dimen/_5sdp"
        android:drawableEnd="@drawable/ic_close_24_white"
        android:text="@string/update_fare"
        style="@style/TextStyleBold"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/white"
        android:background="#4C4C4C"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/serviceNameTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingBottom="@dimen/_5sdp"
        style="@style/TextStyleNormal"
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/white"
        android:background="#4C4C4C"
        app:layout_constraintTop_toBottomOf="@id/updateFareTV"
        app:layout_constraintStart_toStartOf="parent"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/seatFareTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/you_can_do_bulk_update_fare_for_this_service"
        android:layout_marginStart="@dimen/_5sdp"
        android:textColor="@color/black"
        style="@style/TextStyleNormal"
        android:textSize="@dimen/_11ssp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/serviceNameTV"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/seatFareRV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginTop="8dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/seatFareTV"
        app:spanCount="2"
        tools:itemCount="4"
        tools:layout_editor_absoluteX="16dp"
        tools:listitem="@layout/adapter_update_fare" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/updateTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/_7sdp"
        android:text="@string/update"
        android:gravity="center"
        android:textColor="@color/white"
        style="@style/TextStyleBold"
        android:textSize="@dimen/_12ssp"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seatFareRV"/>

</androidx.constraintlayout.widget.ConstraintLayout>