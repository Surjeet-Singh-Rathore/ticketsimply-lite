<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeWidth="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_8">

            <TextView
                android:id="@+id/tvSource"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Branch"
                android:textColor="#3B4954"
                android:paddingEnd="3dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvSeatsSold"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintHorizontal_weight="1" />

            <TextView
                android:id="@+id/tvSeatsSold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="56"
                android:textColor="#3B4954"
                app:layout_constraintTop_toTopOf="@id/tvSource"
                app:layout_constraintBottom_toBottomOf="@id/tvSource"
                app:layout_constraintStart_toEndOf="@id/tvSource"
                app:layout_constraintEnd_toStartOf="@id/revenueLayout"
                app:layout_constraintHorizontal_weight="0.9" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/revenueLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/tvSource"
                app:layout_constraintBottom_toBottomOf="@id/tvSource"
                app:layout_constraintStart_toEndOf="@id/tvSeatsSold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1.1">

                <TextView
                    android:id="@+id/tvGrossRevenue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Gross: "
                    android:textColor="#3B4954"
                    android:textSize="12sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tvNetRevenue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Net:"
                    android:textColor="#3B4954"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@id/tvGrossRevenue"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
