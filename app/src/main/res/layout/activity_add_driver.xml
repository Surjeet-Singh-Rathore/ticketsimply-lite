<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/button_color"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar_passenger_details"
        layout="@layout/toolbar_add_driver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Recyclervie -->

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_16"
                android:background="@color/white"
                app:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_16"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextStyleBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0.05"
                        android:text="@string/personal_details"
                        android:textAllCaps="true"
                        android:textColor="@color/textColor"
                        android:textSize="12sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_input_edit_text_height"
                        android:layout_marginTop="@dimen/dp_16"
                        android:background="@drawable/header_gradient_bg"
                        app:boxStrokeErrorColor="@color/colorRed2"
                        app:boxStrokeWidth="@dimen/dp_2"
                        app:errorEnabled="true"
                        app:errorIconDrawable="@null">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etFirstName"
                            style="@style/textInputStyle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/et_bg"
                            android:hint="@string/first_name"
                            android:imeOptions="actionNext"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutLastName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_input_edit_text_height"
                        android:layout_marginTop="@dimen/margin_10"
                        android:background="@drawable/header_gradient_bg"
                        app:boxStrokeErrorColor="@color/colorRed2"
                        app:boxStrokeWidth="@dimen/dp_2"
                        app:errorEnabled="true"
                        app:errorIconDrawable="@null">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etLastname"
                            style="@style/textInputStyle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/et_bg"
                            android:hint="@string/last_name"
                            android:imeOptions="actionNext"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutPhoneNumber"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_input_edit_text_height"
                        android:layout_marginTop="@dimen/margin_10"
                        android:background="@drawable/header_gradient_bg"
                        app:boxStrokeErrorColor="@color/colorRed2"
                        app:boxStrokeWidth="@dimen/dp_2"
                        app:errorEnabled="true"
                        app:errorIconDrawable="@null">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPhoneNumber"
                            style="@style/textInputStyle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/et_bg"
                            android:hint="@string/phone_number"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLength="10" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutEmail"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_input_edit_text_height"
                        android:layout_marginTop="@dimen/margin_10"
                        android:background="@drawable/header_gradient_bg"
                        app:boxStrokeErrorColor="@color/colorRed2"
                        app:boxStrokeWidth="@dimen/dp_2"
                        app:errorEnabled="true"
                        app:errorIconDrawable="@null">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etEmail"
                            style="@style/textInputStyle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/et_bg"
                            android:hint="@string/email"
                            android:imeOptions="actionNext"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutSex"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_input_edit_text_height"
                        android:layout_marginTop="@dimen/margin_10"
                        android:background="@drawable/header_gradient_bg"
                        app:boxBackgroundColor="@color/title_bg"
                        app:boxBackgroundMode="filled"
                        app:boxStrokeErrorColor="@color/colorRed2"
                        app:boxStrokeWidth="@dimen/dp_2"
                        app:errorEnabled="true"

                        app:errorIconDrawable="@null">

                        <AutoCompleteTextView
                            android:id="@+id/etSex"
                            style="@style/textInputStyle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/et_bg"
                            android:hint="@string/sex"
                            android:imeOptions="actionNext"
                            android:inputType="none" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutTravelBranch"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_input_edit_text_height"
                        android:layout_marginTop="@dimen/margin_10"
                        android:hint="@string/travel_branch"
                        app:boxBackgroundColor="@color/title_bg"
                        app:boxBackgroundMode="filled"
                        app:boxStrokeErrorColor="@color/colorRed2"
                        app:boxStrokeWidth="@dimen/dp_2"
                        app:errorEnabled="true"
                        app:errorIconDrawable="@null">

                        <AutoCompleteTextView
                            android:id="@+id/etTravelBranch"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/et_bg"
                            android:inputType="none"
                            android:textColor="@color/colorBlackShadow"
                            android:textColorHint="@color/grey"
                            android:textSize="14sp"
                            android:textStyle="normal" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutDob"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_input_edit_text_height"
                        android:layout_marginTop="@dimen/margin_10"
                        android:background="@drawable/header_gradient_bg"
                        app:boxStrokeErrorColor="@color/colorRed2"
                        app:boxStrokeWidth="@dimen/dp_2"
                        app:errorEnabled="true"
                        app:errorIconDrawable="@null">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDob"
                            style="@style/textInputStyle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/et_bg"
                            android:drawableEnd="@drawable/ic_icons_calendar"
                            android:focusableInTouchMode="false"
                            android:hint="@string/date_of_birth"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:paddingBottom="20dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutEsi"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_input_edit_text_height"
                        android:layout_marginTop="@dimen/margin_10"
                        android:background="@drawable/header_gradient_bg"
                        app:boxStrokeErrorColor="@color/colorRed2"
                        app:boxStrokeWidth="@dimen/dp_2"
                        app:errorEnabled="true"
                        app:errorIconDrawable="@null">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etEsi"
                            style="@style/textInputStyle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/et_bg"
                            android:hint="@string/esi"
                            android:imeOptions="actionNext"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutPf"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_input_edit_text_height"
                        android:layout_marginTop="@dimen/margin_10"
                        android:background="@drawable/header_gradient_bg"
                        app:boxStrokeErrorColor="@color/colorRed2"
                        app:boxStrokeWidth="@dimen/dp_2"
                        app:errorEnabled="true"
                        app:errorIconDrawable="@null">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPf"
                            style="@style/textInputStyle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/et_bg"
                            android:hint="@string/pf"
                            android:imeOptions="actionNext"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutUanNo"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_input_edit_text_height"
                        android:layout_marginTop="@dimen/margin_10"
                        android:background="@drawable/header_gradient_bg"
                        app:boxStrokeErrorColor="@color/colorRed2"
                        app:boxStrokeWidth="@dimen/dp_2"
                        app:errorEnabled="true"
                        app:errorIconDrawable="@null">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etUanNo"
                            style="@style/textInputStyle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/et_bg"
                            android:hint="@string/uan_no"
                            android:imeOptions="actionNext"
                            android:inputType="number" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutAddress"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_input_edit_text_height"
                        android:layout_marginTop="@dimen/margin_10"
                        android:background="@drawable/header_gradient_bg"
                        app:boxStrokeErrorColor="@color/colorRed2"
                        app:boxStrokeWidth="@dimen/dp_2"
                        app:errorEnabled="true"
                        app:errorIconDrawable="@null">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etAddress"
                            style="@style/textInputStyle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/et_bg"
                            android:hint="@string/address"
                            android:imeOptions="actionNext"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutCity"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_input_edit_text_height"
                        android:layout_marginTop="@dimen/margin_10"
                        android:hint="@string/city"
                        app:boxBackgroundColor="@color/title_bg"
                        app:boxBackgroundMode="filled"
                        app:boxStrokeErrorColor="@color/colorRed2"
                        app:boxStrokeWidth="@dimen/dp_2"
                        app:errorEnabled="true"
                        app:errorIconDrawable="@null">

                        <AutoCompleteTextView
                            android:id="@+id/etCity"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/et_bg"
                            android:inputType="none"
                            android:textColor="@color/colorBlackShadow"
                            android:textColorHint="@color/grey"
                            android:textSize="14sp"
                            android:textStyle="normal" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutState"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_input_edit_text_height"
                        android:layout_marginTop="@dimen/margin_10"
                        android:hint="@string/state"
                        app:boxBackgroundColor="@color/title_bg"
                        app:boxBackgroundMode="filled"
                        app:boxStrokeErrorColor="@color/colorRed2"
                        app:boxStrokeWidth="@dimen/dp_2"
                        app:errorEnabled="true"
                        app:errorIconDrawable="@null">

                        <AutoCompleteTextView
                            android:id="@+id/etState"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/et_bg"
                            android:inputType="none"
                            android:textColor="@color/colorBlackShadow"
                            android:textColorHint="@color/grey"
                            android:textSize="@dimen/sp14"
                            android:textStyle="normal" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutPinCode"
                        style="@style/textInputStyle"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_input_edit_text_height"
                        android:layout_marginTop="@dimen/margin_10"
                        android:hint="@string/pin_code"
                        app:boxBackgroundColor="@color/title_bg"
                        app:boxBackgroundMode="filled"
                        app:boxStrokeErrorColor="@color/colorRed2"
                        app:boxStrokeWidth="@dimen/dp_2"
                        app:errorEnabled="true"
                        app:errorIconDrawable="@null">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPinCode"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/et_bg"
                            android:inputType="number"
                            android:maxLength="6"
                            android:textColor="@color/colorBlackShadow"
                            android:textColorHint="@color/grey"
                            android:textSize="@dimen/sp14"
                            android:textStyle="normal" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutCountry"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_input_edit_text_height"
                        android:layout_marginTop="@dimen/margin_10"
                        android:hint="@string/country"
                        app:boxBackgroundColor="@color/title_bg"
                        app:boxBackgroundMode="filled"
                        app:boxStrokeErrorColor="@color/colorRed2"
                        app:boxStrokeWidth="@dimen/dp_2"
                        app:errorEnabled="true"
                        app:errorIconDrawable="@null">

                        <AutoCompleteTextView
                            android:id="@+id/etCountry"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/et_bg"
                            android:inputType="none"
                            android:textColor="@color/colorBlackShadow"
                            android:textColorHint="@color/grey"
                            android:textSize="14sp"
                            android:textStyle="normal" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                android:background="@color/white"
                app:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_16"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextStyleBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0.05"
                        android:text="@string/professional_details"
                        android:textAllCaps="true"
                        android:textColor="@color/textColor"
                        android:textSize="12sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutDrivingLicense"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_input_edit_text_height"
                        android:layout_marginTop="@dimen/margin_10"
                        android:background="@drawable/header_gradient_bg"
                        app:boxStrokeErrorColor="@color/colorRed2"
                        app:boxStrokeWidth="@dimen/dp_2"
                        app:errorEnabled="true"
                        app:errorIconDrawable="@null">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDrivingLicense"
                            style="@style/textInputStyle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/et_bg"
                            android:hint="@string/driving_license"
                            android:imeOptions="actionNext"
                            android:inputType="text" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutDrivingLicenseExpiry"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_input_edit_text_height"
                        android:layout_marginTop="@dimen/margin_10"
                        android:background="@drawable/header_gradient_bg"
                        app:boxStrokeErrorColor="@color/colorRed2"
                        app:boxStrokeWidth="@dimen/dp_2"
                        app:errorEnabled="true"
                        app:errorIconDrawable="@null">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDrivingLicenseExpiry"
                            style="@style/textInputStyle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/et_bg"
                            android:drawableEnd="@drawable/ic_icons_calendar"
                            android:focusableInTouchMode="false"
                            android:hint="@string/driving_license_expiry"
                            android:imeOptions="actionNext"
                            android:inputType="date" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutDlAuthority"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_input_edit_text_height"
                        android:layout_marginTop="@dimen/margin_10"
                        android:background="@drawable/header_gradient_bg"
                        app:boxStrokeErrorColor="@color/colorRed2"
                        app:boxStrokeWidth="@dimen/dp_2"
                        app:errorEnabled="true"
                        app:errorIconDrawable="@null">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDlAuthority"
                            style="@style/textInputStyle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/et_bg"
                            android:hint="@string/driving_license_issuing_authority"
                            android:imeOptions="actionNext"
                            android:inputType="text" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutBadgeNo"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_input_edit_text_height"
                        android:layout_marginTop="@dimen/margin_10"
                        android:background="@drawable/header_gradient_bg"
                        app:boxStrokeErrorColor="@color/colorRed2"
                        app:boxStrokeWidth="@dimen/dp_2"
                        app:errorEnabled="true"
                        app:errorIconDrawable="@null">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etBadgeNo"
                            style="@style/textInputStyle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/et_bg"
                            android:hint="@string/badge_no"
                            android:imeOptions="actionNext"
                            android:inputType="number" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_16"
                android:background="@color/white"
                app:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_16"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextStyleBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0.05"
                        android:text="@string/bank_details"
                        android:textAllCaps="true"
                        android:textColor="@color/textColor"
                        android:textSize="12sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutBankName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_input_edit_text_height"
                        android:layout_marginTop="@dimen/margin_10"
                        android:background="@drawable/header_gradient_bg"
                        app:boxStrokeErrorColor="@color/colorRed2"
                        app:boxStrokeWidth="@dimen/dp_2"
                        app:errorEnabled="true"
                        app:errorIconDrawable="@null">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etBankName"
                            style="@style/textInputStyle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/et_bg"
                            android:hint="@string/bank_name"
                            android:imeOptions="actionNext"
                            android:inputType="text" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutBranchName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_input_edit_text_height"
                        android:layout_marginTop="@dimen/margin_10"
