<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:shimmer="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/header_gradient_bg"
    android:fillViewport="true">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerDashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        android:visibility="invisible"
        shimmer:duration="800">

        <include layout="@layout/shimmer_layout_passenger_details" />
    </com.facebook.shimmer.ShimmerFrameLayout>


    <include
        android:id="@+id/toolbar_passenger_details"
        layout="@layout/toolbar_passenger_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />


    <include
        android:id="@+id/block_view"
        layout="@layout/block_new_layout"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_passenger_details"
        android:layout_width="match_parent"
        android:visibility="visible"
        />


</RelativeLayout>