<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_16"
        android:weightSum="1">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutSeatNo"
            android:layout_width="0dp"
            android:layout_height="@dimen/text_input_edit_text_height"
            android:layout_weight="0.5"
            android:background="@drawable/header_gradient_bg"
            android:textColorHint="@color/grey">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSeatNo"
                style="@style/textInputStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/et_bg"
                android:clickable="false"
                android:focusable="false"
                android:hint="@string/seat_no"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:text="" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutNewFare"
            android:layout_width="0dp"
            android:layout_height="@dimen/text_input_edit_text_height"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_weight="0.5"
            android:background="@drawable/header_gradient_bg"
            android:textColorHint="@color/grey">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNewFare"
                style="@style/textInputStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/et_bg"
                android:hint="@string/enter_new_fare"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:text="" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
</LinearLayout>
