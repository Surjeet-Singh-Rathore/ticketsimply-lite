<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_16">

    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <CheckBox
            android:id="@+id/passenger_name"
            style="@style/TextStyleNormalTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.4"
            android:text="@string/notAvailable"
            android:textColor="@color/grey"
            android:textSize="@dimen/sp16" />


        <TextView
            android:id="@+id/seat_number"
            style="@style/TextStyleNormalTV"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:gravity="end"
            android:padding="@dimen/dp_8"
            android:text="@string/notAvailable"
            android:textColor="@color/grey"
            android:textSize="@dimen/sp16" />


    </LinearLayout>

    <EditText
        android:id="@+id/et_pass_temp"
        style="@style/TextStyleNormalTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/flash_white_bg"
        android:hint="@string/passenger_temprature"
        android:inputType="number"
        android:paddingStart="@dimen/dp_12"
        android:paddingTop="@dimen/dp_14"
        android:paddingEnd="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_14"
        android:textColor="@color/grey"
        android:textColorHint="@color/colorDimShadow6"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout9" />


</androidx.constraintlayout.widget.ConstraintLayout>