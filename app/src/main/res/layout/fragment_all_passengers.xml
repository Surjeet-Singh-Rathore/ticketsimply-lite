<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_48">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:background="@color/white"
                android:orientation="vertical">

                <include
                    android:id="@+id/layoutNotify"
                    layout="@layout/include_layout_passengers_notify" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_16">

                    <TextView
                        style="@style/TextStyleBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/select_sms"
                        android:textColor="@color/colorBlackShadow"
                        android:textSize="14sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutSelectSms"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_input_edit_text_height"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/header_gradient_bg"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:textColorHint="@color/grey">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etSelectSms"
                            style="@style/textInputStyle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/et_bg"
                            android:drawableEnd="@drawable/ic_down_arrow_filled_"
                            android:editable="false"
                            android:focusable="false"
                            android:hint="@string/select_sms_from_list"
                            android:imeOptions="actionNext"
                            android:text="" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!--<com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutSelectSms"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="@dimen/dp_16"
                        android:drawableEnd="@drawable/ic_down_arrow_filled_"
                        android:textColorHint="@color/grey"
                        android:background="@drawable/header_gradient_bg">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etSelectSms"
                            style="@style/textInputStyle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/select_sms_from_list"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:focusable="false"
                            android:editable="false"
                            android:paddingTop="30dp"
                            android:paddingBottom="10dp"
                            android:paddingEnd="20dp"
                            android:background="@drawable/et_bg"
                            android:text="" />

                    </com.google.android.material.textfield.TextInputLayout>
-->

                    <LinearLayout
                        android:id="@+id/layoutSmsContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16"
                        android:background="@drawable/layout_rounded_shape_border_transparent"
                        android:backgroundTint="@color/colorPrimary"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp_16"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvSmsTitle"
                                style="@style/TextStyleBold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/notAvailable"
                                android:textColor="@color/colorBlackShadow" />


                            <TextView
                                android:id="@+id/tvMessage"
                                style="@style/TextStyleNormal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginTop="13dp"
                                android:ellipsize="start"
                                android:text="@string/notAvailable"
                                android:textColor="@color/colorBlackShadow"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvIncludeMobile"
                        style="@style/TextStyleBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16"
                        android:text="@string/include_mobile_number_of"
                        android:textColor="@color/colorBlackShadow"
                        android:visibility="gone" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/spinner"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16"
                        android:hint="@string/include_mobile_number"
                        android:visibility="gone"
                        app:boxBackgroundColor="@color/title_bg"
                        app:boxBackgroundMode="filled">

                        <AutoCompleteTextView
                            android:id="@+id/acEmployeeType"
                            style="@style/TextStyleNormal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/et_bg"
                            android:inputType="none"
                            android:textColor="@color/colorBlackShadow"
                            android:textColorHint="@color/grey"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutBusNumber"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_input_edit_text_height"
                        android:layout_marginTop="@dimen/dp_16"
                        android:background="@drawable/header_gradient_bg"
                        android:visibility="gone">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etBusNumber"
                            style="@style/textInputStyle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/et_bg"
                            android:hint="@string/bus_number"
                            android:imeOptions="actionNext"
                            android:inputType="text" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutDriverName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_input_edit_text_height"
                        android:layout_marginTop="@dimen/dp_16"
                        android:background="@drawable/header_gradient_bg"
                        android:visibility="gone">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDriverName"
                            style="@style/textInputStyle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/et_bg"
                            android:hint="@string/driver_name"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLength="10" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutBoardingPoint"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_input_edit_text_height"
                        android:layout_marginTop="@dimen/dp_16"
                        android:background="@drawable/header_gradient_bg"
                        android:visibility="gone">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etBoardingPoint"
                            style="@style/textInputStyle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/et_bg"
                            android:hint="@string/boarding_point"
                            android:imeOptions="actionNext"
                            android:inputType="text" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutMobileNumber"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_input_edit_text_height"
                        android:layout_marginTop="@dimen/dp_16"
                        android:background="@drawable/header_gradient_bg"
                        android:visibility="gone">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etMobileNumber"
                            style="@style/textInputStyle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/et_bg"
                            android:hint="@string/mobile_number"
                            android:imeOptions="actionDone"
                            android:inputType="number" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <TextView
                        android:id="@+id/tvBusDelay"
                        style="@style/TextStyleBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16"
                        android:text="@string/bus_delayed_by"
                        android:textColor="@color/colorBlackShadow"
                        android:visibility="gone" />


                    <LinearLayout
                        android:id="@+id/layoutBusDelayTraffic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="1">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/spinnerHour"
                            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dp_8"
                            android:layout_weight="0.5"
                            android:hint="@string/hh"
                            android:visibility="visible"
                            app:boxBackgroundColor="@color/title_bg"
                            app:boxBackgroundMode="filled">

                            <AutoCompleteTextView
                                android:id="@+id/acHour"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/et_bg"
                                android:inputType="none"
                                android:textColor="@color/colorBlackShadow"
                                android:textColorHint="@color/grey"
                                android:textSize="14sp"
                                android:textStyle="normal" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/spinnerMinutes"
                            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:hint="@string/mm"
                            android:visibility="visible"
                            app:boxBackgroundColor="@color/title_bg"
                            app:boxBackgroundMode="filled">

                            <AutoCompleteTextView
                                android:id="@+id/acMinutes"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/et_bg"
                                android:inputType="none"
                                android:textColor="@color/colorBlackShadow"
                                android:textColorHint="@color/grey"
                                android:textSize="14sp"
                                android:textStyle="normal" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvBusDelay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/layoutChkAll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16"
                        android:background="@drawable/layout_rounded_shape_border_transparent"
                        android:gravity="center"
                        android:paddingStart="@dimen/dp_16">

                        <CheckBox
                            android:id="@+id/chkSmsAll"
                            style="@style/msg_context"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sms_all_emergency_contacts"
                            android:textAllCaps="true"
                            android:textColor="@color/colorBlackShadow" />

                    </LinearLayout>

                    <TextView
                        style="@style/TextStyleNormalTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:background="@drawable/header_gradient_bg"
                        android:backgroundTint="@color/lightest_blue"
                        android:padding="@dimen/dp_8"
                        android:text="@string/note_selecting_this_will_send_sms_to_emergency_contacts_for_selected_passengers"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/sp12" />


                </LinearLayout>


            </LinearLayout>


        </androidx.core.widget.NestedScrollView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnSendSms"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_alignParentBottom="true"
        android:background="@color/button_default_color"
        android:gravity="center">

        <TextView
            style="@style/TextStyleBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableStart="@drawable/ic_sms_notification"
            android:drawablePadding="12dp"
            android:text="@string/sendSms"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:drawableTint="@color/colorWhite" />

    </LinearLayout>

</RelativeLayout>