<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="8dp"
    android:elevation="0dp"
    app:cardCornerRadius="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="16dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="16dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_verical_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="16dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_verical_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="16dp" />

        <TextView
            android:id="@+id/text_travel_name"
            style="@style/TextStyleBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:includeFontPadding="false"
            android:text="@string/notAvailable"
            android:textColor="@color/color_03_review_02_moderate"
            android:textSize="11sp"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/guideline_verical_start"
            app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_start" />

        <ImageView
            android:id="@+id/image_call"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:paddingEnd="5dp"
            android:src="@drawable/icons_bookings"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/guideline_verical_start"
            app:layout_constraintTop_toBottomOf="@id/text_travel_name" />


        <TextView
            android:id="@+id/text_source_destination"
            style="@style/TextStyleBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="@string/notAvailable"
            android:textColor="@color/colorBlackShadow"
            app:layout_constraintBottom_toTopOf="@id/tvAvailability"
            app:layout_constraintStart_toEndOf="@id/image_call"
            app:layout_constraintTop_toBottomOf="@id/text_travel_name" />

        <ImageView
            android:id="@+id/img_expand_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_down"
            app:layout_constraintEnd_toStartOf="@id/guideline_verical_end"
            app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_start"
            app:tint="@color/colorBlack" />

        <ImageView
            android:id="@+id/img_expand_less"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_expand_less"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@id/guideline_verical_end"
            app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_start"
            app:tint="@color/colorBlack" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="left"
            app:constraint_referenced_ids="img_expand_less,img_expand_more" />


        <TextView
            android:id="@+id/text_bus_type"
            style="@style/TextStyleNormal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="start"
            android:singleLine="true"
            android:text="@string/notAvailable"
            android:textColor="@color/transparent_tint_color1"
            android:textSize="11sp"
            app:layout_constraintBottom_toTopOf="@id/tvAvailability"
            app:layout_constraintEnd_toStartOf="@id/barrier"
            app:layout_constraintStart_toEndOf="@id/text_source_destination"
            app:layout_constraintTop_toBottomOf="@id/text_travel_name" />


        <TextView
            android:id="@+id/tvAvailability"
            style="@style/TextStyleNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Availability - "
            android:textColor="@color/transparent_tint_color1"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/guideline_verical_start"
            app:layout_constraintTop_toBottomOf="@id/text_bus_type" />


        <LinearLayout
            android:id="@+id/layout_fare_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toStartOf="@id/guideline_verical_end"
            app:layout_constraintStart_toEndOf="@id/guideline_verical_start"
            app:layout_constraintTop_toBottomOf="@id/tvAvailability">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_percentage"
                    style="@style/TextStyleBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/layout_rounded_shape_border_radius_2_dp"
                    android:backgroundTint="@color/booked_tickets"
                    android:paddingStart="5dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="2dp"
                    android:text="@string/notAvailable"
                    android:textColor="@color/white"
                    android:textSize="11sp" />


                <TextView
                    android:id="@+id/tvPhoneBlocked"
                    style="@style/TextStyleBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/layout_rounded_shape_border_radius_2_dp"
                    android:backgroundTint="@color/colorPrimaryTransparent"
                    android:drawableLeft="@drawable/ic_phone"
                    android:drawablePadding="4dp"
                    android:paddingStart="5dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="2dp"
                    android:text="@string/notAvailable"
                    android:textColor="@color/colorPrimary"
                    android:textSize="11sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/text_seats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/notAvailable"
                    android:textColor="@color/icon_dark"
                    android:textSize="12sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextStyleBold"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/fares"
                    android:textColor="@color/button_secondary_bg"
                    android:textSize="11sp" />


                <TextView
                    android:id="@+id/text_fare"
                    style="@style/TextStyleNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:text="@string/notAvailable"
                    android:textColor="@color/icon_dark"
                    android:textSize="12sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:orientation="horizontal"
                android:visibility="gone" />

        </LinearLayout>

        <View

            android:id="@+id/empty_line_below_fare_details"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="@dimen/dp_16"
            android:background="@color/grey_four_tint"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_fare_details" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_bus_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/dp_16"
            android:orientation="horizontal"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/empty_line_below_fare_details">

            <TextView
                android:id="@+id/tvBoardingTime"
                style="@style/TextStyleBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:padding="4dp"
                android:text="@string/notAvailable"
                android:textColor="@color/button_secondary_bg"
                android:textSize="@dimen/sp12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tvDuration"
                style="@style/TextStyleBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_pointer"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingStart="8dp"
                android:paddingTop="4dp"
                android:paddingEnd="8dp"
                android:paddingBottom="4dp"
                android:text="@string/notAvailable"
                android:textAlignment="center"
                android:textColor="@color/colorBlackShadow"
                android:textSize="@dimen/sp12"
                app:layout_constraintEnd_toStartOf="@+id/tvDroppingTime"
                app:layout_constraintStart_toEndOf="@id/tvBoardingTime"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tvDroppingTime"
                style="@style/TextStyleBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:padding="4dp"
                android:singleLine="true"
                android:text="@string/notAvailable"
                android:textColor="@color/button_secondary_bg"
                android:textSize="@dimen/sp12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/layout_expended"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@id/guideline_verical_end"
            app:layout_constraintStart_toEndOf="@id/guideline_verical_start"
            app:layout_constraintTop_toBottomOf="@id/layout_bus_time">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_four_tint" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvQuickActions"
                    style="@style/TextStyleBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:text="@string/quick_actions"
                    android:textColor="@color/button_default_color"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tvLastUpdated"
                    style="@style/TextStyleBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@id/tvQuickActions"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:text="Last Updated : "
                    android:textColor="@color/booked_tickets"
                    android:textSize="11sp" />


            </RelativeLayout>


            <android.widget.Button
                android:id="@+id/button_res_chart"
                style="@style/TextStyleBold"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/layout_rounded_shape_border"
                android:text="@string/reservation_chart"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_booking_seats"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_expended">

            <LinearLayout
                android:id="@+id/layout_book_ticket"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_selected_bg"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    style="@style/TextStyleBold"
                    android:includeFontPadding="false"
                    android:text="@string/book"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/text_booked_seats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:includeFontPadding="false"
                    android:text="@string/notAvailable"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="12sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutQuickBook"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_selected_bg_dark"
                android:backgroundTint="@color/primaryTransparent"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvBlocked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    style="@style/TextStyleBold"
                    android:includeFontPadding="false"
                    android:text="@string/quick_book"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/text_blocked_seats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:includeFontPadding="false"
                    android:text="@string/notAvailable"
                    android:visibility="gone"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_options"
                android:layout_width="@dimen/dp_56"
                android:layout_height="match_parent"
                android:background="@drawable/button_selected_bg_gray"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_booking_options"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_more_horiz"
                    app:tint="@color/colorBlackShadow" />

            </LinearLayout>


        </LinearLayout>


