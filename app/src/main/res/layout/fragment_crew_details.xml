<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/button_color">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/button_height">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_24"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_16"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextStyleBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0.05"
                        android:text="@string/coach_details"
                        android:textAllCaps="true"
                        android:textColor="@color/textColor"
                        android:textSize="12sp" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/spinnerSelectCoach"
                            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="-4dp"
                            android:hint="@string/select_coach"
                            app:boxBackgroundColor="@color/title_bg"
                            app:boxBackgroundMode="filled"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/cross_coach_layout"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <AutoCompleteTextView
                                android:id="@+id/acSelectCoach"
                                style="@style/TextStyleNormal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/et_bg"
                                android:inputType="none"
                                android:textColor="@color/colorBlackShadow"
                                android:textColorHint="@color/grey"
                                android:textSize="14sp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                            android:id="@+id/cross_coach_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:orientation="vertical"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/cross_coach"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="0.15"
                                android:background="@drawable/top_left_right_curve"
                                android:padding="@dimen/dp_16"
                                android:src="@drawable/ic_cross"
                                android:visibility="visible"
                                app:layout_constraintBottom_toBottomOf="@+id/layoutDriver1"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/layoutDriver1" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#70000000" />


                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <LinearLayout
                        android:id="@+id/lastLocationLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextStyleNormal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="0.05"
                            android:text="@string/lastLocation"
                            android:textColor="@color/textColor"
                            android:textSize="12sp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/lastLocationTV"
                            style="@style/TextStyleBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:letterSpacing="0.05"
                            android:text="@string/notAvailable"
                            android:textAllCaps="false"
                            android:textColor="@color/textColor"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/autoFillDetailsCheckboxLayout"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/autoFillDetailsCheckbox"
                    style="@style/TextStyleBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/autoFillCrewDetails"
                    android:textColor="@color/textColor"
                    android:textSize="12sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@color/white"
                app:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_16"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextStyleBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0.05"
                        android:text="@string/driver_amp_crew_details"
                        android:textAllCaps="true"
                        android:textColor="@color/textColor"
                        android:textSize="12sp" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16"

                        android:orientation="horizontal"
                        android:weightSum="1">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layoutDriver1"
                            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="-4dp"
                            android:hint="@string/driver_1"
                            app:boxBackgroundColor="@color/title_bg"
                            app:boxBackgroundMode="filled"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/cross_driver_1_layout"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <AutoCompleteTextView
                                android:id="@+id/acDriver1"
                                style="@style/TextStyleNormal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="none"
                                android:textColor="@color/colorBlackShadow"
                                android:textColorHint="@color/grey"
                                android:textSize="14sp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                            android:id="@+id/cross_driver_1_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:orientation="vertical"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="@+id/layoutDriver1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/layoutDriver1">

                            <ImageView
                                android:id="@+id/cross_driver_1"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="0.15"
                                android:background="@drawable/top_left_right_curve"
                                android:padding="@dimen/dp_16"
                                android:src="@drawable/ic_cross"
                                android:visibility="visible"
                                app:layout_constraintBottom_toBottomOf="@+id/layoutDriver1"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/layoutDriver1" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#70000000" />


                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16"

                        android:orientation="horizontal"
                        android:weightSum="1">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layoutDriver2"
                            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="-4dp"
                            android:hint="@string/driver_2"

                            app:boxBackgroundColor="@color/title_bg"
                            app:boxBackgroundMode="filled"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/cross_driver_2_layout"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <AutoCompleteTextView
                                android:id="@+id/acDriver2"
                                style="@style/TextStyleNormal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/et_bg"
                                android:inputType="none"
                                android:textColor="@color/colorBlackShadow"
                                android:textColorHint="@color/grey"
                                android:textSize="14sp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                            android:id="@+id/cross_driver_2_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:orientation="vertical"

                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="@+id/layoutDriver2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/layoutDriver2">

                            <ImageView
                                android:id="@+id/cross_driver_2"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="0.15"
                                android:background="@drawable/top_left_right_curve"
                                android:padding="@dimen/dp_16"
                                android:src="@drawable/ic_cross"
                                android:visibility="visible" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#70000000" />
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16"

                        android:orientation="horizontal"
                        android:weightSum="1">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layoutDriver3"
                            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="-4dp"
                            android:hint="@string/driver_3"
                            app:boxBackgroundColor="@color/title_bg"
                            app:boxBackgroundMode="filled"

                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/cross_driver_3_layout"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <AutoCompleteTextView
                                android:id="@+id/acDriver3"
                                style="@style/TextStyleNormal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/et_bg"
                                android:inputType="none"
                                android:textColor="@color/colorBlackShadow"
                                android:textColorHint="@color/grey"
                                android:textSize="14sp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                            android:id="@+id/cross_driver_3_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:orientation="vertical"
                            android:visibility="gone"

                            app:layout_constraintBottom_toBottomOf="@+id/layoutDriver3"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/layoutDriver3">

                            <ImageView
                                android:id="@+id/cross_driver_3"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="0.15"

                                android:background="@drawable/top_left_right_curve"
                                android:padding="@dimen/dp_16"
                                android:src="@drawable/ic_cross"
                                android:visibility="visible" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#70000000" />
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <LinearLayout
                        android:id="@+id/layoutAdhocDriver"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:layout_marginTop="@dimen/dp_16"
                        android:background="@drawable/layout_rounded_shape_border"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/btnAdhocDriver"
                            style="@style/TextStyleBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_plus"
                            android:drawablePadding="7dp"
                            android:drawableTint="@color/colorPrimary"
                            android:text="@string/add_adhoc_driver"
                            android:textAllCaps="false"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_16"
                android:background="@color/white"
                app:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_16"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16"

                        android:orientation="horizontal"
                        android:weightSum="1">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layoutCleaner"
                            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_16"
                            android:layout_marginEnd="-4dp"
                            android:hint="@string/cleaner"
                            app:boxBackgroundColor="@color/title_bg"
                            app:boxBackgroundMode="filled"

                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/cross_cleaner_layout"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <AutoCompleteTextView
                                android:id="@+id/acCleaner"
                                style="@style/TextStyleNormal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/et_bg"
                                android:inputType="none"
                                android:textColor="@color/colorBlackShadow"
                                android:textColorHint="@color/grey"
                                android:textSize="14sp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                            android:id="@+id/cross_cleaner_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:orientation="vertical"
                            android:visibility="gone"

                            app:layout_constraintBottom_toBottomOf="@+id/layoutCleaner"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/layoutCleaner">

                            <ImageView
                                android:id="@+id/cross_cleaner"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="0.15"
                                android:background="@drawable/top_left_right_curve"
                                android:padding="@dimen/dp_16"
                                android:src="@drawable/ic_cross"
                                android:visibility="visible" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#70000000" />
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16"

                        android:orientation="horizontal"
                        android:weightSum="1">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layoutContractor"
                            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="-4dp"
                            android:hint="@string/contractor"
                            android:visibility="visible"
                            app:boxBackgroundColor="@color/title_bg"
                            app:boxBackgroundMode="filled"

                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/cross_constractor_layout"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <AutoCompleteTextView
                                android:id="@+id/acContractor"
                                style="@style/TextStyleNormal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/et_bg"
                                android:inputType="none"
                                android:textColor="@color/colorBlackShadow"
                                android:textColorHint="@color/grey"
                                android:textSize="14sp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                            android:id="@+id/cross_constractor_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:orientation="vertical"
                            android:visibility="gone"

                            app:layout_constraintBottom_toBottomOf="@+id/layoutContractor"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/layoutContractor">

                            <ImageView
                                android:id="@+id/cross_constractor"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="0.15"
                                android:background="@drawable/top_left_right_curve"
                                android:padding="@dimen/dp_16"
                                android:src="@drawable/ic_cross"
                                android:visibility="visible" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#70000000" />
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/acChartOperatedByLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16"
                        android:hint="@string/chart_operated_by"
                        app:boxBackgroundColor="@color/title_bg"
                        app:boxBackgroundMode="filled">

                        <AutoCompleteTextView
                            android:id="@+id/acChartOperatedBy"
                            style="@style/TextStyleNormal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/et_bg"
                            android:inputType="none"
                            android:textColor="@color/colorBlackShadow"
                            android:textColorHint="@color/grey"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvChartOperatedBy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_end"
                        app:layout_constraintStart_toStartOf="@+id/guideline_vertical_start"
                        app:layout_constraintTop_toBottomOf="@+id/layout_selectSeatNo" />


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layoutCheckingInspector"
                            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_16"
                            android:layout_marginEnd="-4dp"
                            android:hint="@string/checking_inspector"
                            app:boxBackgroundColor="@color/title_bg"
                            app:boxBackgroundMode="filled"

                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/cross_inspecter_layout"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <AutoCompleteTextView
                                android:id="@+id/acCheckingInspector"
                                style="@style/TextStyleNormal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/et_bg"
                                android:inputType="none"
                                android:textColor="@color/colorBlackShadow"
                                android:textColorHint="@color/grey"
                                android:textSize="14sp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                            android:id="@+id/cross_inspecter_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:orientation="vertical"
                            android:visibility="gone"

                            app:layout_constraintBottom_toBottomOf="@+id/layoutCheckingInspector"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/layoutCheckingInspector">


                            <ImageView
                                android:id="@+id/cross_inspecter"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="0.15"
                                android:background="@drawable/top_left_right_curve"
                                android:padding="@dimen/dp_16"
                                android:src="@drawable/ic_cross"
                                android:visibility="visible"
                                app:layout_constraintBottom_toBottomOf="@+id/layoutCheckingInspector"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/layoutCheckingInspector" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#70000000" />
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/sendSmsCB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    style="@style/TextStyleBold"
                    android:textColor="@color/textColor"
                    android:textSize="12sp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="@string/send_bus_info_sms_whatsapp" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <android.widget.Button
        android:id="@+id/btnUpdate"
        style="@style/TextStyleBold"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_16"
        android:background="@drawable/button_default_bg"
        android:enabled="false"
        android:text="@string/update"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="16sp" />

    <View
        android:id="@+id/clickBlocker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
