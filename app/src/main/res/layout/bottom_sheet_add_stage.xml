<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/cityNameTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_5sdp"
        android:drawableEnd="@drawable/ic_close_24_white"
        android:text="Bangalore(1 Stage)"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TextStyleBold"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/white"
        android:background="@color/button_secondary_bg"
        app:layout_constraintBottom_toTopOf="@id/addStageRV"
        app:layout_constraintStart_toStartOf="parent"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/addStageRV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/addNewStageTV"
        android:scrollbars="vertical"
        app:layout_constraintHeight_max="@dimen/_500sdp"
        app:layout_constraintTop_toBottomOf="@id/cityNameTV"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:layout_editor_absoluteX="6dp"
        tools:listitem="@layout/adapter_stage_details" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/addNewStageTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+Add New Stage"
        android:gravity="center"
        android:padding="@dimen/_5sdp"
        style="@style/TextStyleBold"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="@dimen/_100sdp"
        android:background="@drawable/bg_white_little_round_solid"
        android:layout_margin="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>