<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.view.fragments.CouponFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardCoupons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="@dimen/_4sdp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layoutCoupons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    style="@style/TextStyleBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:padding="18dp"
                    android:text="@string/additional_options"
                    android:textColor="@color/colorBlackShadow" />

                <ImageView
                    android:id="@+id/imgArrowUpCoupons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="16dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_arrow_up"
                    app:tint="@color/colorBlackShadow" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layoutCouponsHidden"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/coupon_code"
                    layout="@layout/offer_coupon_code_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="5dp"
                    android:visibility="visible" />

                <include
                    android:id="@+id/pre_post_ticket"
                    layout="@layout/offer_pre_post_ticket_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="5dp"
                    android:visibility="visible" />

                <include
                    android:id="@+id/privileged_card"
                    layout="@layout/offer_privilege_card_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="5dp"
                    android:visibility="visible" />

                <include
                    android:id="@+id/gst_details"
                    layout="@layout/offer_gst_details_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="5dp"
                    android:visibility="visible" />

                <include
                    android:id="@+id/apply_smart_miles"
                    layout="@layout/offer_smart_miles_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="5dp"
                    android:visibility="visible" />

                <include
                    android:id="@+id/discount_amount"
                    layout="@layout/offer_discount_amount_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="5dp" />

                <include
                    android:id="@+id/quote_previous_pnr"
                    layout="@layout/offer_quote_previous_pnr_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="5dp"
                    android:visibility="visible" />

                <include
                    android:id="@+id/vip_ticket"
                    layout="@layout/offer_vip_ticket_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="5dp" />

                <include
                    android:id="@+id/vip_ticket_free"
                    layout="@layout/offer_vip_ticket_free_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="5dp"
                    android:visibility="gone" />

                <include
                    android:id="@+id/free_tickets"
                    layout="@layout/offer_free_ticket_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="5dp" />

                <include
                    android:id="@+id/includeProgress"
                    layout="@layout/layout_progress_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>