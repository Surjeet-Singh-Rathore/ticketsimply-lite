<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/_10sdp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/topLL"
        android:background="@color/grey"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/serviceNameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BNG1234"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_5sdp"
            style="@style/TextStyleBold"
            android:textColor="@color/white"
           />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/serviceDescTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_below="@id/serviceNameTV"
            style="@style/TextStyleNormal"
            android:textColor="@color/white"
           />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:id="@+id/cancelIV"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_close_24_white"
            android:layout_height="wrap_content"/>

    </RelativeLayout>




    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/serviceStatusIV"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@drawable/ic_service_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topLL"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/serviceStatusTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/service_status"
        style="@style/TextStyleNormal"
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/serviceStatusIV"
        app:layout_constraintTop_toTopOf="@id/serviceStatusIV"
        app:layout_constraintBottom_toBottomOf="@id/serviceStatusIV"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/toggleIV"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_toggle_red"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topLL"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/inactiveTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/inactive"
        style="@style/TextStyleNormal"
        android:textColor="@color/colorRed"
        android:paddingRight="@dimen/_10sdp"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintTop_toTopOf="@id/toggleIV"
        app:layout_constraintBottom_toBottomOf="@id/toggleIV"
        app:layout_constraintEnd_toStartOf="@id/toggleIV"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/previewRouteIV"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_preview_route"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/serviceStatusIV"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/previewRouteTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/preview_route"
        style="@style/TextStyleNormal"
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/previewRouteIV"
        app:layout_constraintTop_toTopOf="@id/previewRouteIV"
        app:layout_constraintBottom_toBottomOf="@id/previewRouteIV"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/duplicateServiceIV"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:src="@drawable/ic_duplicate_service"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/previewRouteIV"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/duplicateServiceTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/duplicate_service"
        style="@style/TextStyleNormal"
        android:visibility="gone"
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/duplicateServiceIV"
        app:layout_constraintTop_toTopOf="@id/duplicateServiceIV"
        app:layout_constraintBottom_toBottomOf="@id/duplicateServiceIV"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/deleteServiceIV"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:src="@drawable/ic_delete_new_red"
        android:layout_marginVertical="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/duplicateServiceIV"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/deleteServiceTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="@string/delete_service"
        style="@style/TextStyleNormal"
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/deleteServiceIV"
        app:layout_constraintTop_toTopOf="@id/deleteServiceIV"
        app:layout_constraintBottom_toBottomOf="@id/deleteServiceIV"/>

</androidx.constraintlayout.widget.ConstraintLayout>