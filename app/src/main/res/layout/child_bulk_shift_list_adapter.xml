<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_8"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2.4"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pnr_number"
                    style="@style/TextStyleBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_2"
                    android:text="@string/notAvailable"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/passenger_namer"
                    style="@style/TextStyleNormalTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/notAvailable"
                    android:textColor="@color/grey" />

            </LinearLayout>

            <TextView
                android:id="@+id/route_origin_destination"
                style="@style/TextStyleNormalTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:text="@string/notAvailable"
                android:textColor="@color/black"
                android:textSize="@dimen/sp10" />


        </LinearLayout>

        <TextView
            android:id="@+id/old_seat_number"
            style="@style/TextStyleBold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.2"
            android:background="@drawable/eta_background"
            android:backgroundTint="@color/colorPrimaryTransparent"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_12"
            android:paddingTop="@dimen/margin_10"
            android:paddingRight="@dimen/dp_12"
            android:paddingBottom="@dimen/margin_10"
            android:text="ww-sld"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp12" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.2"
            android:src="@drawable/ic_arrow_forward_"
            app:tint="@color/black" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/seatno_layout_new"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.2"
            android:background="@drawable/header_gradient_bg"
            android:gravity="center_vertical"
            android:textColorHint="@color/colorDimShadow6"
            app:endIconDrawable="@drawable/ic_down_arrow_filled"
            app:hintTextColor="@color/gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutCancellationPercentage">

            <EditText
                android:id="@+id/et_new_seatnumber"
                style="@style/TextStyleNormalTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/et_bg"
                android:hint="@string/seat_no"
                android:imeOptions="actionNext"
                android:inputType="none"
                android:maxLength="5"
                android:maxLines="1"
                android:textColorHint="@color/colorDimShadow6" />


        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>