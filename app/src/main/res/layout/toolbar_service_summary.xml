    <!--        android:visibility="visible"-->
    <!--        app:layout_constraintBottom_toBottomOf="@+id/toolbar_header_text"-->
    <!--        app:layout_constraintStart_toEndOf="@+id/toolbar_header_text"-->
    <!--        app:layout_constraintTop_toTopOf="@+id/toolbar_header_text" />-->

    <TextView
        android:id="@+id/eta_time"
        style="@style/msg_context"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:background="@drawable/eta_background"
        android:gravity="center"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:text="@string/notAvailable"
        android:textColor="@color/booked_tickets"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/tv_current_header"
        app:layout_constraintTop_toTopOf="@+id/guideline_horizontal_start" />

    <LinearLayout
        android:id="@+id/layout_legend_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tvScan"
        app:layout_constraintEnd_toStartOf="@+id/tvScan"
        app:layout_constraintTop_toTopOf="@+id/tvScan">

        <ImageView
            android:id="@+id/current_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackgroundBorderless"
            android:paddingStart="@dimen/margin_10"
            android:paddingEnd="@dimen/margin_10"
            android:src="@drawable/current_location"
            app:tint="@color/grey" />

        <ImageView
            android:id="@+id/img_legend"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?selectableItemBackgroundBorderless"
            android:paddingStart="@dimen/margin_10"
            android:paddingEnd="@dimen/margin_10"
            app:srcCompat="@drawable/ic_legend"
            app:tint="@color/grey" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvScan"
        style="@style/TextStyleBold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_scan"
        android:drawablePadding="10dp"
        android:text="@string/scan"
        android:textColor="@color/colorBlackShadow"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/toolbar_subtitle"
        app:layout_constraintEnd_toStartOf="@id/guideline_vertical_end"
        app:layout_constraintTop_toBottomOf="@id/tv_current_header" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/printIV"
        android:layout_width="@dimen/_22sdp"
        android:layout_height="@dimen/_22sdp"
        android:visibility="gone"
        android:src="@drawable/ic_print"
        app:layout_constraintBottom_toTopOf="@id/toolbar_subtitle"
        app:layout_constraintEnd_toStartOf="@id/guideline_vertical_end"
        app:layout_constraintTop_toBottomOf="@id/tv_current_header" />

    <TextView
        android:id="@+id/toolbar_subtitle"
        style="@style/TextStyleBold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:paddingBottom="@dimen/dp_8"
        android:text="@string/notAvailable"
        android:textColor="@color/button_default_color"
        android:textSize="11sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_end"
        app:layout_constraintStart_toEndOf="@id/img_back"
        app:layout_constraintTop_toBottomOf="@id/toolbar_header_text" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/dp_100" />
</androidx.constraintlayout.widget.ConstraintLayout>