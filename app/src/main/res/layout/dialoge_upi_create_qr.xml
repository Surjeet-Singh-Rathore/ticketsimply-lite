<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/card_radius">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_v_begin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/dp_16" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_v_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/dp_16" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_h_begin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="@dimen/dp_12" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_h_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="@dimen/dp_12" />

        <TextView
            android:id="@+id/tvHeader"
            style="@style/TextStyleBold"
            android:layout_width="0dp"
            android:layout_height="49dp"
            android:gravity="center|left"
            android:text="QR Code"
            android:textColor="@color/black"
            android:textSize="@dimen/sp18"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toStartOf="@id/tvTime"
            app:layout_constraintStart_toStartOf="@id/guideline_v_begin"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTime"
            style="@style/TextStyleBold"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:gravity="center|left"
            android:text="@string/notAvailable"
            android:textColor="@color/booked_tickets"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline_v_end"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_top"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_bg"
            app:layout_constraintTop_toBottomOf="@id/tvHeader" />

        <TextView
            android:id="@+id/tv_header_text"
            style="@style/TextStyleBold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:text="@string/upi_create_qr_desc1"
            android:textColor="@color/text_header_bg"
            android:textSize="@dimen/sp16"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@id/guideline_v_end"
            app:layout_constraintStart_toEndOf="@id/guideline_v_begin"
            app:layout_constraintTop_toBottomOf="@id/view_top" />

        <ImageView
            android:id="@+id/qr_code_image"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_marginTop="@dimen/dp_24"
            app:layout_constraintLeft_toRightOf="@id/guideline_v_begin"
            app:layout_constraintRight_toLeftOf="@id/guideline_v_end"
            app:layout_constraintTop_toBottomOf="@+id/tv_header_text" />

        <TextView
            android:id="@+id/tv_message"
            style="@style/TextStyleNormal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            android:text="@string/upi_create_qr_desc2"
            android:textColor="@color/colorRed2"
            android:textSize="14sp"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@id/guideline_v_end"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/guideline_v_begin"
            app:layout_constraintTop_toBottomOf="@+id/qr_code_image" />

        <android.widget.Button
            android:id="@+id/btnGoBack"
            style="@style/TextStyleBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/light_highlight_color"
            android:text="@string/goBack"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/btnConfirm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_message"
            app:layout_constraintWidth_percent="0.50" />

        <android.widget.Button
            android:id="@+id/btnConfirm"
            style="@style/TextStyleBold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/colorAccent"
            android:text="@string/confirm"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:visibility="gone"
            app:layout_constraintLeft_toRightOf="@+id/btnGoBack"
            app:layout_constraintTop_toBottomOf="@id/tv_message"
            app:layout_constraintWidth_percent="0.50" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>








