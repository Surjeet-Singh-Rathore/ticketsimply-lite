<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                style="@style/TextStyleBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_16"
                android:text="@string/quota_seat_header"
                android:textColor="@color/colorBlackShadow"
                android:textSize="@dimen/_14ssp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                app:cardElevation="@dimen/dp_2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_8"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvQuotaTypeTitle"
                        style="@style/TextStyleBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/quota_type_colon"
                        android:textColor="@color/colorBlackShadow"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:id="@+id/tvQuotaTypeValue"
                        style="@style/TextStyleNormal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/notAvailable"
                        android:textColor="@color/colorBlackShadow"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:id="@+id/tvQuotaForTitle"
                        style="@style/TextStyleBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_14sdp"
                        android:text="@string/quota_for_colon"
                        android:textColor="@color/colorBlackShadow"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:id="@+id/tvQuotaForValue"
                        style="@style/TextStyleNormal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/notAvailable"
                        android:textColor="@color/colorBlackShadow"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:id="@+id/tvBlockingNoTitle"
                        style="@style/TextStyleBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_14sdp"
                        android:text="@string/blocking_no_colon"
                        android:textColor="@color/colorBlackShadow"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:id="@+id/tvBlockingNoValue"
                        style="@style/TextStyleNormal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/notAvailable"
                        android:textColor="@color/colorBlackShadow"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:id="@+id/tvSeatNosTitle"
                        style="@style/TextStyleBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_14sdp"
                        android:text="@string/seat_nos_colon"
                        android:textColor="@color/colorBlackShadow"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvSeatNosValue"
                        style="@style/TextStyleNormal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/notAvailable"
                        android:textColor="@color/colorBlackShadow"
                        android:textSize="@dimen/_11ssp" />
                    <TextView
                        android:id="@+id/tvGenderTitle"
                        style="@style/TextStyleBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_14sdp"
                        android:text="@string/gender_with_colon"
                        android:textColor="@color/colorBlackShadow"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvGenderTitleValue"
                        style="@style/TextStyleNormal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/notAvailable"
                        android:textColor="@color/colorBlackShadow"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:id="@+id/tvRemarksTitle"
                        style="@style/TextStyleBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_14sdp"
                        android:text="@string/remarks_colon"
                        android:textColor="@color/colorBlackShadow"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:id="@+id/tvRemarksValue"
                        style="@style/TextStyleNormal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/notAvailable"
                        android:textColor="@color/colorBlackShadow"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:id="@+id/tvBlockedByTitle"
                        style="@style/TextStyleBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_14sdp"
                        android:text="@string/blocked_by_colon"
                        android:textColor="@color/colorBlackShadow"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:id="@+id/tvBlockedByValue"
                        style="@style/TextStyleNormal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/notAvailable"
                        android:textColor="@color/colorBlackShadow"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:id="@+id/tvBlockedOnTitle"
                        style="@style/TextStyleBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_14sdp"
                        android:text="@string/blocked_on_colon"
                        android:textColor="@color/colorBlackShadow"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:id="@+id/tvBlockedOnValue"
                        style="@style/TextStyleNormal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/notAvailable"
                        android:textColor="@color/colorBlackShadow"
                        android:textSize="@dimen/_11ssp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnConfirm"
                style="@style/TextStyleBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_14sdp"
                android:background="@color/colorPrimary"
                android:text="@string/okay"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_16ssp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>