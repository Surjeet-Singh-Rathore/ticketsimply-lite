<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_300"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_16"
        android:orientation="vertical">


        <View
            android:id="@+id/shimmer_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_72"
            android:background="@drawable/shimmer_gradient_overlay" />

        <LinearLayout
            android:id="@+id/shimmer_layout_recent_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_32"
            android:layout_marginTop="@dimen/dp_8"
            android:orientation="horizontal">

            <View
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:background="@drawable/shimmer_gradient_overlay" />

            <View
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_8"
                android:background="@drawable/shimmer_gradient_overlay" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/shimmer_layout_dates"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="@dimen/dp_8"
            android:orientation="horizontal">

            <View
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@drawable/shimmer_gradient_overlay" />

            <View
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_8"
                android:background="@drawable/shimmer_gradient_overlay" />

            <View
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_8"
                android:background="@drawable/shimmer_gradient_overlay" />

            <View
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_8"
                android:background="@drawable/shimmer_gradient_overlay" />

            <View
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_8"
                android:background="@drawable/shimmer_gradient_overlay" />

        </LinearLayout>

        <include layout="@layout/shimmer_layout_bus_item" />

        <include layout="@layout/shimmer_layout_bus_item" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/filters"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            style="@style/TextStyleBold"
            android:layout_width="77dp"
            android:layout_height="match_parent"
            android:background="@drawable/shimmer_gradient_overlay"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/empty" />


        <LinearLayout
            android:id="@+id/layout_filter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shimmer_gradient_overlay"
            android:gravity="center"
            android:orientation="horizontal">

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>