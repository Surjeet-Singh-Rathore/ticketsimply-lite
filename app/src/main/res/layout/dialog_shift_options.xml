<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_bg">

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            style="@style/TextStyleBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_16"
            android:text="@string/new_service_selected"
            android:textColor="@color/grey"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_rounded_shape"
            android:backgroundTint="@color/flash_white"
            android:orientation="vertical"

            android:padding="@dimen/dp_8">

            <TextView
                android:id="@+id/api_number"
                style="@style/TextStyleBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AP-406A "
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/api_name"
                style="@style/TextStyleNormalTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AP-406A (Same service) Kadappa to Vishakapattanam"
                android:textColor="@color/grey"
                android:textSize="14sp" />

        </LinearLayout>


        <TextView
            style="@style/TextStyleNormalTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginBottom="6dp"
            android:text="@string/occupy_similar_seats_in_new_service_by"

            android:textAllCaps="true"
            android:textColor="@color/grey"
            android:textSize="@dimen/sp12" />


        <RadioButton
            android:id="@+id/manually"
            style="@style/TextStyleNormalTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_seats_manually"
            android:textColor="@color/grey"
            android:textSize="@dimen/sp14" />

        <RadioButton
            android:id="@+id/auto_by_seat"
            style="@style/TextStyleNormalTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/auto_match_by_seat_no"
            android:textColor="@color/grey"
            android:textSize="@dimen/sp14"
            tools:layout_editor_absoluteX="16dp" />

        <RadioButton
            android:id="@+id/auto_by_row"
            style="@style/TextStyleNormalTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/auto_match_by_rows_and_coloums"
            android:textColor="@color/grey"
            android:textSize="@dimen/sp14"
            tools:layout_editor_absoluteX="16dp" />


    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_16"
        android:weightSum="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radiogroup"
        app:layout_constraintWidth_percent="0.40">

        <android.widget.Button
            android:id="@+id/btn_dark"
            style="@style/TextStyleBold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:background="@drawable/layout_rounded_shape_dark"
            android:text="@string/goBack"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radiogroup"
            app:layout_constraintWidth_percent="0.40" />

        <android.widget.Button
            android:id="@+id/btn_light"
            style="@style/TextStyleBold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_weight="1"
            android:background="@drawable/layout_rounded_shape_dark"
            android:backgroundTint="@color/colorPrimary"
            android:text="@string/confirm"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_dark"
            app:layout_constraintTop_toBottomOf="@+id/radiogroup"
            app:layout_constraintWidth_percent="0.60" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>