<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_12"
    android:background="@drawable/layout_rounded_shape_top_left_right">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <View
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_8"
                android:layout_gravity="center"
                android:alpha="0.4"
                android:background="@drawable/layout_rounded_shape_dark" />

            <TextView
                style="@style/TextStyleBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:gravity="center"
                android:text="Select seats to release"
                android:textColor="@color/colorBlackShadow"
                android:textSize="@dimen/sp16" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPassengers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_remarks"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_input_edit_text_height"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@drawable/header_gradient_bg"
                android:textColorHint="@color/grey">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_remarks"
                    style="@style/textInputStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/et_bg"
                    android:hint="@string/remarks"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:text="" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/layoutSms"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@drawable/layout_rounded_shape_border_transparent"
                android:backgroundTint="@color/colorDimShadow6"
                android:gravity="center">

                <CheckBox
                    android:id="@+id/chkAllSeats"
                    style="@style/msg_context"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/dp_8"
                    android:paddingEnd="@dimen/dp_4"
                    android:text="@string/sms_passenger_ticket_released"
                    android:textAllCaps="true"
                    android:textColor="@color/colorBlackShadow"
                    android:textSize="@dimen/sp12"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                style="@style/msg_context"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_24"
                android:text="Note:  Selected Seat(s) will be released and available for future booking"
                android:textColor="@color/colorBlackShadow" />

            <Button
                android:id="@+id/release_ticket_btn"
                style="@style/TextStyleBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/layout_rounded_shape"
                android:backgroundTint="@color/white"
                android:text="@string/release_seat"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/sp16" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/progressBarRelease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/nestedScrollView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/nestedScrollView2" />
</androidx.constraintlayout.widget.ConstraintLayout>


