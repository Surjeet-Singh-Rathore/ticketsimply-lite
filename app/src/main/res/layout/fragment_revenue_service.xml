<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:shimmer="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLighterGrey"
    tools:context=".phase2.fragments.mainFragments.OccupancyFragment">





        <androidx.core.widget.NestedScrollView
            style="@style/scrollbar_shape_style"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

<!--                        <com.facebook.shimmer.ShimmerFrameLayout-->
<!--                             android:id="@+id/shimmerRevenue"-->
<!--                             android:layout_width="match_parent"-->
<!--                             android:layout_height="wrap_content"-->
<!--                             android:orientation="vertical"-->
<!--                             shimmer:duration="800">-->

<!--                             <include layout="@layout/shimmer_dashboard_second_graph_layout" />-->

<!--                         </com.facebook.shimmer.ShimmerFrameLayout>-->




                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/revenueContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorLighterGrey"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_16"
                    android:visibility="visible">

                    <include
                        android:id="@+id/allServicesAndDateFilterContainer"
                        layout="@layout/dashboard_graph_all_services_and_dates_filter_layout"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <androidx.cardview.widget.CardView
                        android:id="@+id/topCL"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        app:cardBackgroundColor="#F7F7FB"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:layout_constraintEnd_toEndOf="@id/allServicesAndDateFilterContainer"
                        app:layout_constraintStart_toStartOf="@id/allServicesAndDateFilterContainer"
                        app:layout_constraintTop_toBottomOf="@id/allServicesAndDateFilterContainer">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/amountCL"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/_10sdp"
                            android:paddingHorizontal="@dimen/_4sdp">


                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/totalRevenueTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/total_revenue_colon"
                                android:textColor="#3B4954"
                                android:layout_marginStart="@dimen/_10sdp"
                                app:layout_constraintBottom_toTopOf="@+id/totalRevenueValueTV"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/totalRevenueValueTV"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/totalRevenueTV" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/forDateJourneyTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:text="@string/for_date_of_journey"
                                android:textColor="@color/blackish"
                                app:layout_constraintBottom_toTopOf="@+id/totalRevenueValueTV"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <include
                        android:id="@+id/noData"
                        layout="@layout/layout_no_data"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:visibility="gone" />

                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/mainRV"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        shimmer:listitem="@layout/adapter_revenue_services"
                        android:layout_marginTop="@dimen/_10sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/topCL" />



                </androidx.constraintlayout.widget.ConstraintLayout>



            </RelativeLayout>



        </androidx.core.widget.NestedScrollView>

</FrameLayout>