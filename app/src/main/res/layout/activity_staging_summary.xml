<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDim"
    tools:context=".presentation.view.activity.ticketDetails.StagingSummaryActivity">

    <include
        android:id="@+id/layout_toolbar"
        layout="@layout/toolbar_checking_inspector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ScrollView
        android:layout_marginTop="@dimen/_12sdp"
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/layout_toolbar"
        android:fillViewport="true"
        android:layout_marginBottom="@dimen/_14sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_toolbar">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mainCL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/colorDim">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/summaryCL"
                android:layout_width="match_parent"
                android:layout_height="257dp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:background="@drawable/white_bg"
                app:layout_constraintStart_toStartOf="parent"


                app:layout_constraintTop_toBottomOf="@+id/layout_toolbar"
                tools:ignore="NotSibling">
                <!--        app:layout_constraintTop_toBottomOf="@+id/mainCL"-->
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/titleTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/boarding_summary"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/summaryInnerCL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@color/colorDim"
                    android:padding="@dimen/_10sdp"
                    android:radius="@dimen/_12sdp"
                    android:text="Boarded count:"
                    android:textColor="@color/blackish"
                    app:layout_constraintStart_toEndOf="@+id/titleTV"
                    app:layout_constraintTop_toBottomOf="@+id/titleTV">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/seatsHeadTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total_seats_staging"
                        android:textColor="@color/blackish"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/seatsValueTV1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Boarded count:"
                        app:layout_constraintBottom_toBottomOf="@id/seatsHeadTV"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/seatsHeadTV" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/fareHeadTV"
                        style="@style/TextStyleBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="@string/string32"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/seatsHeadTV" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/fareValueTV"
                        style="@style/TextStyleBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/seatsValueTV1"
                        app:layout_constraintTop_toTopOf="@id/fareHeadTV" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/boardseat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yet to board seat nos :"
                        android:textColor="@color/blackish"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/fareHeadTV" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/BoardseatValue"
                        style="@style/TextStyleBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/board_seat_value"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/boardseat" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/emptyseat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/empty_seat"
                        android:textColor="@color/blackish"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/BoardseatValue" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/empty_seat_value"
                        style="@style/TextStyleBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/empty_seat_value"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/emptyseat" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/boardingstagesummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_13sdp"
                android:background="@drawable/bg_little_round_white"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/summaryCL">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/boarding_stage_summary"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="@id/parent"
                    app:layout_constraintTop_toTopOf="@id/boardingstagesummary"
                    tools:ignore="NotSibling" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/summaryImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_arrow_down"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="MissingConstraints" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/summaryRV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:visibility="gone"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/Value"
                    tools:ignore="NotSibling"
                    tools:itemCount="4"
                    tools:listitem="@layout/adapter_summary_staging" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/droppingstagesummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/bg_little_round_white"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/boardingstagesummary">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/Value1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/dropping_stage_summary"
                    android:layout_marginTop="@dimen/_10sdp"

                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints,NotSibling" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/summaryImg1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_arrow_down"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="MissingConstraints" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/summaryRV1"
                    android:layout_width="match_parent"
                    android:layout_marginRight="@dimen/_10sdp"

                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:background="@drawable/bg_little_round_white"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/Value1"
                    tools:ignore="NotSibling"
                    tools:itemCount="4"
                    android:layout_marginBottom="@dimen/_12sdp"
                    tools:listitem="@layout/adapter_summary_staging" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>



