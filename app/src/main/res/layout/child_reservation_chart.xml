<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_16"
    android:elevation="4dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="3dp"
    app:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp">

            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/constraintLayout1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/numberinfo"
                    style="@style/TextStyleBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:maxLines="1"
                    android:text="@string/notAvailable"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/coach_name"
                    style="@style/TextStyleBold"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="@string/notAvailable"
                    android:textColor="@color/black"
                    app:autoSizeMaxTextSize="@dimen/sp14"
                    app:autoSizeMinTextSize="4sp"
                    app:autoSizeTextType="uniform" />

                <TextView
                    android:id="@+id/viaRoute"
                    style="@style/TextStyleNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="@string/via"
                    android:textColor="@color/colorRed"
                    android:visibility="gone"
                    app:autoSizeMaxTextSize="@dimen/sp14"
                    app:autoSizeMinTextSize="4sp"
                    app:autoSizeTextType="uniform" />

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/selfAuditIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/assessment"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@id/imgMore"
                    app:layout_constraintEnd_toStartOf="@id/route_status"
                    app:layout_constraintTop_toTopOf="@id/imgMore" />

                <TextView
                    android:id="@+id/route_status"
                    style="@style/msg_context"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:gravity="end"
                    android:maxLines="1"
                    android:text="@string/inactive"
                    android:textColor="@color/booked_tickets"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@id/imgMore"
                    app:layout_constraintEnd_toStartOf="@id/imgMore"
                    app:layout_constraintTop_toTopOf="@id/imgMore" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_more_horiz"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/route_info"
            style="@style/TextStyleNormalTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:maxLines="1"
            android:text="@string/notAvailable"
            android:textColor="@color/black" />

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexDirection="row"
            app:flexWrap="wrap"
            app:justifyContent="flex_start">

            <TextView
                android:id="@+id/start_bustime"
                style="@style/TextStyleBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.7"
                android:layout_marginEnd="7dp"
                android:text="@string/notAvailable"
                android:textColor="@color/grey"
                android:textSize="@dimen/sp12" />

            <TextView
                android:id="@+id/travel_time"
                style="@style/TextStyleNormalTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.9"
                android:paddingHorizontal="8dp"
                android:layout_marginEnd="7dp"
                android:background="@drawable/ic_pointer"
                android:gravity="center"
                android:text="@string/notAvailable"
                android:textSize="@dimen/sp12" />

            <TextView
                android:id="@+id/end_bustime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.7"
                android:fontFamily="@font/notosans_bold"
                android:layout_marginEnd="7dp"
                android:gravity="end"
                android:text="@string/notAvailable"
                android:textColor="@color/grey"
                android:textSize="@dimen/sp12"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/coach_detail"
                style="@style/msg_context"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2.7"
                android:drawablePadding="4dp"
                android:text="@string/notAvailable"
                android:textColor="@color/black"
                app:drawableStartCompat="@drawable/icon_bus" />

        </com.google.android.flexbox.FlexboxLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:background="@color/flash_white_bg" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_4"
                app:cardCornerRadius="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/block_no_count"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/percent"
                    style="@style/TextStyleBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/booked_tickets"
                    android:padding="4dp"
                    android:text="@string/notAvailable"
                    android:textColor="@color/white" />


            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/block_no_count"
                style="@style/TextStyleBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/pickup_vlight_blue"
                android:drawablePadding="4dp"
                android:padding="4dp"
                android:text="@string/notAvailable"
                app:drawableStartCompat="@drawable/mobilephone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/seats"
                style="@style/msg_context"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_4"
                android:gravity="start"
                android:padding="4dp"
                android:text="@string/notAvailable"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline12"
                app:layout_constraintStart_toEndOf="@+id/cardView10"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/total_amount"
                style="@style/TextStyleNormal"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:padding="4dp"
                android:text="@string/notAvailable"
                android:textColor="@color/black"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/seats"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="193dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/flash_white_bg" />


        <!--        <androidx.recyclerview.widget.RecyclerView-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:id="@+id/rv_driver_number"/>-->
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginBottom="4dp"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:id="@+id/lldriver_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:layout_weight="1"
                    android:gravity="center"

                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/driver_one_name"
                        style="@style/TextStyleBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginEnd="3dp"
                        android:text="@string/driver_1"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/driver_one"
                        style="@style/msg_context"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="@string/empty" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lldriver_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:layout_weight="1"
                    android:gravity="center"

                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/driver_two_name"

                        style="@style/TextStyleBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginEnd="3dp"
                        android:text="@string/driver_2"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/driver_two"

                        style="@style/TextStyleNormalTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="@string/empty" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lldriver_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:layout_weight="1"
                    android:gravity="center"

                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/driver_three_name"

                        style="@style/TextStyleBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginEnd="3dp"
                        android:text="@string/driver_3"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/driver_three"

                        style="@style/TextStyleNormalTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="@string/empty" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llcleaner"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:layout_weight="1"
                    android:gravity="center"

                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/cleaner_name"

                        style="@style/TextStyleBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginEnd="3dp"

                        android:text="@string/cleaner"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_cleaner"
                        style="@style/TextStyleNormalTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"

                        android:text="@string/empty" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llcontractor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:layout_weight="1"

                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/contractor_name"
                        style="@style/TextStyleBold"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginEnd="3dp"
                        android:text="@string/contractor"


                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_contractor"
                        style="@style/TextStyleNormalTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"

                        android:text="@string/notAvailable" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llinspector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/dchk_inspecter_name"
                        style="@style/TextStyleBold"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginEnd="3dp"
                        android:text="@string/chk_inspector"


                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_Inspector"
                        style="@style/TextStyleNormalTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"

                        android:text="@string/notAvailable" />
                </LinearLayout>


            </LinearLayout>
        </HorizontalScrollView>


        <!--        <LinearLayout-->
        <!--            android:id="@+id/lock_chart_layout"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:background="@drawable/verylight_pickup_background"-->
        <!--            android:paddingStart="4dp"-->
        <!--            android:paddingEnd="4dp"-->
        <!--            android:weightSum="2">-->

        <!--            <androidx.appcompat.widget.SwitchCompat-->
        <!--                android:id="@+id/allow_reservation_switch"-->
        <!--                style="@style/TextStyleBold"-->
        <!--                android:layout_width="wrap_content"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:layout_weight="1.2"-->
        <!--                android:checked="true"-->
        <!--                android:paddingStart="8dp"-->
        <!--                android:text="@string/reservation"-->
        <!--                android:thumb="@drawable/thumb_no"-->
        <!--                app:track="@drawable/track" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mapbutton"
                style="@style/TextStyleBold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_4"
                android:layout_weight="0.8"
                android:background="@drawable/verylight_pickup_background"
                android:backgroundTint="@color/colorPrimary"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:paddingTop="@dimen/dp_14"
                android:paddingBottom="@dimen/dp_14"
                android:text="@string/view_route"
                android:textColor="@color/white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/btn_view_reservation_chart"
                style="@style/TextStyleBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_4"
                android:layout_weight="0.8"
                android:background="@drawable/verylight_pickup_background"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:paddingTop="@dimen/dp_14"
                android:paddingBottom="@dimen/dp_14"
                android:paddingHorizontal="@dimen/_10sdp"
                android:text="@string/view_reservation_chart"
                android:textColor="@color/colorButton" />

            <TextView
                android:id="@+id/btn_view_coach_layout_chart"
                style="@style/TextStyleBold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_4"
                android:layout_weight="0.8"
                android:visibility="gone"
                android:background="@drawable/verylight_pickup_background"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:paddingTop="@dimen/dp_14"
                android:paddingBottom="@dimen/dp_14"
                android:text="@string/view_coach_layout_chart"
                android:textColor="@color/colorButton" />

        </LinearLayout>


        <!--        </LinearLayout>-->


    </LinearLayout>


</androidx.cardview.widget.CardView>