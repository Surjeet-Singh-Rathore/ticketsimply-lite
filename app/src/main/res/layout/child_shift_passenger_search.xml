<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/childShiftPassenger_mainContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@android:color/white"
    app:cardCornerRadius="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/childShiftPassenger_tvSeatNo"
            style="@style/TextStyleBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_12"
            android:text="AP-406A"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/sp16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/childShiftPassenger_tvShiftLocation"
            style="@style/msg_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="(Same service) Kadappa to Vishakapa"
            android:textColor="@color/grey"
            app:layout_constraintBottom_toBottomOf="@+id/childShiftPassenger_tvSeatNo"
            app:layout_constraintStart_toEndOf="@+id/childShiftPassenger_tvSeatNo"
            app:layout_constraintTop_toTopOf="@+id/childShiftPassenger_tvSeatNo" />

        <TextView
            android:id="@+id/childShiftPassenger_tvShiftDateTime"
            style="@style/TextStyleBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_12"
            android:background="@drawable/layout_rounded_shape_border_radius_8dp_black"
            android:paddingStart="@dimen/dp_8"
            android:paddingTop="@dimen/dp_2"
            android:paddingEnd="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_2"
            android:text="24-04-2021 at 17:30"
            android:textColor="@color/grey"
            android:textSize="@dimen/sp12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/childShiftPassenger_tvSeatNo" />

        <TextView
            android:id="@+id/childShiftPassenger_tvShiftAvailable"
            style="@style/TextStyleBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:gravity="center"
            android:text="8/30 Available"
            android:textColor="@color/grey"
            android:textSize="@dimen/sp12"
            app:layout_constraintBottom_toBottomOf="@+id/childShiftPassenger_tvShiftDateTime"
            app:layout_constraintStart_toEndOf="@+id/childShiftPassenger_tvShiftDateTime"
            app:layout_constraintTop_toTopOf="@+id/childShiftPassenger_tvShiftDateTime" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>