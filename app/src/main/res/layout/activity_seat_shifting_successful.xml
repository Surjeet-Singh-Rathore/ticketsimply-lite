<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/button_color"
    android:fillViewport="true">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/shiftPassenger_proceedBtn">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <include
                android:id="@+id/toolbar_passenger_details"
                layout="@layout/toolbar_shifting_successful"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_horizontal_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="16dp"
                app:layout_constraintTop_toBottomOf="@+id/toolbar_passenger_details" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/dp_16" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="16dp" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/shift_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/toolbar_passenger_details" />


            <TextView
                android:id="@+id/old_service_number"
                style="@style/TextStyleBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_8"
                android:text="@string/empty"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/sp14"
                app:layout_constraintEnd_toEndOf="@+id/tvShiftDateTime"
                app:layout_constraintStart_toStartOf="@+id/tvShiftDateTime"
                app:layout_constraintTop_toBottomOf="@+id/shift_details" />


            <TextView
                android:id="@+id/tvShiftDateTime"
                style="@style/TextStyleBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@drawable/layout_rounded_shape_border_radius_8dp_black"
                android:gravity="center"
                android:paddingStart="@dimen/dp_8"
                android:paddingTop="@dimen/dp_2"
                android:paddingEnd="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_2"
                android:text="@string/empty"
                android:textColor="@color/grey"
                android:textSize="@dimen/sp12"
                app:layout_constraintEnd_toEndOf="@+id/animation_view"
                app:layout_constraintStart_toStartOf="@+id/animation_view"
                app:layout_constraintTop_toBottomOf="@+id/old_service_number" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_view"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginTop="@dimen/dp_16"
                app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_end"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_start"
                app:layout_constraintTop_toBottomOf="@+id/tvShiftDateTime"
                app:lottie_autoPlay="true"
                app:lottie_enableMergePathsForKitKatAndAbove="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/arrow_down" />


            <TextView
                android:id="@+id/new_service_number"
                style="@style/TextStyleBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:text="@string/empty"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/sp14"
                app:layout_constraintEnd_toEndOf="@+id/animation_view"
                app:layout_constraintStart_toStartOf="@+id/animation_view"
                app:layout_constraintTop_toBottomOf="@+id/animation_view" />

            <!--            <TextView-->
            <!--                android:id="@+id/tvShiftLocation_new"-->
            <!--                style="@style/TextStyleNormal"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginStart="@dimen/dp_8"-->
            <!--                android:text="Kadappa to Vishakapa"-->
            <!--                android:textColor="@color/grey"-->
            <!--                app:layout_constraintBottom_toBottomOf="@+id/new_service_number"-->
            <!--                app:layout_constraintStart_toEndOf="@+id/new_service_number"-->
            <!--                app:layout_constraintTop_toTopOf="@+id/new_service_number" />-->

            <TextView
                android:id="@+id/tvShiftDateTime_new"
                style="@style/TextStyleBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_14"
                android:background="@drawable/layout_rounded_shape_border_radius_8dp_black"
                android:gravity="center"
                android:paddingStart="@dimen/dp_8"
                android:paddingTop="@dimen/dp_2"
                android:paddingEnd="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_2"
                android:text="@string/empty"
                android:textColor="@color/grey"
                android:textSize="@dimen/sp12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/new_service_number"
                app:layout_constraintStart_toStartOf="@+id/new_service_number"
                app:layout_constraintTop_toBottomOf="@+id/new_service_number" />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.4" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/shiftPassenger_proceedBtn"
        style="@style/TextStyleBold"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_16"
        android:background="@drawable/layout_rounded_shape_left_selected"
        android:text="@string/view_new_ticket"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/sp16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</RelativeLayout>