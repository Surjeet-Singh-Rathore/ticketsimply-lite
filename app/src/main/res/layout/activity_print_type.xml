<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_bg"
    tools:context=".presentation.view.activity.LanguageSelectionAvtivity">

    <include
        android:id="@+id/layout_toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_toolbar">

        <RadioButton

            android:id="@+id/bluetoothRB"
            style="@style/TextStyleNormalTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_8"
            android:background="@color/white"
            android:checked="true"
            android:layoutDirection="rtl"
            android:paddingStart="@dimen/dp_16"
            android:paddingTop="18dp"
            android:paddingEnd="@dimen/dp_16"
            android:paddingBottom="18dp"
            android:text="@string/bluetooth" />

        <RadioButton
            android:id="@+id/harvardRB"
            style="@style/TextStyleNormalTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_8"
            android:background="@color/white"
            android:layoutDirection="rtl"
            android:paddingStart="@dimen/dp_16"
            android:paddingTop="18dp"
            android:paddingEnd="@dimen/dp_16"
            android:paddingBottom="18dp"
            android:text="@string/harvard"
            android:visibility="visible" />

        <RadioButton
            android:id="@+id/sunmiRB"
            style="@style/TextStyleNormalTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_8"
            android:background="@color/white"
            android:layoutDirection="rtl"
            android:paddingStart="@dimen/dp_16"
            android:paddingTop="18dp"
            android:paddingEnd="@dimen/dp_16"
            android:paddingBottom="18dp"
            android:text="@string/SUNMI"
            android:visibility="visible" />

        <RadioButton
            android:id="@+id/pineLabRB"
            style="@style/TextStyleNormalTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_8"
            android:background="@color/white"
            android:layoutDirection="rtl"
            android:paddingStart="@dimen/dp_16"
            android:paddingTop="18dp"
            android:paddingEnd="@dimen/dp_16"
            android:paddingBottom="18dp"
            android:text="@string/pinelab"
            android:visibility="gone" />
    </RadioGroup>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_change_language"
        style="@style/TextStyleBold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@color/colorPrimary"
        android:text="Change language"
        android:textSize="@dimen/sp16"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>