<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/modifySearchCL"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/tansparentbackbroundServiceSummary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_tint_color"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:id="@+id/myBookingBookTicketContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginTop="10dp"
                android:elevation="4dp"
                android:orientation="vertical"
                android:visibility="gone"
                app:cardBackgroundColor="@color/colorWhite">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <ImageView
                        android:id="@+id/search"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:background="?selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_search"
                        app:tint="@color/colorBlackShadow" />

                    <EditText
                        android:id="@+id/autoCompleteTextView"
                        style="@style/textInputStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toStartOf="@id/text_cancel"
                        android:layout_toEndOf="@id/search"
                        android:background="@null"
                        android:ems="10"
                        android:hint="PNR, Name, Mobile Number"
                        android:text=""
                        android:textColor="@color/colorDimShadow6" />

                    <TextView
                        android:id="@+id/text_cancel"
                        style="@style/TextStyleBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:gravity="right|center"
                        android:text="cancel"
                        android:textColor="@color/colorRed"
                        android:textSize="18sp" />

                    <android.widget.Button
                        android:id="@+id/btn_pnr_Search"
                        style="@style/TextStyleBold"
                        android:layout_width="64dp"
                        android:layout_height="32dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/white_bg"
                        android:gravity="center"
                        android:text="@string/search"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textSize="11sp"
                        app:backgroundTint="@color/colorPrimary" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_booking_src_des"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:id="@+id/layout_home_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/flash_white_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:elevation="5dp"
                        android:orientation="vertical"
                        app:cardBackgroundColor="@color/colorWhite">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/margin_10">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"

                                android:background="@drawable/available_border">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="5dp"

                                            android:layout_marginEnd="5dp"
                                            android:orientation="vertical">

                                            <TextView
                                                android:id="@+id/tvSource"
                                                style="@style/msg_context"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="14dp"
                                                android:paddingHorizontal="5dp"
                                                android:layout_marginBottom="14dp"
                                                android:drawableLeft="@drawable/ic_source"
                                                android:drawablePadding="5dp"
                                                android:drawableTint="@color/colorText"
                                                android:gravity="center|left"
                                                android:hint="@string/enterSource"
                                                android:text="@string/empty"
                                                android:textColor="@color/colorBlackShadow" />
                                        </LinearLayout>

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="1dp"
                                            android:layout_marginTop="5dp"
                                            android:background="@color/colorDimShadow1" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="5dp"
                                            android:layout_marginEnd="5dp"
                                            android:orientation="vertical">

                                            <TextView
                                                android:id="@+id/tvDestination"
                                                style="@style/msg_context"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="14dp"
                                                android:layout_marginBottom="10dp"
                                                android:paddingHorizontal="5dp"
                                                android:drawableLeft="@drawable/ic_destination"
                                                android:drawablePadding="5dp"
                                                android:gravity="center|left"
                                                android:hint="@string/enterDestination"
                                                android:text="@string/empty"
                                                android:textColor="@color/colorBlackShadow" />
                                        </LinearLayout>

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="1dp"
                                            android:layout_marginTop="5dp"
                                            android:background="@color/colorDimShadow1" />


                                    </LinearLayout>

                                    <FrameLayout
                                        android:id="@+id/btnRotate"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right"
                                        android:layout_marginTop="44dp"
                                        android:layout_marginRight="10dp"
                                        android:background="@drawable/circle_shape"
                                        android:backgroundTint="@color/colorText"
                                        android:elevation="5dp">

                                        <ImageView
                                            android:id="@+id/imgRotate"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            app:srcCompat="@drawable/ic_flip" />

                                    </FrameLayout>

                                </FrameLayout>

                                <LinearLayout
                                    android:id="@+id/date_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="5dp"
                                        android:layout_marginTop="14dp"
                                        android:layout_marginEnd="5dp"
                                        android:layout_marginBottom="10dp"
                                        android:orientation="horizontal"
                                        android:weightSum="1">

                                        <TextView
                                            android:id="@+id/tvSelectDate"
                                            style="@style/msg_context"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.50"
                                            android:drawableLeft="@drawable/ic_calendar_start"
                                            android:drawablePadding="5dp"
                                            android:paddingStart="5dp"
                                            android:gravity="center|left"
                                            android:hint="@string/departure_date"
                                            android:text="@string/empty"
                                            android:textColor="@color/colorBlackShadow" />

                                        <TextView
                                            android:id="@+id/tvTodayDate"
                                            style="@style/TextStyleBold"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.25"
                                            android:background="?selectableItemBackgroundBorderless"
                                            android:gravity="center"
                                            android:text="@string/today"
                                            android:textColor="@color/colorPrimary"
                                            android:textSize="12sp" />


                                        <TextView
                                            android:id="@+id/tvTomorrowDate"
                                            style="@style/TextStyleBold"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.25"
                                            android:background="?selectableItemBackgroundBorderless"
                                            android:gravity="center"
                                            android:text="@string/tomorrow"
                                            android:singleLine="true"
                                            android:textColor="@color/colorPrimary"
                                            android:textSize="12sp" />
                                    </LinearLayout>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_marginTop="5dp"
                                        android:background="@color/colorDimShadow1" />

                                </LinearLayout>



                                <LinearLayout
                                    android:id="@+id/layout_return"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:visibility="gone">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="14dp"
                                        android:layout_marginBottom="14dp">

                                        <TextView
                                            android:id="@+id/tvSelectReturnDate"
                                            style="@style/msg_context"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentLeft="true"
                                            android:drawableLeft="@drawable/ic_calendar_stop"
                                            android:drawablePadding="5dp"
                                            android:gravity="center|left"
                                            android:hint="@string/return_date"
                                            android:text="@string/empty"
                                            android:textColor="@color/colorBlackShadow" />


                                        <TextView
                                            android:id="@+id/tvOptional"
                                            style="@style/TextStyleBold"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_alignParentRight="true"
                                            android:layout_centerInParent="true"
                                            android:gravity="center"
                                            android:text="@string/optional"
                                            android:textColor="@color/button_default_color"
                                            android:textSize="12sp" />

                                        <ImageView
                                            android:id="@+id/img_clear"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentRight="true"
                                            android:layout_centerInParent="true"
                                            android:src="@drawable/ic_cross"
                                            android:visibility="gone" />
                                    </RelativeLayout>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_marginTop="5dp"
                                        android:background="@color/colorDimShadow1"
                                        android:visibility="gone" />
                                </LinearLayout>


                                <LinearLayout
                                    android:id="@+id/bus_service_root"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:weightSum="6">

                                        <TextView
                                            android:id="@+id/bus_services"
                                            style="@style/msg_context"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="14dp"
                                            android:layout_marginBottom="14dp"
                                            android:layout_weight="5"
                                            android:drawableLeft="@drawable/ic_source"
                                            android:drawablePadding="5dp"
                                            android:drawableTint="@color/colorText"
                                            android:gravity="center|left"
                                            android:paddingHorizontal="10dp"
                                            android:hint="@string/select_service"
                                            android:text="@string/empty"
                                            android:textColor="@color/colorBlackShadow" />

                                        <ImageView
                                            android:id="@+id/bus_service_cross"
                                            android:layout_width="@dimen/dp_0"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_weight="1"
                                            android:paddingTop="@dimen/dp_8"
                                            android:paddingBottom="@dimen/dp_8"
                                            android:src="@drawable/ic_arrow_down"
                                            app:tint="@color/colorBlackShadow" />
                                    </LinearLayout>


                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_marginTop="5dp"
                                        android:background="@color/colorDimShadow1"
                                        android:visibility="gone" />
                                </LinearLayout>

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/margin_10"
                                android:weightSum="2">

                                <android.widget.Button
                                    android:id="@+id/btnCancel"
                                    style="@style/TextStyleBold"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/button_height"
                                    android:layout_weight="1"
                                    android:background="@color/transparent"
                                    android:text="@string/cancel"
                                    android:textAllCaps="false"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/sp16" />


                                <android.widget.Button
                                    android:id="@+id/btnSearch"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/button_height"
                                    android:layout_weight="1"
                                    android:background="@drawable/white_bg"
                                    android:backgroundTint="@color/colorPrimary"
                                    android:fontFamily="@font/notosans_bold"
                                    android:text="@string/modify_search"
                                    android:textAllCaps="false"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="@dimen/sp16" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>