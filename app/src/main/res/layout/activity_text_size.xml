<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_bg"
    tools:context=".presentation.view.activity.TextSizeActivity">

    <!-- Toolbar Include -->
    <include
        android:id="@+id/layout_toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <SeekBar
        android:id="@+id/displaySizeSeekbar"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:max="3"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="@dimen/_25sdp"
        app:layout_constraintTop_toBottomOf="@id/layout_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:progress="2"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>


    <TextView
        android:id="@+id/smallTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:text="S"
        android:textSize="@dimen/_15ssp"
        app:layout_constraintTop_toBottomOf="@id/displaySizeSeekbar"
        app:layout_constraintStart_toStartOf="@id/displaySizeSeekbar" />

    <TextView
        android:id="@+id/defaultTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D"
        android:textSize="@dimen/_15ssp"
        android:layout_marginLeft="@dimen/_60sdp"
        app:layout_constraintTop_toBottomOf="@id/displaySizeSeekbar"
        app:layout_constraintStart_toStartOf="@id/displaySizeSeekbar"
        app:layout_constraintEnd_toEndOf="@id/guideline"/>

    <TextView
        android:id="@+id/largeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="L"
        android:textSize="@dimen/_15ssp"
        android:layout_marginEnd="@dimen/_60sdp"
        app:layout_constraintTop_toBottomOf="@id/displaySizeSeekbar"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="@id/displaySizeSeekbar"/>

    <TextView
        android:id="@+id/xLargeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_10sdp"
        android:text="XL"
        android:textSize="@dimen/_15ssp"
        app:layout_constraintTop_toBottomOf="@id/displaySizeSeekbar"
        app:layout_constraintEnd_toEndOf="@id/displaySizeSeekbar" />
    
    
   <Button
       android:id="@+id/saveButton"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Save"
       android:layout_marginTop="@dimen/_25sdp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@id/displaySizeSeekbar"/>
</androidx.constraintlayout.widget.ConstraintLayout>
