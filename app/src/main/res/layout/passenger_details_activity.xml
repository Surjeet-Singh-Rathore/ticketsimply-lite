<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:shimmer="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/header_gradient_bg"
    android:fillViewport="true">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerDashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        android:visibility="invisible"
        shimmer:duration="800">

        <include layout="@layout/shimmer_layout_passenger_details" />
    </com.facebook.shimmer.ShimmerFrameLayout>

    <include
        android:id="@+id/layout_passenger_details_seat_legends"
        layout="@layout/passenger_details_seat_legends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="top"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent" />

    <include
        android:id="@+id/toolbar_passenger_details"
        layout="@layout/toolbar_passenger_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_passenger_details">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_100">


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="0dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="0dp" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/auto_discount_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@color/white"
                android:padding="@dimen/dp_16"
                app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_end"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_start"
                app:layout_constraintTop_toBottomOf="@id/journeyDetailsCL">

                <TextView
                    android:id="@+id/additional_discount"
                    style="@style/TextStyleBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/additional_discount"
                    android:textColor="@color/colorBlackShadow"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <RadioGroup
                    android:id="@+id/radio_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/additional_discount">

                    <RadioButton
                        android:id="@+id/per_booking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/per_booking" />

                    <RadioButton
                        android:id="@+id/per_seat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/per_seat" />
                </RadioGroup>


                <TextView
                    android:id="@+id/discount_text"
                    style="@style/TextStyleBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/discount"
                    android:textColor="@color/colorBlackShadow"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/radio_layout" />


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/discount_Coupon_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:layout_width="0dp"
                    android:layout_height="58dp"
                    android:background="@drawable/header_gradient_bg"
                    android:ellipsize="end"
                    android:hint="@string/discount"
                    app:boxStrokeErrorColor="@color/colorRed2"
                    app:boxStrokeWidth="@dimen/dp_2"
                    app:errorEnabled="true"
                    app:errorIconDrawable="@null"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/cross_click"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/discount_text">

                    <AutoCompleteTextView
                        android:id="@+id/dicount_code_drop"
                        style="@style/msg_context"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/et_bg"
                        android:inputType="none"
                        android:text="@string/empty"
                        shimmer:ignore="LabelFor" />

                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:id="@+id/cross_click"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:background="#61AFAFAF"
                    android:padding="16dp"
                    android:src="@drawable/ic_cross"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/discount_Coupon_layout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/discount_Coupon_layout"
                    app:tint="@color/black" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/journeyDetailsCL"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@color/white"
                android:padding="@dimen/dp_16"
                app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_end"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_start"
                app:layout_constraintTop_toTopOf="parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical"
                    android:shadowColor="#000"
                    android:shadowDx="50"
                    android:shadowDy="50"
                    android:shadowRadius="20"
                    app:layout_constraintTop_toTopOf="parent">


                    <LinearLayout
                        android:id="@+id/layout_parent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/layout_bus_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:padding="10dp"
                                android:weightSum="1">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.3"
                                    android:gravity="top|start"
                                    android:orientation="vertical"
                                    android:paddingLeft="8dp">

                                    <TextView
                                        android:id="@+id/tv_dept_time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/notAvailable"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="15sp" />


                                    <TextView
                                        android:id="@+id/tv_source"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:ellipsize="marquee"
                                        android:singleLine="true"
                                        android:text="@string/notAvailable"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="18sp"
                                        android:textStyle="bold" />



                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.4"
                                    android:gravity="top"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tv_jrny_time"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="-10dp"
                                        android:text="@string/notAvailable"
                                        android:textAlignment="center"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="15dp" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:weightSum="1">

                                        <View
                                            android:layout_width="0dp"
                                            android:layout_height="1dp"
                                            android:layout_gravity="center"
                                            android:layout_weight="0.9"
                                            android:background="@color/colorBlack" />

                                        <ImageView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="-8dp"
                                            android:layout_weight="0.1"
                                            android:scaleType="fitCenter" />
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.3"
                                    android:gravity="top|end"
                                    android:orientation="vertical"
                                    android:paddingRight="8dp">

                                    <TextView
                                        android:id="@+id/tv_arrival_time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/notAvailable"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="15sp" />

                                    <TextView
                                        android:id="@+id/tv_destination"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:ellipsize="marquee"
                                        android:singleLine="true"
                                        android:text="@string/notAvailable"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="18sp"
                                        android:textStyle="bold" />



                                </LinearLayout>


                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/passengerDetailsContactDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@color/white"
                android:padding="@dimen/dp_16"
                app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_end"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_start"
                app:layout_constraintTop_toBottomOf="@+id/auto_discount_layout">

                <TextView
                    android:id="@+id/tvContactDetails"
                    style="@style/TextStyleBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contact_details"
                    android:textColor="@color/colorBlackShadow"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/view1"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp_16"
                    android:background="@color/gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvContactDetails"
                    tools:layout_editor_absoluteY="16dp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutMobileNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    app:layout_constraintTop_toBottomOf="@id/view1">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutMobileNoCode"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                        android:layout_width="110dp"
                        android:layout_height="58dp"
                        android:background="@drawable/header_gradient_bg"
                        android:ellipsize="end"
                        android:hint="@string/code"
                        app:boxStrokeErrorColor="@color/colorRed2"
                        app:boxStrokeWidth="@dimen/dp_2"
                        app:errorEnabled="true"
                        app:errorIconDrawable="@null"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <AutoCompleteTextView
                            android:id="@+id/mobileNoCountryCode"
                            style="@style/msg_context"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/et_bg"
                            android:inputType="none"
                            android:text="@string/empty"
                            shimmer:ignore="LabelFor" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutEdtMobileNumber"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/text_input_edit_text_height"
                        android:layout_marginStart="@dimen/dp_8"
                        android:background="@drawable/header_gradient_bg"
                        app:boxStrokeErrorColor="@color/colorRed2"
                        app:boxStrokeWidth="@dimen/dp_2"
                        app:errorEnabled="true"
                        app:errorIconDrawable="@null"
                        app:errorTextAppearance="@style/TextAppearance.MaterialComponents.Headline3"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/layoutMobileNoCode"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtMobileNumber"
                            style="@style/textInputStyle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/et_bg"
                            android:hint="@string/primary_mobile_number"
                            android:imeOptions="actionDone"
                            android:textSize="14sp"
                            android:inputType="number" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <TextView
                        android:id="@+id/tvRetrievePax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/retrieve"
                        style="@style/TextStyleBold"
                        android:textSize="11sp"
                        android:layout_marginEnd="4dp"
                        android:textColor="@color/colorPrimary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutAlternativeMobileNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    app:layout_constraintTop_toBottomOf="@id/layoutMobileNo">


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutAlternativeMobileNoCode"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                        android:layout_width="110dp"
                        android:layout_height="58dp"
                        android:background="@drawable/header_gradient_bg"
                        android:ellipsize="end"
                        android:hint="@string/code"
                        app:boxStrokeErrorColor="@color/colorRed2"
                        app:boxStrokeWidth="@dimen/dp_2"
                        app:errorEnabled="true"
                        app:errorIconDrawable="@null"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <AutoCompleteTextView
                            android:id="@+id/alternativeMobileNoCountryCode"
                            style="@style/msg_context"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/et_bg"
                            android:inputType="none"
                            android:text="@string/empty"
                            shimmer:ignore="LabelFor" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutEdtAlternativeMobileNumber"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/text_input_edit_text_height"
                        android:layout_marginStart="@dimen/dp_8"
                        android:background="@drawable/header_gradient_bg"
                        app:boxStrokeErrorColor="@color/colorRed2"
                        app:boxStrokeWidth="@dimen/dp_2"
                        app:errorEnabled="true"
                        app:errorIconDrawable="@null"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/layoutAlternativeMobileNoCode"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtAlterNativeMobileNumber"
                            style="@style/textInputStyle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/et_bg"
                            android:hint="@string/alternative_mobile_number"
                            android:imeOptions="actionDone"
                            android:inputType="number" />

                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutEmailId"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/text_input_edit_text_height"
                    android:layout_marginTop="@dimen/dp_16"
                    android:background="@drawable/header_gradient_bg"
                    app:boxStrokeErrorColor="@color/colorRed2"
                    app:boxStrokeWidth="@dimen/dp_2"
                    app:errorEnabled="true"
                    app:errorIconDrawable="@null"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layoutAlternativeMobileNo">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmailId"
                        style="@style/textInputStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/et_bg"
                        android:hint="@string/email_id"
                        android:imeOptions="actionNext"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/layoutInsurance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp_16"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_start"
                app:layout_constraintTop_toBottomOf="@+id/passengerDetailsContactDetails">

                <CheckBox
                    android:layout_marginStart="@dimen/_4sdp"
                    android:id="@+id/checkInsurance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/insurance"
                    android:textAllCaps="true"
                    android:checked="false"
                    style="@style/TextStyleBold"
                    android:textColor="@color/colorBlackShadow"
                    android:textSize="12sp"
                   />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_passengerDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@color/button_color"
                app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_end"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_start"
                app:layout_constraintTop_toBottomOf="@+id/layoutInsurance" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <include
        android:id="@+id/passengerDetails_paymentProceed"
        layout="@layout/passenger_details_payment_proceed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        app:layout_constraintStart_toStartOf="parent" />


</RelativeLayout>