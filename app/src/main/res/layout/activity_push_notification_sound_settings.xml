<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/title_bg"
    tools:context=".presentation.view.activity.PushNotificationSoundSettingsActivity">

    <include
        android:id="@+id/layout_toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16"
        android:orientation="vertical">

        <RadioButton

            android:layoutDirection="rtl"
            android:paddingStart="@dimen/dp_16"
            android:paddingEnd="@dimen/dp_16"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:layout_marginBottom="@dimen/dp_8"
            android:background="@color/white"
            android:id="@+id/noSound"
            style="@style/TextStyleNormalTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/silent" />

        <RadioButton
            android:layoutDirection="rtl"
            android:paddingStart="@dimen/dp_16"
            android:paddingEnd="@dimen/dp_16"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:layout_marginBottom="@dimen/dp_8"
            android:background="@color/white"
            android:id="@+id/systemSound"
            android:visibility="visible"
            style="@style/TextStyleNormalTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/system_sound" />

        <RadioButton
            android:layoutDirection="rtl"
            android:paddingStart="@dimen/dp_16"
            android:paddingEnd="@dimen/dp_16"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:layout_marginBottom="@dimen/dp_8"
            android:background="@color/white"
            android:id="@+id/defaultSound"
            android:visibility="visible"
            style="@style/TextStyleNormalTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/default_sound" />
    </RadioGroup>

</LinearLayout>