<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/layout_rounded_shape_top_left_right"
    android:orientation="vertical"
    android:padding="@dimen/dp_16">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            style="@style/TextStyleBold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/luggage"
            android:textColor="@color/grey"
            android:textSize="@dimen/sp16" />


        <TextView
            android:id="@+id/cancel"

            style="@style/TextStyleNormalTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="@string/cancel"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/passenger_details_LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/layout_rounded_shape_border_radius_8dp_black"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_16"
        android:paddingTop="8dp"

        android:paddingEnd="@dimen/dp_16"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/pass_name"
            style="@style/TextStyleBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="name (gender, age)"
            android:textColor="@color/grey"
            android:textSize="@dimen/dp_16" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/seat_number"
                style="@style/TextStyleNormalTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/eta_background"
                android:backgroundTint="@color/primaryLight"
                android:paddingStart="@dimen/dp_8"
                android:paddingTop="5dp"
                android:paddingEnd="@dimen/dp_8"
                android:paddingBottom="5dp"
                android:text="seatNumber"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp10" />

            <TextView
                android:id="@+id/seat_status"
                style="@style/TextStyleNormalTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:background="@drawable/round_bg_white"
                android:backgroundTint="@color/colorPrimary"
                android:paddingStart="@dimen/dp_8"
                android:paddingTop="5dp"
                android:paddingEnd="@dimen/dp_8"
                android:paddingBottom="5dp"
                android:text="seatStatus"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp10" />


        </LinearLayout>


    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/multiSeatDialogCL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/layout_rounded_shape_border_radius_8dp_black"
        android:visibility="gone">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/multiSeatTitleTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/seat_numbers"
            style="@style/TextStyleBold"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/multiSeatSelectRV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:padding="8dp"
            tools:itemCount="2"
            tools:listitem="@layout/multi_checkbox_horizontal_item"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/multiSeatTitleTV"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/header_gradient_bg">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_item_name"
            style="@style/textInputStyle"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/et_bg"
            android:hint="@string/item_description"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:textColor="@color/gray"
            android:textColorHint="@color/colorPrimaryDark" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/header_gradient_bg">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_qutanity"
            style="@style/textInputStyle"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/et_bg"
            android:hint="@string/quantity"
            android:maxLength="9"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:textColor="@color/gray"
            android:textColorHint="@color/colorPrimaryDark" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/header_gradient_bg">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_amount"
            style="@style/textInputStyle"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/et_bg"
            android:hint="@string/amount"
            android:maxLength="9"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:textColor="@color/gray"
            android:textColorHint="@color/colorPrimaryDark" />
    </com.google.android.material.textfield.TextInputLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_update"
        style="@style/TextStyleBold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/button_selected_bg"
        android:text="@string/update"
        android:textColor="@color/white"
        android:textSize="@dimen/sp16" />


</LinearLayout>