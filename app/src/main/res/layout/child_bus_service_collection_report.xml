<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_4sdp"
    app:cardCornerRadius="4dp"
    app:cardPreventCornerOverlap="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:padding="@dimen/_5sdp">

        <TextView
            android:id="@+id/pnrTV"
            style="@style/TextStyleBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:text="@string/pnr_number"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/dot"
            android:layout_width="@dimen/_4sdp"
            android:layout_height="@dimen/_4sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:background="@drawable/dot_background"
            app:layout_constraintStart_toEndOf="@+id/pnrTV"
            app:layout_constraintTop_toTopOf="@+id/pnrTV"
            app:layout_constraintBottom_toBottomOf="@+id/pnrTV"
            app:layout_constraintHorizontal_bias="0.5" />

        <TextView
            android:id="@+id/originDestinationIdTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextStyleBold"
            android:layout_marginStart="@dimen/_8sdp"
            android:text="@string/notAvailable"
            android:textSize="14sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/dot"
            app:layout_constraintTop_toTopOf="@+id/pnrTV"
            app:layout_constraintBottom_toBottomOf="@+id/pnrTV" />

        <TextView
            android:id="@+id/tvCoachNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/TextStyleBold"
            android:layout_marginStart="@dimen/_8sdp"
            android:text="@string/notAvailable"
            android:textSize="14sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/originDestinationIdTV"
            app:layout_constraintTop_toTopOf="@+id/pnrTV"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/pnrTV" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineForCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.35" />

        <TextView
            android:id="@+id/seatNumTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@string/seat_no_title"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:textColor="@color/very_light_greyyy"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guidelineForCard"
            app:layout_constraintTop_toBottomOf="@+id/pnrTV" />

        <TextView
            android:id="@+id/seatNumValueTV"
            style="@style/TextStyleBold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:text="@string/notAvailable"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guidelineForCard"
            app:layout_constraintTop_toBottomOf="@+id/seatNumTV" />

        <TextView
            android:id="@+id/branchNameTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@string/branch_name_issued_by"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/very_light_greyyy"
            android:layout_marginStart="@dimen/_4sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/guidelineForCard"
            app:layout_constraintTop_toTopOf="@+id/seatNumTV" />

        <TextView
            android:id="@+id/branchNameValueTV"
            style="@style/TextStyleBold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@string/notAvailable"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            android:layout_marginStart="@dimen/_4sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/guidelineForCard"
            app:layout_constraintTop_toTopOf="@+id/seatNumValueTV" />

        <TextView
            android:id="@+id/fareTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/fare"
            android:layout_marginEnd="@dimen/_6sdp"
            android:textColor="@color/very_light_greyyy"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guidelineForCard"
            app:layout_constraintTop_toBottomOf="@+id/seatNumValueTV" />

        <TextView
            android:id="@+id/fareValueTV"
            style="@style/TextStyleBold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:text="@string/notAvailable"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guidelineForCard"
            app:layout_constraintTop_toBottomOf="@+id/fareTV" />

        <TextView
            android:id="@+id/netAmountTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@string/net_amount"
            android:textSize="@dimen/_10ssp"
            android:layout_marginStart="@dimen/_4sdp"
            android:textColor="@color/very_light_greyyy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/guidelineForCard"
            app:layout_constraintTop_toTopOf="@+id/fareTV" />

        <TextView
            android:id="@+id/netAmountValueTV"
            style="@style/TextStyleBold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@string/notAvailable"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            android:layout_marginStart="@dimen/_4sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/guidelineForCard"
            app:layout_constraintTop_toTopOf="@+id/fareValueTV" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
