<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    >


    <ScrollView
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnSave"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true"

        android:layout_height="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="16dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/backIV"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:paddingVertical="@dimen/_10sdp"
                android:paddingEnd="@dimen/_20sdp"
                android:src="@drawable/arrow_back"
                android:layout_height="wrap_content"/>

            <!-- Title Bar -->
            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/backIV"
                android:text="Pending ticket confirmation"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textColor="@color/grey"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@id/backIV"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Question -->
            <TextView
                android:id="@+id/question"
                android:layout_width="0dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:text="Did you collect the payment? Find the below Ticket Details"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/backIV"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Ticket Number -->

            <!-- Confirm by label -->
            <TextView
                android:id="@+id/ticket_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="Ticket Number:"
                android:textColor="@color/grey"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/question" />

            <TextView
                android:id="@+id/ticketNumberValueTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text=""
                android:layout_marginStart="@dimen/_5sdp"
                android:textColor="@color/grey"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@id/ticket_number"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@id/question" />

            <TextView
                android:id="@+id/confirm_by_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm by"
                android:textStyle="bold"
                android:visibility="gone"
                android:textColor="@color/grey"
                android:paddingTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/ticket_number"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Confirm by radio group -->
            <RadioGroup
                android:id="@+id/confirm_by_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/confirm_by_label"
                app:layout_constraintStart_toStartOf="parent">

                <RadioButton
                    android:id="@+id/radio_self"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Self" />

                <RadioButton
                    android:id="@+id/radio_on_behalf"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:text="On behalf of"
                    />
            </RadioGroup>

            <!-- On behalf of label -->
            <TextView
                android:id="@+id/on_behalf_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="On behalf of"
                android:textColor="@color/grey"
                android:textStyle="bold"
                android:paddingTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/confirm_by_group"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- On behalf of radio group -->
            <RadioGroup
                android:id="@+id/on_behalf_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/on_behalf_label"
                app:layout_constraintStart_toStartOf="parent">

                <RadioButton
                    android:id="@+id/radio_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/radio_online_agent"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:text="Online agent" />

                <RadioButton
                    android:id="@+id/radio_offline_agent"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:text="Offline agent" />
            </RadioGroup>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutTravelBranch"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_input_edit_text_height"
                android:layout_marginTop="@dimen/margin_10"
                android:hint="@string/travel_branch"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/on_behalf_group"
                app:boxBackgroundColor="@color/title_bg"
                app:boxBackgroundMode="filled"
                app:boxStrokeErrorColor="@color/colorRed2"
                app:boxStrokeWidth="@dimen/dp_2"
                app:errorEnabled="true"
                app:errorIconDrawable="@null">

                <AutoCompleteTextView
                    android:id="@+id/etTravelBranch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/et_bg"
                    android:inputType="none"
                    android:textColor="@color/colorBlackShadow"
                    android:textColorHint="@color/grey"
                    android:textSize="14sp"
                    android:textStyle="normal" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutUser"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_input_edit_text_height"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="User"
                app:layout_constraintTop_toBottomOf="@+id/layoutTravelBranch"
                app:boxBackgroundColor="@color/title_bg"
                app:boxBackgroundMode="filled"
                app:boxStrokeErrorColor="@color/colorRed2"
                app:boxStrokeWidth="@dimen/dp_2"
                app:errorEnabled="true"
                app:errorIconDrawable="@null">

                <AutoCompleteTextView
                    android:id="@+id/userET"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/et_bg"
                    android:inputType="none"
                    android:textColor="@color/colorBlackShadow"
                    android:textColorHint="@color/grey"
                    android:textSize="14sp"
                    android:textStyle="normal" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/paymentOptionTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Payment option"
                android:textColor="@color/grey"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/layoutUser"
                app:layout_constraintStart_toStartOf="parent" />


            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/paymentGatewayLL"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@id/paymentOptionTV"
                android:layout_height="wrap_content">

                <fragment
                    android:id="@+id/paymentMethodFragment"
                    android:name="com.bitla.ts.presentation.view.fragments.PaymentOptionsFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <TextView
                android:id="@+id/tvTotalFareLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_fare_"
                android:visibility="gone"
                android:textColor="#333333"
                android:textSize="16sp"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@id/paymentGatewayLL"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tvTotalFareValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="gone"
                android:textStyle="bold"
                android:textColor="#333333"
                android:textSize="16sp"
                app:layout_constraintBaseline_toBaselineOf="@id/tvTotalFareLabel"
                app:layout_constraintStart_toEndOf="@id/tvTotalFareLabel"
                android:layout_marginStart="4dp"/>

            <!-- Transaction charge -->
            <TextView
                android:id="@+id/tvTransactionChargeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaction charge:"
                android:textColor="#333333"
                android:textSize="16sp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/tvTotalFareLabel"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tvTransactionChargeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="gone"
                android:textStyle="bold"
                android:textColor="#333333"
                android:textSize="16sp"
                app:layout_constraintBaseline_toBaselineOf="@id/tvTransactionChargeLabel"
                app:layout_constraintStart_toEndOf="@id/tvTransactionChargeLabel"
                android:layout_marginStart="4dp"/>


            <TextView
                android:id="@+id/selectBoardingPointTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Select boarding point"
                android:textColor="@color/grey"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tvTransactionChargeValue"
                app:layout_constraintStart_toStartOf="parent" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutBoardingPoint"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="Boarding point"
                app:layout_constraintTop_toBottomOf="@+id/selectBoardingPointTV"
                app:boxBackgroundColor="@color/title_bg"
                app:boxBackgroundMode="filled"
                android:visibility="gone"
                app:boxStrokeErrorColor="@color/colorRed2"
                app:boxStrokeWidth="@dimen/dp_2"
                app:errorEnabled="true"
                app:errorIconDrawable="@null">

                <AutoCompleteTextView
                    android:id="@+id/boardingPointET"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/et_bg"
                    android:inputType="none"
                    android:text=""
                    android:textColor="@color/colorBlackShadow"
                    android:textColorHint="@color/grey"
                    android:textSize="14sp"
                    android:textStyle="normal" />
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/passengerRV"
                tools:itemCount="2"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/layoutBoardingPoint"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:listitem="@layout/adapter_passenger_details_confirm_phone_block"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>



    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/includeProgress"
            layout="@layout/layout_progress_bar" />

    </LinearLayout>



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSave"
        style="@style/TextStyleBold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dp_8"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="@dimen/sp16"
        android:background="@drawable/layout_rounded_shape_border"
        android:backgroundTint="@color/colorPrimary"
        android:text="@string/confirm"
        android:textAllCaps="false"
        android:textColor="@color/white" />



</androidx.constraintlayout.widget.ConstraintLayout>
