<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="8dp"
    android:background="@color/grey_300"
    android:elevation="4dp"
    app:cardCornerRadius="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="16dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="16dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_verical_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="16dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_verical_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="16dp" />

        <TextView
            android:id="@+id/text_travel_name"
            style="@style/TextStyleBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:includeFontPadding="false"
            android:text="@string/notAvailable"
            android:textColor="@color/color_03_review_02_moderate"
            android:textSize="11sp"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/guideline_verical_start"
            app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_start" />

        <ImageView
            android:id="@+id/image_call"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:paddingEnd="5dp"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/guideline_verical_start"
            app:layout_constraintTop_toBottomOf="@id/text_travel_name" />


        <TextView
            android:id="@+id/text_source_destination"
            style="@style/TextStyleBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shimmer_gradient_overlay"
            android:includeFontPadding="false"
            android:text="@string/empty"
            android:textColor="@color/colorBlackShadow"
            app:layout_constraintBottom_toTopOf="@id/tvAvailability"
            app:layout_constraintStart_toEndOf="@id/image_call"
            app:layout_constraintTop_toBottomOf="@id/text_travel_name" />

        <ImageView
            android:id="@+id/img_expand_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shimmer_gradient_overlay"
            app:layout_constraintEnd_toStartOf="@id/guideline_verical_end"
            app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_start"
            app:tint="@color/colorShadow" />

        <ImageView
            android:id="@+id/img_expand_less"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_expand_less"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@id/guideline_verical_end"
            app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_start"
            app:tint="@color/colorShadow" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="left"
            app:constraint_referenced_ids="img_expand_less,img_expand_more" />


        <TextView
            android:id="@+id/text_bus_type"
            style="@style/TextStyleBold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shimmer_gradient_overlay"
            android:gravity="start"
            android:singleLine="true"
            android:text="@string/empty"
            android:textColor="@color/transparent_tint_color1"
            android:textSize="11sp"
            app:layout_constraintBottom_toTopOf="@id/tvAvailability"
            app:layout_constraintEnd_toStartOf="@id/barrier"
            app:layout_constraintStart_toEndOf="@id/text_source_destination"
            app:layout_constraintTop_toBottomOf="@id/text_travel_name" />


        <TextView
            android:id="@+id/tvAvailability"
            style="@style/TextStyleBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/shimmer_gradient_overlay"
            android:gravity="center"
            android:text="@string/empty"
            android:textColor="@color/transparent_tint_color1"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/guideline_verical_start"
            app:layout_constraintTop_toBottomOf="@id/text_bus_type" />


        <LinearLayout
            android:id="@+id/layout_fare_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toStartOf="@id/guideline_verical_end"
            app:layout_constraintStart_toEndOf="@id/guideline_verical_start"
            app:layout_constraintTop_toBottomOf="@id/tvAvailability">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:background="@drawable/shimmer_gradient_overlay"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_percentage"
                    style="@style/TextStyleBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:paddingStart="5dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="2dp"
                    android:text="@string/empty"
                    android:textColor="@color/white"
                    android:textSize="11sp" />


                <TextView
                    android:id="@+id/tvPhoneBlocked"
                    style="@style/TextStyleBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/layout_rounded_shape_border_radius_2_dp"
                    android:backgroundTint="@color/colorPrimaryTransparent"
                    android:drawableLeft="@drawable/ic_phone"
                    android:drawablePadding="4dp"
                    android:paddingStart="5dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="2dp"
                    android:text="@string/notAvailable"
                    android:textColor="@color/colorPrimary"
                    android:textSize="11sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/text_seats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/empty"
                    android:textColor="@color/icon_dark"
                    android:textSize="12sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:background="@drawable/shimmer_gradient_overlay"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextStyleBold"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/empty"
                    android:textColor="@color/button_secondary_bg"
                    android:textSize="11sp" />


                <TextView
                    android:id="@+id/text_fare"
                    style="@style/TextStyleNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:text="@string/empty"
                    android:textColor="@color/icon_dark"
                    android:textSize="12sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:orientation="horizontal"
                android:visibility="gone" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_booking_seats"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_fare_details">

            <LinearLayout
                android:id="@+id/layout_book_ticket"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.42"
                android:background="@drawable/shimmer_gradient_overlay"
                android:gravity="center"
                android:orientation="vertical">


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_blocked_seats"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.42"
                android:background="@drawable/shimmer_gradient_overlay"
                android:gravity="center"
                android:orientation="vertical">


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_options"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.16"
                android:background="@drawable/shimmer_gradient_overlay"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_booking_options"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:tint="@color/colorBlackShadow" />

            </LinearLayout>


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>