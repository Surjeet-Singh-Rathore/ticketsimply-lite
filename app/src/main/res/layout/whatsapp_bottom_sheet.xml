<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:weightSum="2"
    android:background="@drawable/layout_rounded_shape_top_left_right"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/whatsappNormal"
        android:layout_width="0dp"
        android:layout_marginTop="24dp"

        android:layout_height="@dimen/_60sdp"
        android:src="@drawable/whatsapp_icon_logo_svgrepo_com"

        android:layout_weight="1"
        android:layout_marginBottom="24dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/whatsappBusiness"
        android:layout_width="0dp"
        android:layout_marginTop="24dp"

        android:layout_marginBottom="24dp"
        android:layout_height="@dimen/_60sdp"
        android:src="@drawable/whatsapp_business"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>