<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvSeatNo"
                    style="@style/TextStyleBold"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:background="@drawable/layout_rounded_shape"
                    android:backgroundTint="@color/colorPrimaryTransparent"
                    android:gravity="center"
                    android:paddingStart="12dp"
                    android:paddingTop="9dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="9dp"
                    android:text="SL1"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvName"
                        style="@style/msg_context"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/notAvailable"
                        android:textColor="@color/colorBlackShadow"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvMobile"
                        style="@style/TextStyleBold"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/notAvailable"
                        android:textColor="@color/text_header_bg"
                        android:textSize="11sp"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tvEdit"
                style="@style/msg_context"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/layout_rounded_shape_border"
                android:gravity="center"
                android:paddingStart="15dp"
                android:paddingTop="4dp"
                android:paddingEnd="15dp"
                android:paddingBottom="4dp"
                android:text="@string/edit"
                android:textColor="@color/colorPrimary" />


        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_four_tint" />


</LinearLayout>

