<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/button_color">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/btnUpdate"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/generalDetailsCV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_16"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvGeneralDetailsHeader"
                        style="@style/TextStyleBold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0.05"
                        android:text="@string/general_details"
                        android:textAllCaps="true"
                        android:textColor="@color/textColor"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toStartOf="@id/generalDetailsIV"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/generalDetailsIV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_down"
                        android:tint="@color/textColor"
                        app:layout_constraintBottom_toBottomOf="@id/tvGeneralDetailsHeader"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tvGeneralDetailsHeader" />

                    <LinearLayout
                        android:id="@+id/generalDetailsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@id/tvGeneralDetailsHeader">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/lastClosingKmsTIL"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="46dp"
                            android:layout_marginTop="5dp"
                            android:enabled="false"
                            android:hint="@string/expenses"
                            android:visibility="gone"
                            app:boxStrokeColor="@color/colorBoxOuterColor"
                            app:cursorColor="@color/black">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/lastClosingKmsET"
                                style="@style/TextStyleNormal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="numberDecimal"
                                android:paddingVertical="0dp"
                                android:text="@string/empty"
                                android:textColor="@color/colorBlackShadow1"
                                android:textColorHint="@color/grey" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/openingKmsTIL"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="46dp"
                            android:layout_marginTop="5dp"
                            android:hint="@string/expenses"
                            android:visibility="gone"
                            app:boxStrokeColor="@color/colorBoxOuterColor"
                            app:cursorColor="@color/black">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/openingKmsET"
                                style="@style/TextStyleNormal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="numberDecimal"
                                android:paddingVertical="0dp"
                                android:text="@string/empty"
                                android:textColor="@color/black"
                                android:textColorHint="@color/grey" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/closingKmsTIL"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="46dp"
                            android:layout_marginTop="5dp"
                            android:hint="@string/expenses"
                            android:visibility="gone"
                            app:boxStrokeColor="@color/colorBoxOuterColor"
                            app:cursorColor="@color/black">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/closingKmsET"
                                style="@style/TextStyleNormal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="numberDecimal"
                                android:paddingVertical="0dp"
                                android:text="@string/empty"
                                android:textColor="@color/black"
                                android:textColorHint="@color/grey" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/missingKmsTIL"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="46dp"
                            android:layout_marginTop="5dp"
                            android:enabled="false"
                            android:hint="@string/expenses"
                            android:visibility="gone"
                            app:boxStrokeColor="@color/colorBoxOuterColor"
                            app:cursorColor="@color/black">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/missingKmsET"
                                style="@style/TextStyleNormal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="numberDecimal"
                                android:paddingVertical="0dp"
                                android:text="@string/empty"
                                android:textColor="@color/colorBlackShadow1"
                                android:textColorHint="@color/grey" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/totalKmsTIL"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="46dp"
                            android:layout_marginTop="5dp"
                            android:enabled="false"
                            android:hint="@string/expenses"
                            android:visibility="gone"
                            app:boxStrokeColor="@color/colorBoxOuterColor"
                            app:cursorColor="@color/black">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/totalKmsET"
                                style="@style/TextStyleNormal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="numberDecimal"
                                android:paddingVertical="0dp"
                                android:text="@string/empty"
                                android:textColor="@color/colorBlackShadow1"
                                android:textColorHint="@color/grey" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/noOfLitresTIL"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="46dp"
                            android:layout_marginTop="5dp"
                            android:hint="@string/expenses"
                            android:visibility="gone"
                            app:boxStrokeColor="@color/colorBoxOuterColor"
                            app:cursorColor="@color/black">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/noOfLitresET"
                                style="@style/TextStyleNormal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="numberDecimal"
                                android:paddingVertical="0dp"
                                android:text="@string/empty"
                                android:textColor="@color/black"
                                android:textColorHint="@color/grey" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/pricePerLitreTIL"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="46dp"
                            android:layout_marginTop="5dp"
                            android:hint="@string/expenses"
                            android:visibility="gone"
                            app:boxStrokeColor="@color/colorBoxOuterColor"
                            app:cursorColor="@color/black">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/pricePerLitreET"
                                style="@style/TextStyleNormal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="numberDecimal"
                                android:paddingVertical="0dp"
                                android:text="@string/empty"
                                android:textColor="@color/black"
                                android:textColorHint="@color/grey" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/fuelValueTIL"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="46dp"
                            android:layout_marginTop="5dp"
                            android:enabled="false"
                            android:hint="@string/expenses"
                            android:visibility="gone"
                            app:boxStrokeColor="@color/colorBoxOuterColor"
                            app:cursorColor="@color/black">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/fuelValueET"
                                style="@style/TextStyleNormal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="numberDecimal"
                                android:paddingVertical="0dp"
                                android:text="@string/empty"
                                android:textColor="@color/colorBlackShadow1"
                                android:textColorHint="@color/grey" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/mileageTIL"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="46dp"
                            android:layout_marginTop="5dp"
                            android:enabled="false"
                            android:hint="@string/expenses"
                            android:visibility="gone"
                            app:boxStrokeColor="@color/colorBoxOuterColor"
                            app:cursorColor="@color/black">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/mileageET"
                                style="@style/TextStyleNormal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="numberDecimal"
                                android:paddingVertical="0dp"
                                android:text="@string/empty"
                                android:textColor="@color/colorBlackShadow1"
                                android:textColorHint="@color/grey" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/crewExpensesLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_16"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvCrewExpensesHeader"
                        style="@style/TextStyleBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0.05"
                        android:text="@string/crew_expenses"
                        android:textAllCaps="true"
                        android:textColor="@color/textColor"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/crewExpensesIV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_down"
                        android:tint="@color/textColor"
                        app:layout_constraintBottom_toBottomOf="@id/tvCrewExpensesHeader"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tvCrewExpensesHeader" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvCrewExpenses"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@id/tvCrewExpensesHeader" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/vehicleExpensesLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_16"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvVehicleExpensesHeader"
                        style="@style/TextStyleBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0.05"
                        android:text="@string/vehicle_expenses"
                        android:textAllCaps="true"
                        android:textColor="@color/textColor"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/vehicleExpensesIV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_down"
                        android:tint="@color/textColor"
                        app:layout_constraintBottom_toBottomOf="@id/tvVehicleExpensesHeader"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tvVehicleExpensesHeader" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvVehicleExpenses"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@id/tvVehicleExpensesHeader" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnUpdate"
        style="@style/TextStyleBold"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_margin="@dimen/dp_16"
        android:background="@drawable/button_selected_bg"
        android:text="@string/update"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>