<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dim">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/previousTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/basicDetailsTV"
                style="@style/TextStyleBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="@string/basic_details"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/stepTV"
                style="@style/TextStyleNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:text="@string/step_1_5"
                android:textColor="@color/greyish"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/basicDetailsTV" />


            <androidx.cardview.widget.CardView
                android:id="@+id/boardingCV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/basicDetailsTV">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/fromTIL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxStrokeWidth="0dp"
                        app:hintTextColor="@color/gray_shade_a"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/fromTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/bg_edittext_stroke_grey"
                            android:drawableEnd="@drawable/ic_down_arrow_filled_"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:gravity="center_vertical"
                            android:hint="@string/from"
                            android:paddingTop="@dimen/_16sdp"
                            android:textSize="@dimen/_10ssp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/toTIL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxStrokeWidth="0dp"
                        app:hintTextColor="@color/gray_shade_a"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/fromTIL">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/toTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:background="@drawable/bg_edittext_stroke_grey"
                            android:drawableEnd="@drawable/ic_down_arrow_filled_"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:gravity="center_vertical"
                            android:hint="@string/to_"
                            android:paddingTop="@dimen/_16sdp"
                            android:textSize="@dimen/_10ssp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/coachTypeTIL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxStrokeWidth="0dp"
                        app:layout_constraintEnd_toStartOf="@id/seatIV"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/toTIL">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/coachTypeET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:background="@drawable/bg_edittext_stroke_grey"
                            android:drawableEnd="@drawable/ic_down_arrow_filled_"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:gravity="center_vertical"
                            android:hint="@string/coach_type"
                            android:paddingTop="@dimen/_16sdp"
                            android:textSize="@dimen/_10ssp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/seatIV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:src="@drawable/ic_blue_seat"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@id/coachTypeTIL"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/coachTypeTIL" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/serviceNoTIL"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeColor="@color/transparent"
                        app:layout_constraintEnd_toStartOf="@id/uniqueServiceTIL"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/coachTypeTIL">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/serviceNoET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:background="@drawable/bg_edittext_stroke_grey"
                            android:gravity="center_vertical"
                            android:imeOptions="actionDone"
                            android:singleLine="true"
                            android:maxLength="40"
                            android:hint="@string/service_no"
                            android:paddingTop="@dimen/_16sdp"
                            android:textSize="@dimen/_10ssp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/uniqueServiceTIL"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeColor="@color/transparent"
                        app:hintTextColor="@color/gray_shade_a"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/serviceNoTIL"
                        app:layout_constraintTop_toBottomOf="@+id/coachTypeTIL">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/uniqueServiceNameET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:background="@drawable/bg_edittext_stroke_grey"
                            android:gravity="center_vertical"
                            android:maxLength="40"
                            android:imeOptions="actionDone"
                            android:singleLine="true"
                            android:hint="@string/unique_service_name"
                            android:paddingTop="@dimen/_16sdp"
                            android:textSize="@dimen/_10ssp" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/otaNameTIL"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeColor="@color/transparent"
                        app:hintTextColor="@color/gray_shade_a"

                        app:layout_constraintEnd_toStartOf="@id/hubTIL"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/serviceNoTIL">


                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/otaDisplayNameET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:background="@drawable/bg_edittext_stroke_grey"
                            android:gravity="center_vertical"
                            android:hint="@string/ota_display_name"
                            android:maxLength="40"
                            android:singleLine="true"
                            android:paddingTop="@dimen/_16sdp"
                            android:textSize="@dimen/_10ssp"
                            app:layout_constraintEnd_toStartOf="@id/hubET"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/serviceNoTIL" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/hubTIL"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:boxStrokeWidth="0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/otaNameTIL"
                        app:layout_constraintTop_toBottomOf="@+id/uniqueServiceTIL">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/hubET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:background="@drawable/bg_edittext_stroke_grey"
                            android:drawableEnd="@drawable/ic_down_arrow_filled_"
                            android:focusable="false"
                            android:singleLine="true"
                            android:focusableInTouchMode="false"
                            android:gravity="center_vertical"
                            android:hint="@string/hub"
                            android:paddingTop="@dimen/_16sdp"
                            android:textSize="@dimen/_11ssp" />

                    </com.google.android.material.textfield.TextInputLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/scheduleTV"
                style="@style/TextStyleBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="@string/schedule"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/boardingCV" />


            <androidx.cardview.widget.CardView
                android:id="@+id/scheduleCV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/scheduleTV">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/departureTimeTV"
                        style="@style/TextStyleNormal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="@string/departure_time"
                        android:textColor="@color/blackis"
                        android:textSize="@dimen/_11ssp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/departureHourTIL"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:boxStrokeWidth="0dp"
                        app:layout_constraintEnd_toStartOf="@id/departureMinsTIL"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/departureTimeTV">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/departureHoursET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:background="@drawable/bg_edittext_stroke_grey"
                            android:drawableEnd="@drawable/ic_down_arrow_filled_"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:gravity="center_vertical"
                            android:hint="@string/hh"
                            android:paddingTop="@dimen/_16sdp"
                            android:textSize="@dimen/_10ssp" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/departureMinsTIL"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:boxStrokeWidth="0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/departureHourTIL"
                        app:layout_constraintTop_toBottomOf="@+id/departureTimeTV">


                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/departureMinutesET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:background="@drawable/bg_edittext_stroke_grey"
                            android:drawableEnd="@drawable/ic_down_arrow_filled_"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:gravity="center_vertical"
                            android:hint="@string/mm"
                            android:paddingTop="@dimen/_16sdp"
                            android:textSize="@dimen/_10ssp" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/arrivalTimeTV"
                        style="@style/TextStyleNormal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/arrival_time"
                        android:textColor="@color/blackis"
                        android:textSize="@dimen/_11ssp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/departureHourTIL" />


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/arrivalHoursTIL"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:boxStrokeWidth="0dp"
                        app:layout_constraintEnd_toStartOf="@id/arrivalMinutesTIL"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/arrivalTimeTV">


                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/arrivalHoursET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:background="@drawable/bg_edittext_stroke_grey"
                            android:drawableEnd="@drawable/ic_down_arrow_filled_"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:gravity="center_vertical"
                            android:hint="@string/hh"
                            android:paddingTop="@dimen/_16sdp"
                            android:textSize="@dimen/_10ssp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/arrivalMinutesTIL"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:boxStrokeWidth="0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/arrivalHoursTIL"
                        app:layout_constraintTop_toBottomOf="@+id/arrivalTimeTV">


                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/arrivalMinutesET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:background="@drawable/bg_edittext_stroke_grey"
                            android:drawableEnd="@drawable/ic_down_arrow_filled_"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:gravity="center_vertical"
                            android:hint="@string/mm"
                            android:paddingTop="@dimen/_16sdp"
                            android:textSize="@dimen/_10ssp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/durationTIL"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_5sdp"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeColor="@color/transparent"
                        app:layout_constraintEnd_toEndOf="@id/arrivalHoursTIL"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/arrivalHoursTIL">


                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/durationET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:editable="false"
                            android:background="@drawable/bg_edittext_stroke_grey"
                            android:gravity="center_vertical"
                            android:hint="@string/duration"
                            android:paddingTop="@dimen/_16sdp"
                            android:textSize="@dimen/_10ssp" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/serviceStartDateTIL"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:boxStrokeWidth="0dp"
                        app:layout_constraintEnd_toEndOf="@id/arrivalHoursTIL"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/durationTIL">


                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/serviceStartDateET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/bg_edittext_stroke_grey"
                            android:drawableEnd="@drawable/ic_calendar_1"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:gravity="center_vertical"
                            android:hint="Service start date"
                            android:paddingTop="@dimen/_16sdp"
                            android:textSize="@dimen/_10ssp" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/serviceEndDateTIL"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:boxStrokeWidth="0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/serviceStartDateTIL"
                        app:layout_constraintTop_toBottomOf="@+id/durationTIL">


                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/serviceEndDateET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/bg_edittext_stroke_grey"
                            android:drawableEnd="@drawable/ic_calendar_1"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:gravity="center_vertical"
                            android:hint="Service end date"
                            android:paddingTop="@dimen/_16sdp"
                            android:textSize="@dimen/_10ssp"
                            />

                    </com.google.android.material.textfield.TextInputLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:id="@+id/clearTV"
                        android:text="Clear"
                        android:visibility="gone"
                        style="@style/TextStyleBold"
                        android:textColor="@color/light_red"
                        android:textSize="@dimen/_11ssp"
                        app:layout_constraintTop_toBottomOf="@id/serviceEndDateTIL"
                        app:layout_constraintEnd_toEndOf="@id/serviceEndDateTIL"
                        android:paddingVertical="@dimen/_2sdp"
                        android:layout_height="wrap_content"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:id="@+id/advanceBookingTIL"
                        android:layout_height="wrap_content"
                        app:boxStrokeWidth="0dp"
                        app:hintTextColor="@color/gray_shade_a"
                        app:boxStrokeColor="@color/transparent"
                        app:layout_constraintEnd_toEndOf="@id/serviceStartDateTIL"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/serviceStartDateTIL"   >


                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/advanceBookingET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/bg_edittext_stroke_grey"
                        android:digits="0123456789"
                        android:singleLine="true"
                        android:imeOptions="actionDone"
                        android:gravity="center_vertical"
                        android:hint="@string/advance_booking"
                        android:inputType="number"
                        android:paddingTop="@dimen/_16sdp"
                        android:textSize="@dimen/_10ssp"
                       />

                    </com.google.android.material.textfield.TextInputLayout>


                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/alternateDayCB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_10ssp"
                        android:text="@string/alternative_day_service"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/advanceBookingTIL" />


                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/alternateDayCB">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/daysTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:text="Days:"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11ssp" />

                        <include
                            android:id="@+id/linearlayoutweekdays"
                            layout="@layout/layout_weekdays_linear_layout"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginStart="@dimen/_10sdp"

                            android:layout_marginTop="1dp"
                            android:layout_marginEnd="1dp" />

                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/otherOptionTV"
                style="@style/TextStyleNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="@string/other_options"
