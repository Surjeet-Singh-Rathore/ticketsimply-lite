<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/calender_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BA212121">

        <include
            android:id="@+id/calender_layout"
            layout="@layout/dialog_occupancy_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/progress_bar_calendar"
            layout="@layout/layout_progress_bar"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            android:background="@color/white"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/calender_layout"
            app:layout_constraintEnd_toEndOf="@+id/calender_layout"
            app:layout_constraintStart_toStartOf="@+id/calender_layout"
            app:layout_constraintTop_toTopOf="@+id/calender_layout">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>