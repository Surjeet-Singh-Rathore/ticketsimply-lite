<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/flash_white_bg"
    tools:context=".presentation.view.dashboard.update_rate_card_fragments.SeatWiseFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="18dp"
                android:background="@color/white"
                app:cardCornerRadius="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dp_16"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextStyleBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/update_fare"
                        android:textColor="@color/grey"
                        android:textSize="12sp" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <RadioButton
                            android:id="@+id/bySeatTypeRadioBtn"
                            style="@style/TextStyleNormal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:checked="true"
                            android:text="@string/by_seat_type"
                            android:textColor="@color/grey" />

                        <RadioButton
                            android:id="@+id/perSeatRadioBtn"
                            style="@style/TextStyleNormal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/multiple_seats"
                            android:textColor="@color/grey" />
                    </RadioGroup>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_fromDate_urc"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_input_edit_text_height"
                        android:layout_marginTop="@dimen/dp_24"
                        android:background="@drawable/header_gradient_bg"
                        app:boxStrokeErrorColor="@color/colorRed2"
                        app:boxStrokeWidth="@dimen/dp_2"
                        app:errorEnabled="true"
                        app:errorIconDrawable="@null"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/layout_addpercentage">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_fromDate_urc"
                            style="@style/textInputStyle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/et_bg"
                            android:drawableEnd="@drawable/ic_icons_calendar"
                            android:focusableInTouchMode="false"
                            android:hint="@string/fromDate"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_toDate_urc"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_input_edit_text_height"
                        android:layout_marginTop="@dimen/dp_16"
                        android:background="@drawable/header_gradient_bg"
                        app:boxStrokeErrorColor="@color/colorRed2"
                        app:boxStrokeWidth="@dimen/dp_2"
                        app:errorEnabled="true"
                        app:errorIconDrawable="@null"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/layout_fromDate_urc">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_toDate_urc"
                            style="@style/textInputStyle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/et_bg"
                            android:drawableEnd="@drawable/ic_icons_calendar"
                            android:focusableInTouchMode="false"
                            android:hint="@string/toDate"
                            android:inputType="text" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutSelectSeatType"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_input_edit_text_height"
                        android:layout_marginTop="@dimen/dp_16"
                        android:background="@drawable/header_gradient_bg"
                        android:hint="@string/select_seat_type"
                        app:boxBackgroundColor="@color/title_bg"
                        app:boxStrokeErrorColor="@color/colorRed2"
                        app:boxStrokeWidth="@dimen/dp_2"
                        app:errorEnabled="true"
                        app:errorIconDrawable="@null"
                        app:layout_constraintTop_toBottomOf="@+id/textView8">

                        <AutoCompleteTextView
                            android:id="@+id/selectSeatType"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/et_bg"
                            android:inputType="none"
                            android:textSize="14sp"
                            android:textStyle="normal" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutSelectViaRoute"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:layout_marginTop="@dimen/dp_16"
                        android:background="@drawable/header_gradient_bg"
                        android:hint="@string/select_via_route"
                        app:boxBackgroundColor="@color/title_bg"
                        app:boxBackgroundMode="filled"
                        app:boxStrokeErrorColor="@color/colorRed2"
                        app:boxStrokeWidth="@dimen/dp_2"
                        app:errorEnabled="true"
                        app:errorIconDrawable="@null"
                        app:layout_constraintTop_toBottomOf="@+id/rgAmountType">

                        <AutoCompleteTextView
                            android:id="@+id/selectViaRoute"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/et_bg"
                            android:inputType="none"
                            android:textSize="14sp"
                            android:textStyle="normal" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutEdtAmount"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_input_edit_text_height"
                        android:layout_marginTop="@dimen/dp_16"
                        android:background="@drawable/header_gradient_bg"
                        app:boxStrokeErrorColor="@color/colorRed2"
                        app:boxStrokeWidth="@dimen/dp_2"
                        app:errorEnabled="true"
                        app:errorIconDrawable="@null"
                        app:layout_constraintLeft_toRightOf="@id/guideline_v_begin"
                        app:layout_constraintRight_toLeftOf="@id/guideline_v_end"
                        app:layout_constraintTop_toBottomOf="@id/tvTitle">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etAmount"
                            style="@style/textInputStyle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/et_bg"
                            android:hint="@string/amount"
                            android:imeOptions="actionDone"
                            android:inputType="numberDecimal" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">


                        <androidx.fragment.app.FragmentContainerView
                            android:id="@+id/layout_coach_single"
                            android:name="com.bitla.ts.presentation.view.fragments.AllCoachFragment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:layout="@layout/fragment_common_coach_single" />

                        <LinearLayout
                            android:id="@+id/coach_progress_bar"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:background="@color/white"
                            android:gravity="top|center"
                            app:layout_constraintBottom_toBottomOf="@+id/layout_coach_single"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ProgressBar
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="@dimen/dp_16" />

                        </LinearLayout>


                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/confirmSeatTypeFareChangeBtn"
                            style="@style/TextStyleBold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/un_select_color"
                            android:enabled="false"
                            android:padding="@dimen/dp_14"
                            android:text="@string/confirm_fare_change"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:visibility="visible"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/layout_coach_single" />

                        <androidx.constraintlayout.widget.Group
                            android:id="@+id/newFareG"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            app:constraint_referenced_ids="newFareTV,layoutNewFareTIL" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/newFareTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="@string/new_fare"
                            android:textAllCaps="true"
                            android:textColor="@color/gray_shade_a"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/layout_coach_single" />


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layoutNewFareTIL"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/text_input_edit_text_height"
                            android:layout_marginTop="@dimen/dp_16"
                            android:background="@drawable/header_gradient_bg"
                            app:boxStrokeErrorColor="@color/colorRed2"
                            app:boxStrokeWidth="@dimen/dp_2"
                            app:errorEnabled="true"
                            app:errorIconDrawable="@null"
                            app:layout_constraintTop_toBottomOf="@id/newFareTV">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/newFareET"
                                style="@style/textInputStyle"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/et_bg"
                                android:hint="@string/enter_new_fare"
                                android:imeOptions="actionDone"
                                android:inputType="numberDecimal" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/confirmPerSeatFareChangeBtn"
                            style="@style/TextStyleBold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginBottom="@dimen/dp_8"
                            android:background="@color/un_select_color"
                            android:enabled="false"
                            android:padding="@dimen/dp_14"
                            android:text="@string/confirm_fare_change"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:visibility="gone"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/layoutNewFareTIL" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/mainProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_16"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>