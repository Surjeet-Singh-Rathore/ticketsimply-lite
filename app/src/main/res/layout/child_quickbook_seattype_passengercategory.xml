<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_4"
    android:layout_marginBottom="@dimen/dp_4"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/layout_rounded_shape_border_radius_2_dp_black"
        android:padding="@dimen/margin_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvSeatType"
            style="@style/TextStyleNormalTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"
            android:text="@string/book_extra_seats"
            android:textColor="@color/colorBlackShadow" />

        <TextView
            android:id="@+id/tvSeatTypeAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvSeatType"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"
            android:text="$232422"
            android:textColor="@color/colorBlackShadow1" />

        <LinearLayout
            android:id="@+id/layoutAddRemoveExtraSeats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvSeatTypeAmount"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgRemoveSeat"
                android:layout_width="@dimen/dp_42"
                android:layout_height="@dimen/dp_42"
                android:padding="@dimen/dp_4"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_minus" />

            <TextView
                android:id="@+id/tvSeatAndPassengerCount"
                style="@style/TextStyleBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_4"
                android:paddingStart="@dimen/dp_8"
                android:paddingEnd="@dimen/dp_8"
                android:text="0"
                android:textColor="@color/colorBlackShadow"
                android:textSize="@dimen/sp20" />

            <ImageView
                android:id="@+id/imgAddSeat"
                android:layout_width="@dimen/dp_42"
                android:layout_height="@dimen/dp_42"
                android:padding="@dimen/dp_4"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_add" />
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>