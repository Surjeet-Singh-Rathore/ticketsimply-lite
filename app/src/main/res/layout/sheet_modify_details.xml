<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_rounded_shape_top_left_right"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        app:cardCornerRadius="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp_16"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/TextStyleBold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:text="@string/update_personal_details"
                                    android:textColor="@color/colorBlackShadow" />

                                <TextView
                                    android:id="@+id/tvCancel"
                                    style="@style/TextStyleBold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:text="@string/cancel"
                                    android:textColor="@color/colorPrimary" />

                            </RelativeLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/spinnerGender"
                                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/dp_16"
                                android:hint="@string/gender"
                                app:boxBackgroundColor="@color/title_bg"
                                app:boxBackgroundMode="filled">

                                <AutoCompleteTextView
                                    android:id="@+id/autoCompleteGender"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/et_bg"
                                    android:inputType="none"
                                    android:textColor="@color/colorBlackShadow"
                                    android:textColorHint="@color/grey"
                                    android:textSize="14sp"
                                    android:textStyle="normal" />

                            </com.google.android.material.textfield.TextInputLayout>


                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/layoutName"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/text_input_edit_text_height"
                                android:layout_marginTop="@dimen/dp_16"
                                android:background="@drawable/header_gradient_bg">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etName"
                                    style="@style/textInputStyle"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/et_bg"
                                    android:hint="@string/name"
                                    android:imeOptions="actionNext"
                                    android:inputType="text" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/layoutAge"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/text_input_edit_text_height"
                                android:layout_marginTop="@dimen/dp_16"
                                android:background="@drawable/header_gradient_bg">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etAge"
                                    style="@style/textInputStyle"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/et_bg"
                                    android:hint="@string/age"
                                    android:imeOptions="actionNext"
                                    android:inputType="number"
                                    android:maxLength="2" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_marginTop="@dimen/dp_16"
                                android:layout_height="wrap_content">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/layoutCountryCode"
                                    android:layout_width="@dimen/_60sdp"
                                    android:layout_height="@dimen/text_input_edit_text_height"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:background="@drawable/header_gradient_bg"
                                    app:boxStrokeErrorColor="@color/colorRed2"
                                    app:boxStrokeWidth="@dimen/dp_2"
                                    app:errorEnabled="true"
                                    android:visibility="gone"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    app:layout_constraintEnd_toStartOf="@id/layoutPhoneNumber"
                                    app:errorIconDrawable="@null"
                                    app:errorTextAppearance="@style/TextAppearance.MaterialComponents.Headline3">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/etCountryCode"
                                        style="@style/textInputStyle"
                                        android:layout_width="match_parent"
                                        android:editable="false"
                                        android:focusable="false"
                                        android:paddingHorizontal="@dimen/_10sdp"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/et_bg"
                                        android:hint="@string/code"
                                        android:imeOptions="actionNext"
                                        android:inputType="number"
                                        android:textColor="@color/colorBlackShadow" />

                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/layoutPhoneNumber"
                                    android:layout_width="0dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toEndOf="@id/layoutCountryCode"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:layout_height="@dimen/text_input_edit_text_height"
                                    android:background="@drawable/header_gradient_bg">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/etPhoneNumber"
                                        style="@style/textInputStyle"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/et_bg"
                                        android:hint="@string/phone_number"
                                        android:maxLength="16"
                                        android:imeOptions="actionNext"
                                        android:inputType="number" />

                                </com.google.android.material.textfield.TextInputLayout>

                            </androidx.constraintlayout.widget.ConstraintLayout>



                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/layoutEmail"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/text_input_edit_text_height"
                                android:layout_marginTop="@dimen/dp_16"
                                android:background="@drawable/header_gradient_bg">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etEmail"
                                    style="@style/textInputStyle"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/et_bg"
                                    android:hint="@string/email_id"
                                    android:imeOptions="actionDone"
                                    android:inputType="text" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/layoutFare"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/text_input_edit_text_height"
                                android:visibility="gone"
                                android:layout_marginTop="@dimen/dp_16"
                                android:background="@drawable/header_gradient_bg">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etFare"
                                    style="@style/textInputStyle"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/et_bg"
                                    android:hint="@string/fare"
                                    android:imeOptions="actionNext"
                                    android:inputType="numberDecimal" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/layoutRemarksSingleUpdate"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/text_input_edit_text_height"
                                android:layout_marginTop="@dimen/dp_16"
                                android:background="@drawable/header_gradient_bg">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etRemarkSingleUpdate"
                                    style="@style/textInputStyle"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/et_bg"
                                    android:hint="@string/remarks"
                                    android:imeOptions="actionDone"
                                    android:inputType="text"
                                    android:text="" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <TextView
                                android:id="@+id/headerBoardingDropping"
                                style="@style/TextStyleBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_16"
                                android:text="@string/update_ticket_details"
                                android:textColor="@color/colorBlackShadow"
                                android:visibility="gone" />


                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/layoutBoardingAt"
                                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/text_input_edit_text_height"
                                android:layout_marginTop="@dimen/dp_16"
                                android:background="@drawable/header_gradient_bg"
                                android:textColorHint="@color/grey"
                                android:visibility="gone"
                                app:boxBackgroundColor="@color/title_bg">

                                <AutoCompleteTextView
                                    android:id="@+id/etBoardingAt"
                                    style="@style/textInputStyle"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/et_bg"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:focusableInTouchMode="false"
                                    android:hint="@string/boarding_at"
                                    android:singleLine="true"
                                    android:imeOptions="actionNext"
                                    android:inputType="none"
                                    android:text="" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/layoutDropOffAt"
                                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/text_input_edit_text_height"
                                android:layout_marginTop="@dimen/dp_16"
                                android:background="@drawable/header_gradient_bg"
                                android:textColorHint="@color/grey"
                                android:visibility="gone"
                                app:boxBackgroundColor="@color/title_bg">

                                <AutoCompleteTextView
                                    android:id="@+id/etDropOffAt"
                                    style="@style/textInputStyle"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/et_bg"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:focusableInTouchMode="false"
                                    android:hint="@string/drop_off_at"
                                    android:singleLine="true"
                                    android:imeOptions="actionNext"
                                    android:inputType="none"
                                    android:text="" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <LinearLayout
                                android:id="@+id/layoutSms"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_16"
                                android:gravity="start">

                                <CheckBox
                                    android:id="@+id/chkSms"
                                    style="@style/TextStyleNormal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:buttonTint="@color/colorPrimary"
                                    android:text="@string/sms_passenger_about_change"
                                    android:textColor="@color/colorBlackShadow" />

                            </LinearLayout>

                            <android.widget.Button
                                android:id="@+id/btnModifyDetails"
                                style="@style/TextStyleBold"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/button_height"
                                android:layout_marginTop="@dimen/dp_24"
                                android:background="@drawable/button_selected_bg"
                                android:text="@string/modify_details"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <include
                    android:id="@+id/includeProgress"
                    layout="@layout/layout_progress_bar" />
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</LinearLayout>
