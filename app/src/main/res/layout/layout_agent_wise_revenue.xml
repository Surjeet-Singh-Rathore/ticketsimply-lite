<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_little_round_white"

    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/titleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:text="@string/agent_wise_revenue"
        android:textColor="@color/blackish"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/summaryImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:rotation="-90"
        android:src="@drawable/ic_arrow_down"
        app:layout_constraintBottom_toBottomOf="@id/titleTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/titleTV" />


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:id="@+id/totalSeatsTV"
        android:text=""
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/colorDimShadow"
        android:padding="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@id/titleTV"
        app:layout_constraintStart_toStartOf="@id/titleTV"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/divider"
        android:layout_width="@dimen/_1sdp"
        android:layout_height="0dp"
        android:layout_marginVertical="@dimen/_6sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:background="#7E7E8C"
        app:layout_constraintBottom_toBottomOf="@id/totalSeatsTV"
        app:layout_constraintStart_toEndOf="@id/totalSeatsTV"
        app:layout_constraintTop_toTopOf="@id/totalSeatsTV" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:id="@+id/totalRevenueTV"
        android:text=""
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/colorDimShadow"
        android:layout_marginEnd="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_8sdp"
        app:layout_constraintTop_toBottomOf="@id/titleTV"
        app:layout_constraintStart_toEndOf="@id/divider"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/recycleRV"
        app:layout_constraintTop_toBottomOf="@id/totalRevenueTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_5sdp"
        android:visibility="gone"
        tools:itemCount="5"
        tools:listitem="@layout/adapter_agent_wise_revenue"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:background="@color/colorDim"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_height="wrap_content"/>



</androidx.constraintlayout.widget.ConstraintLayout>