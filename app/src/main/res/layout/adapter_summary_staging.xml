<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:padding="@dimen/_12sdp"
    android:background="@color/colorDim">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/titleTVbusstop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bus_stops"
        android:textColor="@color/blackish"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title1TVSeats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="@string/seats_booking_summary"
        android:textColor="@color/grey"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintTop_toBottomOf="@+id/titleTVbusstop" />


</androidx.constraintlayout.widget.ConstraintLayout>