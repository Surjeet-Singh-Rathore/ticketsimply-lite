<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_16"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pnr_number"
                    style="@style/TextStyleBold"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/dp_4"
                    android:text="@string/notAvailable"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/passenger_name"
                    style="@style/TextStyleNormalTV"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/notAvailable"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/sp12" />
            </LinearLayout>

            <TextView
                android:id="@+id/origin_destination"
                style="@style/TextStyleBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notAvailable"
                android:textColor="@color/text_header_bg"
                android:textSize="@dimen/sp10" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dp_8">

            <TextView
                android:id="@+id/old_seat_number"
                style="@style/TextStyleBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/eta_background"
                android:backgroundTint="@color/colorPrimaryTransparent"
                android:padding="@dimen/margin_10"
                android:text="@string/notAvailable"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp12" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:src="@drawable/ic_arrow_forward_"
                app:tint="@color/black" />


            <TextView
                android:id="@+id/new_seatnumber"
                style="@style/TextStyleBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/eta_background"
                android:backgroundTint="@color/colorPrimaryTransparent"
                android:padding="@dimen/margin_10"
                android:text="@string/notAvailable"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp12" />
        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>