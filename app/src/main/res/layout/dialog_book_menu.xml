<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/boarding_status"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"

        android:visibility="visible"
        android:weightSum="6">

        <TextView
            android:id="@+id/textView23"
            style="@style/TextStyleNormalTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:drawablePadding="25dp"
            android:text="@string/boarded_status"
            app:drawableLeftCompat="@drawable/ic_walking_man"
            app:drawableTint="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/boarded_switch_box"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/boarded_switch_box"
            style="@style/TextStyleBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:gravity="center"
            android:thumb="@drawable/thumb_no"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:track="@drawable/track" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/boarding_status_view"

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:visibility="gone" />


    <LinearLayout
        android:id="@+id/call_passenger"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_10"
        android:paddingBottom="@dimen/margin_10"
        android:visibility="gone"
        android:weightSum="6">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/ic_phone"
            app:tint="@color/colorBlack" />

        <TextView
            style="@style/TextStyleNormalTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="@string/call_passenger"
            android:textColor="@color/grey" />


    </LinearLayout>

    <View
        android:id="@+id/call_passenger_view"

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/flash_white_bg"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/confirm_phone_booking"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_10"
        android:paddingBottom="@dimen/margin_10"
        android:visibility="gone"
        android:weightSum="6">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/tick_img"
            app:tint="@color/colorBlack" />

        <TextView
            style="@style/TextStyleNormalTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="@string/confirmPhoneBooking"
            android:textColor="@color/grey" />


    </LinearLayout>

    <View
        android:id="@+id/confirm_phone_booking_view"

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/flash_white_bg"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/cancel_phone_booking"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_10"
        android:paddingBottom="@dimen/margin_10"

        android:visibility="gone"
        android:weightSum="6">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_un_lock" />

        <TextView
            style="@style/TextStyleNormalTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="@string/release_ticket"
            android:textColor="@color/grey" />


    </LinearLayout>

    <View
        android:id="@+id/cancel_phone_booking_view"
        android:layout_width="match_parent"

        android:layout_height="1dp"
        android:background="@color/flash_white_bg"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/menu_cancel_ticket"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_10"
        android:paddingBottom="@dimen/margin_10"
        android:visibility="gone"
        android:weightSum="6">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_close_shape" />

        <TextView
            style="@style/TextStyleNormalTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="@string/cancel_ticket"
            android:textColor="@color/grey" />
    </LinearLayout>

    <View
        android:id="@+id/menu_cancel_ticket_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/flash_white_bg"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/menu_viewticket"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_10"
        android:paddingBottom="@dimen/margin_10"
        android:weightSum="6">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_vertical_ticket" />

        <TextView
            style="@style/TextStyleNormalTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="@string/view_ticket"
            android:textColor="@color/grey" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/flash_white_bg"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/menu_send_sms"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_10"
        android:paddingBottom="@dimen/margin_10"
        android:visibility="gone"
        android:weightSum="6">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/send_sms" />

        <TextView
            style="@style/TextStyleNormalTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="@string/send_sms"
            android:textColor="@color/grey" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/flash_white_bg" />

    <LinearLayout
        android:id="@+id/menu_update_ticket"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_10"
        android:paddingBottom="@dimen/margin_10"
        android:weightSum="6">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:src="@drawable/ic_update_reverse" />

        <TextView
            style="@style/TextStyleNormalTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="@string/update_ticket"
            android:textColor="@color/grey" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/flash_white_bg" />


    <LinearLayout
        android:id="@+id/menu_shift"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_10"
        android:paddingBottom="@dimen/margin_10"
        android:weightSum="6">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:src="@drawable/ic_shift_arrow" />

        <TextView
            style="@style/TextStyleNormalTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"

            android:text="@string/shift_passengers"
            android:textColor="@color/grey" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/flash_white_bg" />

    <LinearLayout
        android:id="@+id/menu_shift_same_service"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_10"
        android:paddingBottom="@dimen/margin_10"
        android:weightSum="6">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_shift_arrow" />

        <TextView
            style="@style/TextStyleNormalTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="@string/shift_to_same_service"
            android:textColor="@color/grey" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/flash_white_bg" />

    <LinearLayout
        android:id="@+id/menu_modify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_10"
        android:paddingBottom="@dimen/margin_10"
        android:visibility="gone"
        android:weightSum="6">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:src="@drawable/ic_edit" />

        <TextView
            style="@style/TextStyleNormalTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"

            android:text="@string/modify_origin_destination"
            android:textColor="@color/grey" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/flash_white_bg" />


    <LinearLayout
        android:id="@+id/menu_move_extra"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_10"
        android:paddingBottom="@dimen/margin_10"
        android:weightSum="6">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_move_seats" />

        <TextView
            style="@style/TextStyleNormalTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:id="@+id/moveTV"
            android:text="@string/move_to_extra_seat"
            android:textColor="@color/grey" />
    </LinearLayout>

    <View
        android:id="@+id/viewMoveExtraSeat"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/flash_white_bg" />


</LinearLayout>