    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="27/01/2023"
        android:textColor="@color/black"
        android:textSize="18sp"
        style="@style/TextStyleBold"
        />
</LinearLayout>