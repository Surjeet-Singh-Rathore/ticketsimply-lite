        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/errormsgTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:visibility="gone" />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">


            <LinearLayout
                android:id="@+id/seatlayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rvFilter"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/lower_main_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lower_text"
                        style="@style/TextStyleBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:text="@string/lower"
                        android:textAllCaps="true"
                        android:textColor="@color/colorBlackShadow"
                        android:textSize="@dimen/sp12"
                        android:visibility="gone" />

                    <androidx.core.widget.NestedScrollView
                        android:id="@+id/layoutSeatlower"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|center"
                        android:background="@drawable/available_border"
                        android:gravity="top"
                        android:paddingStart="@dimen/dp_24"
                        android:paddingTop="@dimen/dp_12"
                        android:paddingEnd="@dimen/dp_24"
                        android:paddingBottom="@dimen/dp_12"
                        android:visibility="visible" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/upper_main_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/upper_text"
                        style="@style/TextStyleBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:text="@string/upper"
                        android:textAllCaps="true"
                        android:textColor="@color/colorBlackShadow"
                        android:textSize="@dimen/sp12"
                        android:visibility="gone" />


                    <androidx.core.widget.NestedScrollView
                        android:id="@+id/layoutSeatUpper"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_gravity="top|center"
                        android:background="@drawable/available_border"
                        android:gravity="top"
                        android:paddingStart="@dimen/dp_24"
                        android:paddingTop="@dimen/dp_12"
                        android:paddingEnd="@dimen/dp_24"
                        android:paddingBottom="@dimen/dp_12"
                        android:visibility="visible" />
                </LinearLayout>
            </LinearLayout>


        </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/manifest_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/layout_rounded_shape_border_transparent"
            android:backgroundTint="@color/text_header_bg"
            android:paddingStart="@dimen/dp_16"
            android:paddingEnd="@dimen/dp_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/view_reservation_chart_icon"
                android:drawablePadding="8dp"
                android:paddingStart="@dimen/_40sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingEnd="@dimen/_40sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="@string/manifest"
                android:textColor="@color/text_header_bg" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/checkBoxLayout"
            android:visibility="visible"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_block_all_seats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@drawable/layout_rounded_shape_border_transparent"
                android:paddingStart="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_16">


                <CheckBox
                    android:id="@+id/chkAllSeats"
                    style="@style/msg_context"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="@string/selectAllSeat"
                    android:textAllCaps="true"
                    android:textColor="@color/colorBlackShadow" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_select_all_seats_to_unblock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@drawable/layout_rounded_shape_border_transparent"
                android:gravity="center"
                android:visibility="gone"
                android:paddingStart="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_16">


                <CheckBox
                    android:id="@+id/selectAllSeatsToUnblock"
                    style="@style/msg_context"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="@string/selectAllSeatsToUnblock"
                    android:textAllCaps="true"
                    android:textColor="@color/colorBlackShadow" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_select_all_seats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@drawable/layout_rounded_shape_border_transparent"
                android:gravity="center"
                android:paddingStart="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_16"
                android:visibility="gone">


                <CheckBox
                    android:id="@+id/selectallseats"
                    style="@style/msg_context"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="@string/select_all_seats"
                    android:textAllCaps="true"
                    android:textColor="@color/colorBlackShadow" />


            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/layoutExtraSeats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvSelectSeatTitle"
                style="@style/TextStyleBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="center"
                android:text="@string/extra_seats_booked"
                android:textAllCaps="true"
                android:textColor="@color/textColor"
                android:textSize="11sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvExtraSeats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_8" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>