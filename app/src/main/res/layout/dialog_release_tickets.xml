<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_rounded_shape"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_v_begin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_v_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="20dp" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_h_begin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_h_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="20dp" />

    <TextView
        android:id="@+id/tvTitle"
        style="@style/TextStyleBold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="@string/enter_remarks_to_release"
        android:textColor="@color/colorBlackShadow"
        app:layout_constraintLeft_toRightOf="@id/guideline_v_begin"
        app:layout_constraintRight_toLeftOf="@id/tvCancel"
        app:layout_constraintTop_toBottomOf="@id/guideline_h_begin" />

    <TextView
        android:id="@+id/tvCancel"
        style="@style/msg_context"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center|right"
        android:text="@string/cancel"
        android:textColor="@color/colorPrimary"
        app:layout_constraintLeft_toRightOf="@id/tvTitle"
        app:layout_constraintRight_toLeftOf="@id/guideline_v_end"
        app:layout_constraintTop_toBottomOf="@id/guideline_h_begin" />

    <TextView
        android:id="@+id/tvPnrNo"
        style="@style/TextStyleBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:gravity="left"
        android:text=""
        android:textColor="@color/colorBlackShadow"
        app:layout_constraintLeft_toRightOf="@id/guideline_v_begin"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

    <TextView
        android:id="@+id/tvDOJ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_16"
        android:gravity="left"
        android:text=""
        android:textColor="@color/gray_shade_a"
        app:layout_constraintStart_toEndOf="@+id/tvPnrNo"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutRemarksList"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="@dimen/text_input_edit_text_height"
        android:layout_marginTop="19dp"
        android:hint="@string/selectBlockingReason"
        android:visibility="gone"
        app:boxStrokeColor="@color/grey"
        app:endIconMode="dropdown_menu"
        app:hintTextAppearance="@style/TextAppearance.MaterialComponents.Caption"
        app:layout_constraintEnd_toStartOf="@id/guideline_v_end"
        app:layout_constraintStart_toEndOf="@id/guideline_v_begin"
        app:layout_constraintTop_toBottomOf="@id/tvPnrNo">

        <AutoCompleteTextView
            android:id="@+id/tvRemarks"
            style="@style/TextStyleBold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="none"
            android:paddingStart="15dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutRemarks"
        android:layout_width="0dp"
        android:layout_height="@dimen/text_input_edit_text_height"
        android:layout_marginTop="19dp"
        android:background="@drawable/header_gradient_bg"
        app:layout_constraintLeft_toRightOf="@id/guideline_v_begin"
        app:layout_constraintRight_toLeftOf="@id/guideline_v_end"
        app:layout_constraintTop_toBottomOf="@id/layoutRemarksList">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etRemarks"
            style="@style/textInputStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/et_bg"
            android:hint="@string/remarks"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:textColor="@color/colorBlackShadow" />

    </com.google.android.material.textfield.TextInputLayout>

    <android.widget.Button
        android:id="@+id/btnReleaseTicket"
        style="@style/TextStyleBold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:background="@drawable/button_selected_bg"
        android:text="@string/release_ticket"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/guideline_h_end"
        app:layout_constraintLeft_toRightOf="@id/guideline_v_begin"
        app:layout_constraintRight_toLeftOf="@id/guideline_v_end"
        app:layout_constraintTop_toBottomOf="@+id/layoutRemarks" />


</androidx.constraintlayout.widget.ConstraintLayout>
