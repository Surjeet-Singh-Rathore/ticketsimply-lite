<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_bg">

    <include
        android:id="@+id/update_ratecard_toolbar"
        layout="@layout/item_header_view_with_title_des"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/topCL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        app:cardBackgroundColor="#F7F7FB"
        app:cardCornerRadius="@dimen/_5sdp"
        app:layout_constraintEnd_toEndOf="@id/listRV"
        app:layout_constraintStart_toStartOf="@id/listRV"
        app:layout_constraintTop_toBottomOf="@id/update_ratecard_toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/amountCL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:padding="@dimen/_10sdp">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/verticalGL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".45" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/totalSeatsTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_seats_colon_new"
                android:textColor="@color/slate_dark_grey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/totalSeatsValueTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/totalSeatsTV"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/totalAmountTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/total_fare_colon"
                android:textColor="@color/slate_dark_grey"
                app:layout_constraintEnd_toStartOf="@id/totalAmountValueTV"
                app:layout_constraintStart_toEndOf="@id/verticalGL"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/totalAmountValueTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/totalAmountTV"
                app:layout_constraintTop_toTopOf="@id/totalAmountTV" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/commisionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/commision"
                android:textColor="@color/slate_dark_grey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/totalSeatsTV"
                android:layout_marginTop="6dp"
                android:visibility="visible"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/commisionTextValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/commisionText"
                app:layout_constraintStart_toEndOf="@id/commisionText"
                app:layout_constraintTop_toTopOf="@id/commisionText"
                android:layout_marginTop="0dp"
                android:visibility="visible"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/netAmtText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/net_amt_new"
                android:textColor="@color/slate_dark_grey"
                app:layout_constraintStart_toEndOf="@id/verticalGL"
                app:layout_constraintTop_toBottomOf="@id/totalAmountTV"
                android:layout_marginTop="6dp"
                android:visibility="visible"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/netAmtTextValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/netAmtText"
                app:layout_constraintStart_toEndOf="@id/netAmtText"
                app:layout_constraintTop_toTopOf="@id/netAmtText"
                android:layout_marginTop="0dp"
                android:visibility="visible"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/discountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/discount_colon"
                android:textColor="@color/slate_dark_grey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/commisionText"
                android:layout_marginTop="6dp"
                android:visibility="visible"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/discountTextValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/discountText"
                app:layout_constraintTop_toBottomOf="@id/commisionText"
                android:layout_marginTop="6dp"
                android:visibility="visible"/>
        </androidx.constraintlayout.widget.ConstraintLayout>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10ssp"
            android:id="@+id/paymentAmountCL"
            android:visibility="gone"
            android:orientation="vertical">


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/totalTransactionHeadTV"
                    android:textStyle="bold"
                    android:textColor="@color/slate_dark_grey"
                    android:layout_gravity="start"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="@string/total_transaction"/>


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/totalTransactionValueTV"
                    android:padding="@dimen/_5sdp"
                    android:textStyle="bold"
                    android:textColor="@color/slate_dark_grey"
                    app:layout_constraintTop_toTopOf="@id/totalTransactionHeadTV"
                    app:layout_constraintBottom_toBottomOf="@id/totalTransactionHeadTV"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text=""/>



            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/totalPaidHeadTV"
                android:textStyle="bold"
                android:textColor="@color/slate_dark_grey"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/_5sdp"
                app:layout_constraintTop_toBottomOf="@id/totalTransactionHeadTV"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/total_paid_amount"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/totalPaidValueTV"
                android:paddingHorizontal="@dimen/_5sdp"
                android:textStyle="bold"
                android:paddingTop="@dimen/_5sdp"
                android:textColor="@color/slate_dark_grey"
                app:layout_constraintTop_toTopOf="@id/totalPaidHeadTV"
                app:layout_constraintBottom_toBottomOf="@id/totalPaidHeadTV"
                app:layout_constraintEnd_toEndOf="parent"
                android:text=""/>



            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/totalUnPaidHeadTV"
                android:textStyle="bold"
                android:textColor="@color/slate_dark_grey"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/_5sdp"
                app:layout_constraintTop_toBottomOf="@id/totalPaidHeadTV"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/total_unpaid_amount"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/totalUnPaidValueTV"
                android:paddingHorizontal="@dimen/_5sdp"
                android:textStyle="bold"
                android:paddingTop="@dimen/_5sdp"
                android:textColor="@color/slate_dark_grey"
                app:layout_constraintTop_toTopOf="@id/totalUnPaidHeadTV"
                app:layout_constraintBottom_toBottomOf="@id/totalUnPaidHeadTV"
                app:layout_constraintEnd_toEndOf="parent"
                android:text=""/>






        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listRV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_2sdp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/pagenationRV"
        android:layout_marginBottom="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topCL"
        tools:listitem="@layout/child_booked_by_you_report" />
    <View
        android:layout_width="match_parent"
        android:id="@+id/bottomV"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white"
        android:layout_height="@dimen/_53sdp"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/_40sdp"
        android:id="@+id/prevPageBT"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/button_selected_bg_grey_round"
        android:src="@drawable/page_left_grey"
        app:layout_constraintTop_toTopOf="@id/pagenationRV"
        android:layout_marginStart="@dimen/_5sdp"
        android:padding="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="@id/pagenationRV"
        android:layout_height="0dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:id="@+id/pagenationRV"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/prevPageBT"
        app:layout_constraintEnd_toStartOf="@id/nextButtonBT"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_7sdp"
        tools:listitem="@layout/adapter_pagenation_number"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/_40sdp"
        android:id="@+id/nextButtonBT"
        android:background="@drawable/button_selected_bg_round"
        android:src="@drawable/page_right_white"
        android:padding="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/pagenationRV"
        app:layout_constraintBottom_toBottomOf="@id/pagenationRV"
        android:layout_height="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>