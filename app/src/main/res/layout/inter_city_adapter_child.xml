<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_24">

    <LinearLayout
        android:id="@+id/layout_search_selection"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:gravity="left"
        android:orientation="horizontal"
        android:weightSum="6">

        <TextView
            android:id="@+id/tvSearch"
            style="@style/TextStyleBold"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:text="@string/notAvailable"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvCityLabel"
            style="@style/TextStyleNormalTV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/city"
            android:textColor="@color/colorDimShadow6" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="16dp"
        android:background="@color/colorDimShadow1" />

    <TextView
        android:id="@+id/boarding_dropping_heading"
        style="@style/TextStyleNormalTV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_8"
        android:text="@string/notAvailable"
        android:textColor="@color/colorDimShadow6" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/city_station"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/child_search_selection"
        android:layout_marginTop="@dimen/dp_12" />


</LinearLayout>

