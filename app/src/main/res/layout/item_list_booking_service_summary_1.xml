<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:elevation="5dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:paddingStart="6dp"
        android:paddingTop="16dp"
        android:paddingEnd="6dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/text_name"
            style="@style/TextStyleNormalTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:gravity="start"
            android:paddingStart="@dimen/dp_16"
            android:paddingEnd="@dimen/dp_16"
            android:text=""
            android:layout_toStartOf="@+id/text_amount"
            android:textColor="@color/colorBlackShadow"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_amount"
            style="@style/TextStyleNormalTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_centerHorizontal="true"
            android:paddingStart="@dimen/dp_16"
            android:paddingEnd="@dimen/dp_16"
            android:text=""
            android:textColor="@color/colorBlackShadow"
            android:textSize="14sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/text_number_of_seats"
            style="@style/TextStyleBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/sp16"
            android:layout_alignParentEnd="true"
            android:ellipsize="end"
            android:gravity="end"
            android:layout_marginRight="2dp"
            android:singleLine="true"
            android:text="@string/dash"
            android:textColor="@color/button_highlight_color"
            android:textSize="12sp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>