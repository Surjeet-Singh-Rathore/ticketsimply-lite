<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_rounded_shape"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_v_begin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/dp_16" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_v_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/dp_16" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_h_begin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_h_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="@dimen/dp_16" />

    <ImageView
        android:id="@+id/imgAlert"
        android:layout_width="@dimen/dp_42"
        android:layout_height="@dimen/dp_42"
        android:src="@drawable/ic_alert"
        app:layout_constraintEnd_toEndOf="@id/guideline_v_end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_h_begin" />

    <TextView
        android:id="@+id/tvContent"
        style="@style/msg_context"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:gravity="center"
        android:text="@string/android_device_content"
        android:textColor="@color/colorBlackShadow"
        android:textSize="@dimen/sp16"
        app:layout_constraintEnd_toStartOf="@+id/guideline_v_end"
        app:layout_constraintLeft_toRightOf="@+id/guideline_v_begin"
        app:layout_constraintStart_toStartOf="@+id/guideline_v_begin"
        app:layout_constraintTop_toBottomOf="@+id/imgAlert" />

    <TextView
        android:id="@+id/tvContent1"
        style="@style/msg_context"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:gravity="center"
        android:text="@string/android_device_content1"
        android:textColor="@color/colorBlackShadow"
        android:textSize="@dimen/sp16"
        app:layout_constraintEnd_toStartOf="@+id/guideline_v_end"
        app:layout_constraintStart_toStartOf="@+id/guideline_v_begin"
        app:layout_constraintTop_toBottomOf="@+id/tvContent" />

    <TextView
        android:id="@+id/tvContent2"
        style="@style/msg_context"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:gravity="center"
        android:text="@string/android_device_id"
        android:textColor="@color/colorBlackShadow"
        android:textSize="@dimen/sp16"
        app:layout_constraintEnd_toStartOf="@+id/guideline_v_end"
        app:layout_constraintStart_toStartOf="@+id/guideline_v_begin"
        app:layout_constraintTop_toBottomOf="@+id/tvContent1" />

    <TextView
        android:id="@+id/tvAndroidDeviceId"
        style="@style/TextStyleBold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sp28"
        app:layout_constraintEnd_toStartOf="@+id/guideline_v_end"
        app:layout_constraintStart_toStartOf="@+id/guideline_v_begin"
        app:layout_constraintTop_toBottomOf="@+id/tvContent2" />

    <Button
        android:id="@+id/btnReLogin"
        style="@style/TextStyleBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginBottom="22dp"
        android:background="@drawable/layout_rounded_shape_border_radius_2_dp"
        android:text="@string/re_login"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp16"
        app:layout_constraintBottom_toTopOf="@id/guideline_h_end"
        app:layout_constraintLeft_toRightOf="@id/guideline_v_begin"
        app:layout_constraintRight_toLeftOf="@id/guideline_v_end"
        app:layout_constraintTop_toBottomOf="@+id/tvAndroidDeviceId" />
</androidx.constraintlayout.widget.ConstraintLayout>