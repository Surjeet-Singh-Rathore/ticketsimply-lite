<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/button_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_passenger_details" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/button_height">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardConfirmBy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_16"
                        android:elevation="4dp"
                        android:visibility="gone"
                        app:cardCornerRadius="4dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/dp_12">

                            <TextView
                                android:id="@+id/tvConfirmByTitle"
                                style="@style/TextStyleBold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Confirm By"
                                android:textAllCaps="true"
                                android:textColor="@color/colorBlackShadow"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />


                            <RadioGroup
                                android:id="@+id/rgConfirmBy"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_8"
                                android:orientation="horizontal"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/tvConfirmByTitle">

                                <RadioButton
                                    android:id="@+id/rbSelf"
                                    style="@style/TextStyleNormal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:buttonTint="@color/colorPrimary"
                                    android:checked="true"
                                    android:text="Self"
                                    android:textColor="@color/colorBlackShadow" />

                                <RadioButton
                                    android:id="@+id/rbOnBehalfOf"
                                    style="@style/TextStyleNormal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="50dp"
                                    android:buttonTint="@color/colorPrimary"
                                    android:text="@string/on_behalf_of"
                                    android:textColor="@color/colorBlackShadow"
                                    android:textSize="@dimen/sp14" />
                            </RadioGroup>

                            <TextView
                                android:id="@+id/tvConfirmByTypeTitle"
                                style="@style/TextStyleBold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_16"
                                android:text="Confirm by"
                                android:textAllCaps="true"
                                android:textColor="@color/colorBlackShadow"
                                android:visibility="gone"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/rgConfirmBy" />

                            <RadioGroup
                                android:id="@+id/rgConfirmByType"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:orientation="vertical"
                                android:visibility="gone"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/tvConfirmByTypeTitle">

                                <RadioButton
                                    android:id="@+id/rbUser"
                                    style="@style/TextStyleNormal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:buttonTint="@color/colorPrimary"
                                    android:text="User"
                                    android:textColor="@color/colorBlackShadow" />

                                <RadioButton
                                    android:id="@+id/rbOnlineAgent"
                                    style="@style/TextStyleNormal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:buttonTint="@color/colorPrimary"
                                    android:text="@string/online_agent"
                                    android:textColor="@color/colorBlackShadow" />

                                <RadioButton
                                    android:id="@+id/rbOfflineAgent"
                                    style="@style/TextStyleNormal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:buttonTint="@color/colorPrimary"
                                    android:text="@string/offline_agent"
                                    android:textColor="@color/colorBlackShadow" />
                            </RadioGroup>


                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/spinnerBranch"
                                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/dp_16"
                                android:hint="@string/selectBranch"
                                android:visibility="gone"
                                app:boxBackgroundColor="@color/title_bg"
                                app:boxBackgroundMode="filled"
                                app:layout_constraintTop_toBottomOf="@id/rgConfirmByType">

                                <AutoCompleteTextView
                                    android:id="@+id/acBranch"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/et_bg"
                                    android:inputType="none"
                                    android:textColor="@color/colorBlackShadow"
                                    android:textColorHint="@color/grey"
                                    android:textSize="14sp"
                                    android:textStyle="normal" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/spinnerCollectedBy"
                                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/dp_16"
                                android:hint="Collected By"
                                android:visibility="gone"
                                app:boxBackgroundColor="@color/title_bg"
                                app:boxBackgroundMode="filled"
                                app:layout_constraintTop_toBottomOf="@id/spinnerBranch">

                                <AutoCompleteTextView
                                    android:id="@+id/acOnCollectedBy"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/et_bg"
                                    android:inputType="none"
                                    android:textColor="@color/colorBlackShadow"
                                    android:textColorHint="@color/grey"
                                    android:textSize="14sp"
                                    android:textStyle="normal" />

                            </com.google.android.material.textfield.TextInputLayout>


                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardBookingDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:elevation="4dp"
                        app:cardCornerRadius="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/layoutBookingDetailsFixed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/button_secondary_bg">

                                <TextView
                                    android:id="@+id/tvTotalSeats"
                                    style="@style/TextStyleBold"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:padding="18dp"
                                    android:text="@string/notAvailable"
                                    android:textColor="@color/white" />

                                <ImageView
                                    android:id="@+id/imgBookingDetails"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginEnd="16dp"
                                    android:src="@drawable/ic_arrow_up"
                                    app:tint="@color/white" />

                            </RelativeLayout>

                            <LinearLayout
                                android:id="@+id/layoutBookingDetailsHidden"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/dp_16"
                                android:orientation="vertical"
                                android:visibility="visible">

                                <TextView
                                    android:id="@+id/tvTitle"
                                    style="@style/TextStyleBold"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/passenger_details"
                                    android:textColor="@color/colorBlackShadow" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_12"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:weightSum="1">

                                        <TextView
                                            android:id="@+id/tvName"
                                            style="@style/TextStyleNormal"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.50"
                                            android:text="@string/name"
                                            android:textColor="@color/un_select_color" />

                                        <TextView
                                            android:id="@+id/tvAge"
                                            style="@style/TextStyleNormal"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.25"
                                            android:text="@string/age"
                                            android:textColor="@color/un_select_color" />

                                        <TextView
                                            android:id="@+id/tvSeatNo"
                                            style="@style/TextStyleNormal"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.25"
                                            android:text="@string/seat_no"
                                            android:textColor="@color/un_select_color" />

                                    </LinearLayout>

                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/rvPassengers"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/dp_12" />

                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="@dimen/dp_12"
                                    android:background="@color/view_color" />

                                <include
                                    android:id="@+id/layoutBoardingDropping"
                                    layout="@layout/include_src_dest_layout" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="@dimen/dp_12"
                                    android:background="@color/view_color"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/tvNetAmt"
                                    style="@style/TextStyleBold"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_12"
                                    android:text="@string/notAvailable"
                                    android:textColor="@color/colorBlackShadow"
                                    android:visibility="gone" />

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rvCharges"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_12" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="@dimen/dp_12"
                                    android:background="@color/view_color" />

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rvCoupons"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_12" />

                                <View
                                    android:id="@+id/viewCoupons"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="@dimen/dp_12"
                                    android:background="@color/view_color"
                                    android:visibility="gone" />

                                <LinearLayout
                                    android:id="@+id/layoutContactDetails"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:visibility="gone">

                                    <TextView
                                        style="@style/TextStyleBold"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/dp_12"
                                        android:text="@string/contact_details"
                                        android:textColor="@color/colorBlackShadow" />

                                    <TextView
                                        style="@style/TextStyleNormal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/dp_12"
                                        android:text="@string/mobile_number"
                                        android:textColor="@color/colorShadow" />

                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/dp_12">

                                        <TextView
                                            android:id="@+id/tvContactNo"
                                            style="@style/TextStyleNormal"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/notAvailable"
                                            android:textColor="@color/colorBlackShadow"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toTopOf="parent"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintEnd_toStartOf="@id/tvSmsInfo"
                                            app:layout_constrainedWidth="true" />

                                        <TextView
                                            android:id="@+id/tvSmsInfo"
                                            style="@style/TextStyleNormal"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:text="@string/sms_will_be_sent_to_this_number"
                                            android:textColor="@color/colorPrimary"
                                            android:textSize="12sp"
                                            android:maxLines="3"
                                            android:gravity="end"
                                            app:layout_constraintTop_toTopOf="parent"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintStart_toEndOf="@id/tvContactNo" />
                                    </androidx.constraintlayout.widget.ConstraintLayout>





                                </LinearLayout>

                            </LinearLayout>


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardPhoneBooking"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_16"
                        android:elevation="4dp"
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/button_secondary_bg"
                        app:cardCornerRadius="4dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp_16">

                            <TextView
                                style="@style/TextStyleBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerInParent="true"
                                android:drawableStart="@drawable/ic_phone_"
                                android:drawablePadding="8dp"
                                android:text="@string/do_phone_booking"
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/tvBookingTime"
                                style="@style/TextStyleBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerInParent="true"
                                android:text="@string/not_specified"
                                android:textColor="@color/white"
                                android:textSize="11sp" />


                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:visibility="gone"
                        android:id="@+id/cardMealCoupons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_16"
                        android:layout_marginEnd="@dimen/dp_16"
                        app:cardCornerRadius="@dimen/dp_4"
                        app:cardElevation="@dimen/cardview_default_elevation"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cardPhoneBooking">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/_16sdp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/TextStyleNormal"
                                android:textColor="@color/grey"
                                android:textSize="12sp"
                                android:text="@string/meal_coupons"
                                />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvMealCoupons"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:visibility="gone"
                        android:id="@+id/cardMealTypes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_16"
                        android:layout_marginEnd="@dimen/dp_16"
                        app:cardCornerRadius="@dimen/dp_4"
                        app:cardElevation="@dimen/cardview_default_elevation"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cardMealCoupons">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/_16sdp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/TextStyleNormal"
                                android:textColor="@color/grey"
                                android:textSize="12sp"
                                android:text="@string/meal_type"
                                />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvMealType"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardWhatsapp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_16"
                        android:elevation="4dp"
                        android:visibility="gone"
                        app:cardCornerRadius="4dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp_16">

                            <TextView
                                style="@style/TextStyleBold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerInParent="true"
                                android:text="@string/share_details_on_whatsapp"
                                android:textColor="@color/colorBlackShadow" />

                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/switchWhatsApp"
                                style="@style/msg_context"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerInParent="true"
                                android:layout_marginEnd="@dimen/dp_12"
                                android:thumb="@drawable/thumb_no"
                                app:track="@drawable/track" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:id="@+id/layoutPaymentOptions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextStyleBold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_16"
                            android:layout_marginTop="@dimen/dp_12"
                            android:text="@string/payment_options"
                            android:textColor="@color/colorBlackShadow" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_payment_options"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_12" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

            <android.widget.Button
                android:id="@+id/btnBook"
                style="@style/TextStyleBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="16dp"
                android:background="@color/button_default_color"
                android:text="@string/notAvailable"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />

            <include
                android:id="@+id/includeProgress"
                layout="@layout/layout_progress_bar" />

        </RelativeLayout>

    </LinearLayout>

    <include
        android:id="@+id/layoutNetwork_offline_online_layout"
        layout="@layout/network_offline_online_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>