<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/inactiveServiceTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_5sdp"
        android:drawableEnd="@drawable/ic_close_24_white"
        android:text="@string/inactive_service"
        style="@style/TextStyleBold"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/white"
        android:background="@color/button_secondary_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/alertIV"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:src="@drawable/ic_alert_circle"
        android:layout_marginTop="@dimen/_25sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inactiveServiceTV" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/inactivateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/are_you_sure_you_want_to_inactivate"
        android:textColor="@color/black"
        style="@style/TextStyleNormal"
        android:textSize="@dimen/_11ssp"
        android:layout_marginTop="@dimen/_12sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/alertIV"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/serviceNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_7sdp"
        android:text="8:00 PM, Bangalore to Thrissur(BGN123)"
        android:gravity="center"
        android:textColor="@color/black"
        style="@style/TextStyleBold"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inactivateTV"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/noTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:paddingVertical="@dimen/_7sdp"
        android:text="@string/no"
        android:gravity="center"
        android:textColor="@color/white"
        style="@style/TextStyleBold"
        android:textSize="@dimen/_12ssp"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/bg_little_round_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/serviceNameTV"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/yesTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:paddingVertical="@dimen/_7sdp"
        android:text="Yes, Inactivate"
        android:gravity="center"
        android:textColor="@color/colorRed"
        style="@style/TextStyleBold"
        android:textSize="@dimen/_12ssp"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/noTV"/>
</androidx.constraintlayout.widget.ConstraintLayout>