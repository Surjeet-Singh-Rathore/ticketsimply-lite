<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="72dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="8dp"
    android:background="@color/dashboard_occupancy_grid_background">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardOccupancy"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="8dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/light_purple_notification_pickupchart">

    <LinearLayout
        android:id="@+id/layoutDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/layout_rounded_shape"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="4dp"

        >
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty"
            android:textColor="@color/colorBlackShadow"
            android:textSize="14dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textColor="@color/colorBlackShadow"
            android:textSize="14dp"
            android:layout_gravity="center"
            android:gravity="center"
            style="@style/TextStyleNormal"/>

    </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>