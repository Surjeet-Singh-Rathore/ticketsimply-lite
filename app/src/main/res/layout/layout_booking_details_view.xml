<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="15dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="15dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_verical_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="15dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_verical_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="15dp" />


    <ImageView
        android:id="@+id/toolbar_image_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_16"
        android:src="@drawable/arrow_back"
        app:layout_constraintStart_toEndOf="@id/guideline_verical_start"
        app:layout_constraintTop_toTopOf="@+id/guideline_horizontal_start"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/toolbar_header_text"
        style="@style/TextStyleBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notAvailable"
        android:textColor="@color/colorBlackShadow"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/toolbar_image_left"
        app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_start" />

    <TextView
        android:id="@+id/toolbar_header_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/notAvailable"
        android:textColor="@color/button_default_color"
        android:textSize="11sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline_verical_end"
        app:layout_constraintStart_toEndOf="@id/toolbar_image_left"
        app:layout_constraintTop_toBottomOf="@id/toolbar_header_text" />


    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:background="@color/button_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_header_date">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="15dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="15dp" />


            <TextView
                android:id="@+id/text_quick_details"
                style="@style/TextStyleBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Ticket Detail"
                android:textColor="@color/colorBlackShadow"
                app:layout_constraintStart_toStartOf="@id/guideline_vertical_start"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_ticket_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:elevation="5dp"
                android:paddingBottom="20dp"
                app:cardCornerRadius="5dp"
                app:layout_constraintEnd_toStartOf="@id/guideline_vertical_end"
                app:layout_constraintStart_toEndOf="@id/guideline_vertical_start"
                app:layout_constraintTop_toBottomOf="@id/text_quick_details">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">


                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline_fifty_percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_begin="191dp" />

                    <TextView
                        android:id="@+id/text_origin"
                        style="@style/msg_context"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Service Number"
                        android:textColor="@color/colorBlackShadow"
                        app:layout_constraintEnd_toStartOf="@id/guideline_fifty_percentage"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/text_destination"
                        style="@style/msg_context"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Ticket Number"
                        android:textColor="@color/colorBlackShadow"
                        app:layout_constraintEnd_toStartOf="@id/guideline_fifty_percentage"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvServiceNumber" />

                    <TextView
                        android:id="@+id/text_travel_date"
                        style="@style/msg_context"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="From"
                        android:textColor="@color/colorBlackShadow"
                        app:layout_constraintEnd_toStartOf="@id/guideline_fifty_percentage"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_destination" />

                    <TextView
                        android:id="@+id/text_total_seats"
                        style="@style/msg_context"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="To"
                        android:textColor="@color/colorBlackShadow"
                        app:layout_constraintEnd_toStartOf="@id/guideline_fifty_percentage"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_travel_date" />

                    <TextView
                        android:id="@+id/text_seats_no"
                        style="@style/msg_context"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Seats"
                        android:textColor="@color/colorBlackShadow"
                        app:layout_constraintEnd_toStartOf="@id/guideline_fifty_percentage"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_total_seats" />


                    <TextView
                        android:id="@+id/tvServiceNumber"
                        style="@style/TextStyleBold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="end"
                        android:text="@string/notAvailable"
                        android:textColor="@color/colorBlackShadow"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/guideline_fifty_percentage"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvTicketNumber"
                        style="@style/TextStyleBold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="end"
                        android:text="@string/notAvailable"
                        android:textColor="@color/colorBlackShadow"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/guideline_fifty_percentage"
                        app:layout_constraintTop_toBottomOf="@id/tvServiceNumber" />

                    <TextView
                        android:id="@+id/tvFrom"
                        style="@style/TextStyleBold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="end"
                        android:text="@string/notAvailable"
                        android:textColor="@color/colorBlackShadow"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/guideline_fifty_percentage"
                        app:layout_constraintTop_toBottomOf="@id/tvTicketNumber" />

                    <TextView
                        android:id="@+id/tvTo"
                        style="@style/TextStyleBold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="end"
                        android:text="@string/notAvailable"
                        android:textColor="@color/colorBlackShadow"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/guideline_fifty_percentage"
                        app:layout_constraintTop_toBottomOf="@id/text_travel_date" />

                    <TextView
                        android:id="@+id/text_seats_no_value"
                        style="@style/TextStyleBold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="end"
                        android:text="@string/notAvailable"
                        android:textColor="@color/colorBlackShadow"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/guideline_fifty_percentage"
                        app:layout_constraintTop_toBottomOf="@id/text_total_seats" />

                    <TextView
                        android:id="@+id/text_see_more"
                        style="@style/TextStyleBold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="end"
                        android:text="See More"
                        android:textColor="@color/colorButton"
                        android:textSize="11sp"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/guideline_fifty_percentage"
                        app:layout_constraintTop_toBottomOf="@id/text_seats_no_value" />


                    <TextView
                        android:id="@+id/text_net_amount"
                        style="@style/msg_context"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Amount"
                        android:textColor="@color/colorBlackShadow"
                        app:layout_constraintEnd_toStartOf="@id/guideline_fifty_percentage"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_see_more" />

                    <TextView
                        android:id="@+id/text_boarding_at"
                        style="@style/msg_context"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Boarding"
                        android:textColor="@color/colorBlackShadow"
                        app:layout_constraintEnd_toStartOf="@id/guideline_fifty_percentage"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_net_amount" />

                    <TextView
                        android:id="@+id/text_dropping_point"
                        style="@style/msg_context"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Dropping"
                        android:textColor="@color/colorBlackShadow"
                        app:layout_constraintEnd_toStartOf="@id/guideline_fifty_percentage"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_boarding_at_value" />


                    <TextView
                        android:id="@+id/text_net_amount_value"
                        style="@style/TextStyleBold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="end"
                        android:text="@string/notAvailable"
                        android:textColor="@color/colorBlackShadow"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/guideline_fifty_percentage"
                        app:layout_constraintTop_toBottomOf="@id/text_see_more" />

                    <TextView
                        android:id="@+id/text_boarding_at_value"
                        style="@style/TextStyleBold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="end"
                        android:text="@string/notAvailable"
                        android:textColor="@color/colorBlackShadow"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/guideline_fifty_percentage"
                        app:layout_constraintTop_toBottomOf="@id/text_net_amount_value" />

                    <TextView
                        android:id="@+id/text_dropping_point_value"
                        style="@style/TextStyleBold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="end"
                        android:text="@string/notAvailable"
                        android:textColor="@color/colorBlackShadow"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/guideline_fifty_percentage"
                        app:layout_constraintTop_toBottomOf="@id/text_boarding_at_value" />

                    <View
                        android:id="@+id/view_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/colorDimShadow6"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_dropping_point_value" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:maxLines="2"
                        android:text="Please report to the boarding point 30min before time of departure"
                        android:textColor="@color/button_default_color"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/view_line" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/text_issuer_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:maxLines="2"
                android:paddingLeft="12dp"
                android:text="@string/empty"
                android:textColor="@color/button_default_color"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_ticket_details" />


            <android.widget.Button
                android:id="@+id/button_send_sms"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_margin="15dp"
                android:background="@drawable/layout_rounded_shape"
                android:backgroundTint="@color/button_highlight_color"
                android:text="Send SMS"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_issuer_name" />


            <android.widget.Button
                android:id="@+id/button_send_email"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_margin="15dp"
                android:background="@drawable/layout_rounded_shape"
                android:backgroundTint="@color/button_secondary_bg"
                android:text="Send Email"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_send_sms" />


            <TextView
                android:id="@+id/tvBookAnotherTicket"
                style="@style/TextStyleBold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="Book Another Ticket"
                android:textColor="@color/colorPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/button_send_email" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>

    <include
        android:id="@+id/includeProgress"
        layout="@layout/layout_progress_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline_verical_end"
        app:layout_constraintStart_toStartOf="@+id/guideline_verical_start"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>