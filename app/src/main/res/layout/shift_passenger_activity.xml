<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true">

    <include
        android:id="@+id/layout_passenger_details_seat_legends"
        layout="@layout/passenger_details_seat_legends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent" />

    <include
        android:id="@+id/toolbar_passenger_details"
        layout="@layout/toolbar_shift_passenger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/toolbar_passenger_details"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_10"
        app:layout_constraintBottom_toTopOf="@id/shiftPassenger_proceedBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_passenger_details">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_horizontal_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="16dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_start"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="16dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/dp_16" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/header_gradient_bg"
                app:endIconDrawable="@drawable/ic_down_arrow_filled"
                app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_end"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_start"
                app:layout_constraintTop_toTopOf="@+id/guideline_horizontal_start">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etFromService"
                    style="@style/textInputStyle"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/et_bg"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:hint="@string/from_service"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:text="@string/mst_281_current_service"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/colorPrimaryDark" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_view"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_marginTop="42dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_end"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_start"
                app:layout_constraintTop_toBottomOf="@+id/layoutName"
                app:lottie_autoPlay="true"
                app:lottie_enableMergePathsForKitKatAndAbove="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/arrow_down" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutToday"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="42dp"
                android:background="@drawable/header_gradient_bg"
                android:hint="@string/date"
                app:endIconDrawable="@drawable/ic_down_arrow_filled"
                app:hintTextColor="@color/gray"
                app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_end"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_start"
                app:layout_constraintTop_toBottomOf="@+id/animation_view">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etdToday"
                    style="@style/textInputStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/et_bg"
                    android:drawableEnd="@drawable/ic_combined_shape_"
                    android:focusableInTouchMode="false"
                    android:imeOptions="actionNext"
                    android:inputType="none"
                    android:textColorHint="@color/gray" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_toService"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@drawable/header_gradient_bg"
                android:textColorHint="@color/grey"
                app:endIconDrawable="@drawable/ic_down_arrow_filled"
                app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_end"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_start"
                app:layout_constraintTop_toBottomOf="@+id/layoutToday">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_toService"
                    style="@style/textInputStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/et_bg"
                    android:drawableEnd="@drawable/ic_search"
                    android:focusableInTouchMode="false"
                    android:hint="@string/to_service"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:textColorHint="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>

            <CheckBox
                android:id="@+id/check_shiftRemainingSeats"
                style="@style/textInputStyle"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_12"
                android:background="@drawable/layout_rounded_shape_blue_line"
                android:text="@string/shift_all_seats_to_extra"
                android:textAllCaps="true"
                app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_end"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_start"
                app:layout_constraintTop_toBottomOf="@+id/layout_toService" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/move_toextra_seat_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@drawable/header_gradient_bg"
                android:visibility="gone"
                app:endIconDrawable="@drawable/ic_down_arrow_filled"
                app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_end"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_start"
                app:layout_constraintTop_toBottomOf="@+id/check_shiftRemainingSeats">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etextra"
                    style="@style/textInputStyle"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/et_bg"
                    android:hint="@string/moving_to_extra_seat_numbers"
                    android:imeOptions="actionNext"
                    android:inputType="none"
                    android:text="@string/mst_281_current_service"
                    android:textColorHint="@color/colorPrimaryDark" />
            </com.google.android.material.textfield.TextInputLayout>


