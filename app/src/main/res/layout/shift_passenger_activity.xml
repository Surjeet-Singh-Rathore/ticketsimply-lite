            <RelativeLayout
                android:id="@+id/relativeLayout6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_8"
                app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_end"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_start"
                app:layout_constraintTop_toBottomOf="@+id/move_toextra_seat_layout">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/edt_selectSeatNo_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:hint="@string/select_seat_number"
                    app:boxBackgroundColor="@color/title_bg"
                    app:boxBackgroundMode="filled">


                    <AutoCompleteTextView
                        android:id="@+id/edt_selectSeatNo"
                        style="@style/TextStyleNormal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/et_bg"
                        android:inputType="none"
                        android:textColor="@color/colorBlackShadow"
                        android:textColorHint="@color/grey"
                        android:textSize="14sp" />


                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/tv_more_slected"
                    style="@style/TextStyleNormalTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="50dp"
                    android:text="@string/more_seats"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp14"
                    android:visibility="gone" />

            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/dp_8"
                android:id="@+id/layoutCoach"
                app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_end"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_start"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/layout_coach_single"
                    android:name="com.bitla.ts.presentation.view.fragments.AllCoachFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@+id/confirmSeatTypeFareChangeBtn"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:visibility="gone"
                    tools:layout="@layout/fragment_common_coach_single" />


            </LinearLayout>

            <TextView
                android:id="@+id/tv_availableSeats"
                style="@style/TextStyleBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:text="@string/seats_available"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp14"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_end"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_start"
                app:layout_constraintTop_toBottomOf="@+id/layoutCoach" />

            <CheckBox
                android:id="@+id/check_smsPassengerWithNewDetails"
                style="@style/textInputStyle"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@drawable/layout_rounded_shape_blue_line"
                android:text="@string/sms_passenger_with_new_details"
                android:textAllCaps="true"
                app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_end"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_start"
                app:layout_constraintTop_toBottomOf="@+id/tv_availableSeats" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputRemarks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"

                app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_end"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_start"
                app:layout_constraintTop_toBottomOf="@+id/check_smsPassengerWithNewDetails">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputEditTextRemarks"
                    style="@style/textInputStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/remarks"
                    android:inputType="text"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/colorPrimaryDark" />
            </com.google.android.material.textfield.TextInputLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/coach_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#D5222222"
        android:clickable="false"
        android:elevation="@dimen/dp_12"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/shiftPassenger_proceedBtn"
        style="@style/TextStyleBold"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_48"
        android:layout_margin="@dimen/dp_16"
        android:background="@drawable/layout_rounded_shape_button"
        android:text="@string/proceed"

        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/sp16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


