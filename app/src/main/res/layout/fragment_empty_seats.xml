<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/button_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_16"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    app:cardCornerRadius="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_24"
                        android:layout_marginEnd="@dimen/dp_16"
                        android:layout_marginBottom="@dimen/dp_24"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextStyleBold"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:text="@string/enter_details_to_fill_seat_s"
                                android:textColor="@color/colorBlackShadow"
                                app:layout_constraintEnd_toStartOf="@+id/guideline"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/tvTotalAvailableSeats"
                                style="@style/TextStyleBold"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:text="@string/empty"
                                android:textColor="@color/colorPrimary"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@+id/guideline"
                                app:layout_constraintTop_toTopOf="parent" />

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/guideline"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.65" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/spinnerSelectSeat"
                            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/dp_24"
                            android:hint="@string/select_seat"
                            app:boxBackgroundColor="@color/title_bg"
                            app:boxBackgroundMode="filled">

                            <AutoCompleteTextView
                                android:id="@+id/acSelectSeat"
                                style="@style/TextStyleNormal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/et_bg"
                                android:inputType="none"
                                android:textColor="@color/colorBlackShadow"
                                android:textColorHint="@color/grey"
                                android:textSize="14sp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_24"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/spinnerTitle"
                                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.4"
                                android:hint="@string/title"
                                app:boxBackgroundColor="@color/title_bg"
                                app:boxBackgroundMode="filled">

                                <AutoCompleteTextView
                                    android:id="@+id/acTitle"
                                    style="@style/TextStyleNormal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/et_bg"
                                    android:inputType="none"
                                    android:singleLine="true"
                                    android:textColor="@color/colorBlackShadow"
                                    android:textColorHint="@color/grey"
                                    android:textSize="14sp" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/layoutName"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/text_input_edit_text_height"
                                android:layout_marginStart="@dimen/dp_8"
                                android:layout_weight="0.6"
                                android:background="@drawable/header_gradient_bg">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etName"
                                    style="@style/textInputStyle"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/et_bg"
                                    android:hint="@string/name"
                                    android:imeOptions="actionNext"
                                    android:inputType="text" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/dp_24"
                            android:layout_height="wrap_content">


                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/layoutCountryCode"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/text_input_edit_text_height"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:background="@drawable/header_gradient_bg"
                                app:boxStrokeErrorColor="@color/colorRed2"
                                app:boxStrokeWidth="@dimen/dp_2"
                                android:visibility="gone"
                                app:errorEnabled="true"
                                app:errorIconDrawable="@null"
                                app:errorTextAppearance="@style/TextAppearance.MaterialComponents.Headline3">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etCountryCode"
                                    style="@style/textInputStyle"
                                    android:layout_width="match_parent"
                                    android:editable="false"
                                    android:focusable="false"
                                    android:text="+91"
                                    android:paddingHorizontal="@dimen/_10sdp"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/et_bg"
                                    android:hint="@string/code"
                                    android:imeOptions="actionNext"
                                    android:inputType="number"
                                    android:textColor="@color/colorBlackShadow" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/layoutPhoneNumber"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/text_input_edit_text_height"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/layoutCountryCode"
                                android:background="@drawable/header_gradient_bg">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etPhoneNumber"
                                    style="@style/textInputStyle"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/et_bg"
                                    android:hint="@string/phone_number"
                                    android:imeOptions="actionDone"
                                    android:inputType="number" />

                            </com.google.android.material.textfield.TextInputLayout>


                        </androidx.constraintlayout.widget.ConstraintLayout>



                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/spinnerBoardingPoint"
                            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/dp_24"
                            android:hint="@string/boarding_point"
                            app:boxBackgroundColor="@color/title_bg"
                            app:boxBackgroundMode="filled">

                            <AutoCompleteTextView
                                android:id="@+id/acBoardingPoint"
                                style="@style/TextStyleNormal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/et_bg"
                                android:inputType="none"
                                android:textColor="@color/colorBlackShadow"
                                android:textColorHint="@color/grey"
                                android:textSize="14sp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/spinnerDroppingPoint"
                            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/dp_24"
                            android:hint="@string/dropping_point"
                            app:boxBackgroundColor="@color/title_bg"
                            app:boxBackgroundMode="filled">

                            <AutoCompleteTextView
                                android:id="@+id/acDroppingPoint"
                                style="@style/TextStyleNormal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/et_bg"
                                android:inputType="none"
                                android:textColor="@color/colorBlackShadow"
                                android:textColorHint="@color/grey"
                                android:textSize="14sp" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <TextView
                            android:id="@+id/tvSeatPrice"
                            style="@style/TextStyleBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_24"
                            android:text="@string/empty"
                            android:textColor="@color/colorPrimary" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <android.widget.Button
                    android:id="@+id/btnUpdateChart"
                    style="@style/TextStyleBold"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginTop="@dimen/dp_24"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:background="@drawable/button_default_bg"
                    android:text="@string/updateChart"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

    <include
        android:id="@+id/includeProgress"
        layout="@layout/layout_progress_bar" />


</RelativeLayout>
