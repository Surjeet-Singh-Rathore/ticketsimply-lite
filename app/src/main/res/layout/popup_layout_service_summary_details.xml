<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTicketNo"
            style="@style/TextStyleBold"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="start|center"
            android:paddingStart="16sp"
            android:paddingEnd="16sp"
            android:text="@string/ticket_no"
            android:textColor="@color/text_header_bg"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_four_tint" />

        <TextView
            android:id="@+id/tvSrcDest"
            style="@style/TextStyleBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="left|center"
            android:paddingStart="16sp"
            android:paddingEnd="16sp"
            android:text="@string/notAvailable"
            android:textColor="@color/text_header_bg"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvBusType"
            style="@style/TextStyleBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:gravity="left|center"
            android:paddingStart="16sp"
            android:paddingEnd="16sp"
            android:text="@string/notAvailable"
            android:textColor="@color/button_default_color"
            android:textSize="11sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="@dimen/dp_16"
            android:background="@color/grey_four_tint" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:orientation="vertical">

                <TextView
                    style="@style/TextStyleBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:ellipsize="end"
                    android:gravity="left|center"
                    android:paddingStart="16sp"
                    android:text="@string/booked_seats"
                    android:textColor="@color/text_header_bg"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tvBookedSeats"
                    style="@style/TextStyleBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:ellipsize="end"
                    android:gravity="left|center"
                    android:paddingStart="16sp"
                    android:paddingEnd="16sp"
                    android:text="@string/notAvailable"
                    android:textColor="@color/text_header_bg"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:orientation="vertical">

                <TextView
                    style="@style/TextStyleBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:ellipsize="end"
                    android:gravity="left|center"
                    android:paddingStart="16sp"
                    android:text="@string/seat_nos"
                    android:textColor="@color/text_header_bg"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tvSeatNo"
                    style="@style/TextStyleBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:ellipsize="end"
                    android:gravity="left|center"
                    android:paddingStart="16sp"
                    android:paddingEnd="16sp"
                    android:text="@string/notAvailable"
                    android:textColor="@color/text_header_bg"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="@dimen/dp_16"
            android:background="@color/grey_four_tint" />

        <TextView
            android:id="@+id/tvReleasedBy"
            style="@style/TextStyleBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="left|center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/empty"
            android:textColor="@color/colorDimShadow6"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_okay"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@color/button_highlight_color"
            android:gravity="center"
            android:text="@string/okay"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.cardview.widget.CardView>