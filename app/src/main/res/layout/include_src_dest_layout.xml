<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:layout_marginTop="12dp">

    <LinearLayout
        android:id="@+id/boardingPointLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/tv_boarding_date"
            style="@style/TextStyleNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:textSize="@dimen/sp12" />

        <TextView
            android:id="@+id/tv_boarding_time"
            style="@style/TextStyleBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textColor="@color/grey"
            android:textSize="@dimen/sp14" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/boardingDroppingDrawableLayout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="-66dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/horizontal_barrier_2"
        app:layout_constraintLeft_toRightOf="@+id/boardingPointLayout"
        app:layout_constraintRight_toLeftOf="@+id/layout_boarding_point_details"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ExtraText">

        <ImageView
            android:id="@+id/empty_circle_new"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentTop="true"
            android:clipToPadding="false"
            android:src="@drawable/empty_bordered_circle"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="12dp"
            android:layout_height="match_parent"
            android:layout_above="@+id/filled_circle_new"
            android:layout_below="@+id/empty_circle_new"
            android:background="@drawable/ic_ticket_details_dotted_line"
            android:backgroundTint="@color/colorPrimary"
            android:gravity="center_horizontal" />

        <ImageView
            android:id="@+id/filled_circle_new"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentBottom="true"
            android:clipToPadding="false"
            android:gravity="bottom"
            android:src="@drawable/filled_circle"
            android:visibility="visible" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_boarding_point_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="40dp"
        app:layout_constraintLeft_toRightOf="@id/boardingDroppingDrawableLayout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            style="@style/TextStyleNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/boarding"
            android:textColor="@color/grey"
            android:textSize="@dimen/sp12" />

        <TextView
            android:id="@+id/tvBoarding"
            style="@style/TextStyleBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:textSize="@dimen/sp14" />

    </LinearLayout>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/vertical_barrier_1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:barrierDirection="left"
        app:constraint_referenced_ids="boardingDroppingDrawableLayout" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/vertical_barrier_2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:barrierDirection="left"
        app:constraint_referenced_ids="layout_boarding_point_details" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/horizontal_barrier_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="layout_boarding_point_details" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/horizontal_barrier_2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="tv_dropping_date,dropping_heading" />

    <TextView
        android:id="@+id/tv_dropping_date"
        style="@style/TextStyleNormal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/grey"
        android:textSize="@dimen/sp12"
        app:layout_constraintEnd_toStartOf="@id/vertical_barrier_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/horizontal_barrier_1" />

    <TextView
        android:id="@+id/tv_dropping_time"
        style="@style/TextStyleBold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:textColor="@color/grey"
        android:textSize="@dimen/sp14"
        app:layout_constraintEnd_toStartOf="@id/vertical_barrier_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_dropping_date" />

    <TextView
        android:id="@+id/dropping_heading"
        style="@style/TextStyleNormal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/dropping"
        android:textColor="@color/grey"
        android:textSize="@dimen/sp12"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/vertical_barrier_2"
        app:layout_constraintTop_toTopOf="@id/horizontal_barrier_1" />

    <TextView
        android:id="@+id/tvDropping"
        style="@style/TextStyleBold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/grey"
        android:textSize="@dimen/sp14"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/vertical_barrier_2"
        app:layout_constraintTop_toBottomOf="@+id/dropping_heading" />

</androidx.constraintlayout.widget.ConstraintLayout>
