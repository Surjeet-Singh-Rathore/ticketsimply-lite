<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/card_radius">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_v_begin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/dp_16" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_v_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/dp_16" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_h_begin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="@dimen/dp_12" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_h_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="@dimen/dp_12" />

        <TextView
            android:id="@+id/tvHeader"
            style="@style/TextStyleBold"
            android:layout_width="0dp"
            android:layout_height="49dp"
            android:gravity="center|left"
            android:text="@string/notAvailable"
            android:textColor="@color/colorRed2"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/guideline_v_begin"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_top"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_bg"
            app:layout_constraintTop_toBottomOf="@id/tvHeader" />


        <TextView
            android:id="@+id/tv_header_text"
            style="@style/TextStyleBold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:text="@string/notAvailable"
            android:textColor="@color/text_header_bg"
            app:layout_constraintEnd_toStartOf="@id/guideline_v_end"
            app:layout_constraintStart_toEndOf="@id/guideline_v_begin"
            app:layout_constraintTop_toBottomOf="@id/view_top" />

        <TextView
            android:id="@+id/tv_subtitle"
            style="@style/TextStyleNormal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/notAvailable"
            android:textColor="@color/button_default_color"
            android:textSize="11sp"
            app:layout_constraintEnd_toStartOf="@id/guideline_v_end"
            app:layout_constraintStart_toEndOf="@id/guideline_v_begin"
            app:layout_constraintTop_toBottomOf="@id/tv_header_text" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutRemarksList"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="@dimen/text_input_edit_text_height"
            android:layout_marginTop="@dimen/dp_16"
            android:hint="@string/selectBlockingReason"
            android:visibility="gone"
            app:boxStrokeColor="@color/grey"
            app:endIconMode="dropdown_menu"
            app:hintTextAppearance="@style/TextAppearance.MaterialComponents.Caption"
            app:layout_constraintEnd_toStartOf="@id/guideline_v_end"
            app:layout_constraintStart_toEndOf="@id/guideline_v_begin"
            app:layout_constraintTop_toBottomOf="@id/tv_subtitle">

            <AutoCompleteTextView
                android:id="@+id/tvRemarks"
                style="@style/TextStyleBold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="none"
                android:paddingStart="15dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:textColorHint="@color/grey" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutRemarks"
            android:layout_width="0dp"
            android:layout_height="@dimen/text_input_edit_text_height"

            android:layout_marginTop="@dimen/dp_16"
            android:background="@drawable/header_gradient_bg"
            app:layout_constraintLeft_toRightOf="@id/guideline_v_begin"
            app:layout_constraintRight_toLeftOf="@id/guideline_v_end"
            app:layout_constraintTop_toBottomOf="@+id/layoutRemarksList">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etRemarks"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/et_bg"
                android:hint="@string/remarks"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:textColor="@color/black" />

        </com.google.android.material.textfield.TextInputLayout>

        <CheckBox
            android:id="@+id/checkbox_reservation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:fontFamily="@font/notosans_regular"
            android:text="Inform cancellation of service to OTAs (Recommended)"
            android:visibility="gone"
            app:layout_constraintLeft_toRightOf="@id/guideline_v_begin"
            app:layout_constraintRight_toLeftOf="@id/guideline_v_end"
            app:layout_constraintTop_toBottomOf="@+id/layoutRemarks" />


