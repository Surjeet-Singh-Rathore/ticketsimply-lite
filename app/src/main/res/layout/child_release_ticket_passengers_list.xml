<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="@dimen/dp_8"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/releaseTicketPassengerCheckBox"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSeatNo"
        style="@style/TextStyleBold"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_36"
        android:layout_marginStart="@dimen/dp_8"
        android:background="@drawable/layout_rounded_shape"
        android:backgroundTint="@color/colorPrimaryTransparent"
        android:gravity="center"
        android:text="@string/notAvailable"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/releaseTicketPassengerCheckBox"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvName"
        style="@style/msg_context"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:gravity="center"
        android:text="@string/notAvailable"
        android:textColor="@color/colorBlackShadow"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/tvMobile"
        app:layout_constraintStart_toEndOf="@+id/tvSeatNo"
        app:layout_constraintTop_toTopOf="@+id/tvSeatNo" />

    <TextView
        android:id="@+id/tvMobile"
        style="@style/TextStyleBold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/notAvailable"
        android:textColor="@color/text_header_bg"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvSeatNo"
        app:layout_constraintStart_toStartOf="@+id/tvName" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp_4"
        android:background="@color/grey_four_tint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

