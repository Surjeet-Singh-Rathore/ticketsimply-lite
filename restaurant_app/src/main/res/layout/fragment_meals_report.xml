<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_shade_bg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="16dp"
        android:paddingTop="24dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textView1"
            style="@style/textStyleBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/meals_report"
            android:textColor="@color/grey"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/back_arrow"
            app:layout_constraintStart_toEndOf="@id/back_arrow"
            app:layout_constraintTop_toTopOf="@id/back_arrow" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textView2"
            style="@style/textStyleNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/meals_report_dates"
            android:textColor="@color/blue_shade_2"
            android:textFontWeight="500"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/textView1"
            app:layout_constraintTop_toBottomOf="@id/textView1" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/shareReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:src="@drawable/icon_share"
            app:layout_constraintBottom_toBottomOf="@id/textView2"
            app:layout_constraintEnd_toStartOf="@id/downloadReport"
            app:layout_constraintTop_toTopOf="@id/textView1" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/downloadReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_download"
            app:layout_constraintBottom_toBottomOf="@id/shareReport"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/shareReport" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/pagenationRV">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
      >

        <androidx.cardview.widget.CardView
            android:id="@+id/summaryCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvSummary"
                    style="@style/textStyleBold"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="@string/your_summary"
                    android:textColor="@color/grey_shade_3"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/visible_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="8dp"
                    android:paddingTop="8dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvSummary">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvCouponsRedeemed"
                        style="@style/textStyleNormal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/coupons_redeemed"
                        android:textColor="@color/grey_shade_3"
                        android:textFontWeight="400"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toStartOf="@id/guideline"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvNoOfCoupons"
                        style="@style/textStyleBold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/no_of_coupons"
                        android:textAlignment="viewEnd"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@id/tvCouponsRedeemed"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/guideline"
                        app:layout_constraintTop_toTopOf="@id/tvCouponsRedeemed" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvNetRevenue"
                        style="@style/textStyleNormal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/net_revenue"
                        android:textColor="@color/grey_shade_3"
                        android:textFontWeight="400"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toStartOf="@id/guideline"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvCouponsRedeemed" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvNetRevenueAmount"
                        style="@style/textStyleBold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/net_revenue_amount"
                        android:textAlignment="viewEnd"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@id/tvNetRevenue"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/guideline"
                        app:layout_constraintTop_toTopOf="@id/tvNetRevenue" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:paddingTop="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvNetRevenue">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_marginEnd="5dp"
                            android:background="@color/white_shade_4"
                            app:layout_constraintBottom_toBottomOf="@id/showHideDetails"
                            app:layout_constraintEnd_toStartOf="@id/showHideDetails"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@id/showHideDetails" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/showHideDetails"
                            style="@style/textStyleNormal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableEnd="@drawable/ic_blue_down_arrow"
                            android:text="@string/view_more"
                            android:textColor="@color/blue"
                            android:textFontWeight="400"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_marginStart="5dp"
                            android:background="@color/white_shade_4"
                            app:layout_constraintBottom_toBottomOf="@id/showHideDetails"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/showHideDetails"
                            app:layout_constraintTop_toTopOf="@id/showHideDetails" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.50" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/hidden_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingTop="8dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="0dp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/visible_details">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvTotalServices"
                        style="@style/textStyleNormal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/total_services"
                        android:textColor="@color/grey_shade_3"
                        android:textFontWeight="400"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toStartOf="@id/guideline2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvNoOfServices"
                        style="@style/textStyleBold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/no_of_services"
                        android:textAlignment="viewEnd"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@id/tvTotalServices"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/guideline2"
                        app:layout_constraintTop_toTopOf="@id/tvTotalServices" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvPassengersVisited"
                        style="@style/textStyleNormal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/total_passengers"
                        android:textColor="@color/grey_shade_3"
                        android:textFontWeight="400"
                        android:textSize="14sp"
                        android:visibility="gone"
                        app:layout_constraintEnd_toStartOf="@id/guideline2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvTotalServices" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvNoOfPassengers"
                        style="@style/textStyleBold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/no_of_passengers"
                        android:textAlignment="viewEnd"
                        android:textSize="14sp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@id/tvPassengersVisited"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/guideline2"
                        app:layout_constraintTop_toTopOf="@id/tvPassengersVisited" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvEarning"
                        style="@style/textStyleNormal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/earning_per_bus"
                        android:textColor="@color/grey_shade_3"
                        android:textFontWeight="400"
                        android:textSize="14sp"
                        android:visibility="gone"
                        app:layout_constraintEnd_toStartOf="@id/guideline2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvPassengersVisited" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvEarnAmount"
                        style="@style/textStyleBold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/earn_amount"
                        android:textAlignment="viewEnd"
                        android:textSize="14sp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@id/tvEarning"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/guideline2"
                        app:layout_constraintTop_toTopOf="@id/tvEarning" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.50" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

<!--        <View-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="2dp"-->
<!--            android:layout_marginTop="15dp"-->
<!--            android:background="@drawable/dotted_line"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintTop_toBottomOf="@id/summaryCardView" />-->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/meal_date_recyclerView"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            tools:listitem="@layout/meal_report_date_item" />

    </LinearLayout>

    </androidx.core.widget.NestedScrollView>
    <View
        android:layout_width="match_parent"
        android:id="@+id/bottomV"

        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white"
        android:layout_height="55dp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="40dp"
        android:id="@+id/prevPageBT"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/button_selected_bg_grey_round"
        android:src="@drawable/page_left_grey"
        app:layout_constraintTop_toTopOf="@id/pagenationRV"
        android:layout_marginStart="5dp"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="@id/pagenationRV"
        android:layout_height="0dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:id="@+id/pagenationRV"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/prevPageBT"
        app:layout_constraintEnd_toStartOf="@id/nextButtonBT"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="7dp"
        tools:listitem="@layout/adapter_pagenation_number"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="40dp"
        android:id="@+id/nextButtonBT"
        android:background="@drawable/button_selected_bg_round"
        android:src="@drawable/page_right_white"
        android:padding="12dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/pagenationRV"
        app:layout_constraintBottom_toBottomOf="@id/pagenationRV"
        android:layout_height="0dp"/>

    <ProgressBar
        android:id="@+id/progress_bar_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>