<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_rounded_shape"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_v_begin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_v_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_h_begin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="12dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_h_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="20dp" />

    <TextView
        android:id="@+id/tvTitle"
        style="@style/textStyleBold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:text="@string/unauthorized"
        android:textColor="@color/text_header_bg"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@id/guideline_v_end"
        app:layout_constraintStart_toEndOf="@id/guideline_v_begin"
        app:layout_constraintTop_toBottomOf="@id/guideline_h_begin" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="13dp"
        android:background="@color/colorDimShadow5"
        app:layout_constraintEnd_toStartOf="@+id/guideline_v_end"
        app:layout_constraintLeft_toRightOf="@+id/guideline_v_begin"
        app:layout_constraintStart_toStartOf="@+id/guideline_v_begin"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

    <TextView
        android:id="@+id/tvContent"
        style="@style/textStyleBold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/notAvailable"
        android:textColor="@color/colorPrimary"
        android:textSize="11sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_ok"
        app:layout_constraintEnd_toStartOf="@+id/guideline_v_end"
        app:layout_constraintLeft_toRightOf="@+id/guideline_v_begin"
        app:layout_constraintStart_toStartOf="@+id/guideline_v_begin"
        app:layout_constraintTop_toBottomOf="@+id/view" />


    <android.widget.Button
        android:id="@+id/btn_ok"
        style="@style/textStyleBold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimary"
        android:text="@string/okay"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/guideline_h_end"
        app:layout_constraintLeft_toRightOf="@+id/guideline_v_begin"
        app:layout_constraintRight_toLeftOf="@+id/guideline_v_end"
        app:layout_constraintTop_toBottomOf="@+id/tvContent" />

</androidx.constraintlayout.widget.ConstraintLayout>
